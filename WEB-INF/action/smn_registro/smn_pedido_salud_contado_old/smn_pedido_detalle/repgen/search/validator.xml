<?xml version='1.0' encoding='ISO-8859-1'?>
<validator id='repgen.filter' onerror='/action/error/validation/ajax'>

	<parameter id='fdesde' type='date' required='false' label='Fecha desde'/>
	<parameter id='fhasta' type='date' required='false' label='Fecha hasta'/>
	
	<parameter id='smn_pedido_cabecera_id' type='integer' required='false' label='${lbl:b_header_order}' maxlen='10'/>
	<parameter id='pde_naturaleza' type='varchar' required='false' label='${lbl:b_nature}' maxlen='2'/>
	<parameter id='smn_servicios_rf' type='integer' required='false' label='${lbl:b_services}' maxlen='10'/>
	<parameter id='smn_item_rf' type='integer' required='false' label='${lbl:b_item}' maxlen='10'/>
	<parameter id='smn_activo_fijo_rf' type='integer' required='false' label='${lbl:b_actfijo}' maxlen='10'/>
	<parameter id='pde_cantidad_oferta' type='integer' required='false' label='${lbl:b_quantity_offer}' maxlen='10'/>
	<parameter id='pde_cantidad_pedido' type='integer' required='false' label='${lbl:b_quantity_order}' maxlen='10'/>
	<parameter id='pde_cantidad_aprobada' type='integer' required='false' label='${lbl:b_quantity_aprob}' maxlen='10'/>
	<parameter id='pde_precio' type='double' required='false' label='${lbl:b_price}' maxlen='10'/>
	<parameter id='pde_monto' type='double' required='false' label='${lbl:b_amount}' maxlen='10'/>
	<parameter id='smn_moneda_rf' type='integer' required='false' label='${lbl:b_coins}' maxlen='10'/>
	<parameter id='smn_tasa_rf' type='integer' required='false' label='${lbl:b_exchange_rate}' maxlen='10'/>
	<parameter id='pde_precio_moneda_alterna' type='double' required='false' label='${lbl:b_price_coins_alter}' maxlen='10'/>
	<parameter id='pde_monto_moneda_alterna' type='double' required='false' label='${lbl:b_amount_coins_alter}' maxlen='10'/>
	<parameter id='pde_especificaciones_pedido' type='varchar' required='false' label='${lbl:b_especifications}' maxlen='200'/>
	<parameter id='pde_fecha_requerido' type='date' required='false' label='${lbl:b_required_date}' maxlen='10'/>
	<parameter id='pde_observaciones' type='varchar' required='false' label='${lbl:b_observations}' maxlen='200'/>

	<custom-validator
		classname='dinamica.validators.SQLPatternTransformer'
		parameter='pde_naturaleza'
		rule='contains' />

	<custom-validator
		classname='dinamica.validators.SQLPatternTransformer'
		parameter='pde_especificaciones_pedido'
		rule='contains' />

	<custom-validator
		classname='dinamica.validators.SQLPatternTransformer'
		parameter='pde_observaciones'
		rule='contains' />



	<custom-validator
			classname='dinamica.validators.ArrayNotEmptyValidator'
			on-error-label='Seleccione al menos un campo para la generación del reporte.'
			parameter-name='field_id' 
			id='field_id' />

	<custom-validator 
			classname='dinamica.validators.ArrayToRecordset'
			paramName='field_id' 
			recordsetId='fields' 
			colName='field_id' 
			colType='integer' />
				
</validator>
