<?xml version='1.0' encoding='ISO-8859-1'?>
<validator id='repgen.filter' onerror='/action/error/validation/ajax'>

	<parameter id='fdesde' type='date' required='false' label='Fecha desde'/>
	<parameter id='fhasta' type='date' required='false' label='Fecha hasta'/>
	
	<parameter id='smn_rel_oferta_cliente_id' type='integer' required='false' label='${lbl:b_rel_customer_offer}' maxlen='10'/>
	<parameter id='smn_accion_id' type='integer' required='false' label='${lbl:b_action}' maxlen='10'/>
	<parameter id='ago_estatus_proceso' type='varchar' required='false' label='${lbl:b_process_status}' maxlen='2'/>
	<parameter id='ago_fecha_seguimiento' type='date' required='false' label='${lbl:b_tracking_date}' maxlen='10'/>
	<parameter id='ago_fecha_aprobacion' type='date' required='false' label='${lbl:b_aprobation_date}' maxlen='10'/>
	<parameter id='ago_fecha_vigencia_desde' type='date' required='false' label='${lbl:b_from_vigency_date}' maxlen='10'/>
	<parameter id='ago_fecha_vigencia_hasta' type='date' required='false' label='${lbl:b_to_vigency_date}' maxlen='10'/>
	<parameter id='ago_fecha_cierre' type='date' required='false' label='${lbl:b_to_vigency_date}' maxlen='10'/>

	<custom-validator
		classname='dinamica.validators.SQLPatternTransformer'
		parameter='ago_estatus_proceso'
		rule='contains' />



	<custom-validator
			classname='dinamica.validators.ArrayNotEmptyValidator'
			on-error-label='Seleccione al menos un campo para la generación del reporte.'
			parameter-name='field_id' 
			id='field_id' />

	<custom-validator 
			classname='dinamica.validators.ArrayToRecordset'
			paramName='field_id' 
			recordsetId='fields' 
			colName='field_id' 
			colType='integer' />
				
</validator>
