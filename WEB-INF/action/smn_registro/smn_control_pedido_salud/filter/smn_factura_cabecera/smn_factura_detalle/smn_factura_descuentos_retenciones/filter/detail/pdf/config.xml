<?xml version='1.0' encoding='ISO-8859-1'?>
<config nodb="true">

	<summary>
		Generar reporte generico PDF
	</summary>

	<log>false</log>

	<transaction>
		<classname>dinamica.GenericTransaction</classname>
		<validator>false</validator>
		<transaction>false</transaction>
		<jdbc-log>false</jdbc-log>
		<recordset id="query.sql" source="session" scope="transaction" />

	</transaction>

	<output>
		<classname>dinamica.PDFGenericReport</classname>
	</output>
	
	<pdf-title>${lbl:b_discount_bill}</pdf-title>
	<pdf-logo url='/images/logo-simone-pdf.png' scale='100' />
	<pdf-file-name>${lbl:b_discount_bill}.pdf</pdf-file-name>

	<pdf-report pageSize="letter" rotate="false" footer="true" header="true">
		<record recordset='query.sql' title='${lbl:b_discount_bill}' width='60' spacingBefore='40'>
			<col name='smn_factura_detalle_id' title='${lbl:b_detail_bill}' align='left' format='######' />
			<col name='smn_descuentos_retenciones_rf_combo' title='${lbl:b_discount_retention}' align='left' format='######' />
			<col name='fdr_monto_base_ml' title='${lbl:b_amount_base_ml}' align='left' format='#,###,##0.00' />
			<col name='fdr_porcentaje_descuento' title='${lbl:b_percentage_discount}' align='left' format='#,###,##0.00' />
			<col name='fdr_monto_descuento_ml' title='${lbl:b_amount_discount}' align='left' format='#,###,##0.00' />
			<col name='smn_moneda_rf_combo' title='${lbl:b_coins}' align='left' format='######' />
			<col name='smn_tasa_rf_combo' title='${lbl:b_exchange_rate}' align='left' format='######' />
			<col name='fdr_monto_descuento_ma' title='${lbl:b_amount_discount_ma}' align='left' format='#,###,##0.00' />
			<col name='fdr_fecha_registro' title='${lbl:b_store_date}' align='left' format='dd-MM-yyyy' />
		</record>


	</pdf-report>
</config>
