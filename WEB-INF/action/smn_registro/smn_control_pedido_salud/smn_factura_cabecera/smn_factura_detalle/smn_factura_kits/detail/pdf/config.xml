<?xml version='1.0' encoding='ISO-8859-1'?>
<config nodb="true">

	<summary>
		Generar reporte generico PDF
	</summary>

	<log>false</log>

	<transaction>
		<classname>dinamica.GenericTransaction</classname>
		<validator>false</validator>
		<transaction>false</transaction>
		<jdbc-log>false</jdbc-log>
		<recordset id="query.sql" source="session" scope="transaction" />

	</transaction>

	<output>
		<classname>dinamica.PDFGenericReport</classname>
	</output>
	
	<pdf-title>${lbl:b_kits_bill}</pdf-title>
	<pdf-logo url='/images/logo-simone-pdf.png' scale='100' />
	<pdf-file-name>${lbl:b_kits_bill}.pdf</pdf-file-name>

	<pdf-report pageSize="letter" rotate="false" footer="true" header="true">
		<record recordset='query.sql' title='${lbl:b_kits_bill}' width='60' spacingBefore='40'>
			<col name='smn_factura_detalle_id' title='${lbl:b_detail_bill}' align='left' />
			<col name='smn_item_origen_rf' title='${lbl:b_item_origin}' align='left' format='######' />
			<col name='smn_item_destino_rf' title='${lbl:b_item_destiny}' align='left' format='######' />
			<col name='fki_cantidad' title='${lbl:b_quantity}' align='left' format='######' />
			<col name='fki_precio_ml' title='${lbl:b_price}' align='left' format='#,###,##0.00' />
			<col name='fki_monto_ml' title='${lbl:b_amount}' align='left' format='#,###,##0.00' />
			<col name='smn_moneda_rf' title='${lbl:b_coins}' align='left' format='######' />
			<col name='smn_tasa_rf' title='${lbl:b_exchange_rate}' align='left' format='######' />
			<col name='smn_precio_ma_rf' title='${lbl:b_price_ma}' align='left' format='#,###,##0.00' />
			<col name='fki_monto_ma_rf' title='${lbl:b_amount_ma}' align='left' format='#,###,##0.00' />
			<col name='fki_estatus' title='${lbl:b_status}' align='left' />
			<col name='fki_fecha_registro' title='${lbl:b_store_date}' align='left' format='dd-MM-yyyy' />
		</record>


	</pdf-report>
</config>
