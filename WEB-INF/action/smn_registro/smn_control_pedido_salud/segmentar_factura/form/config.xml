<?xml version='1.0' encoding='ISO-8859-1'?>
<config>

	<summary>
		Segmentar Factura 
	</summary>

	<log>false</log>
	
	<set-request-attribute id="progress" value="file:/WEB-INF/action/progress/progress.htm"/>

	<transaction>
		<classname>dinamica.GenericTransaction</classname>
		<validator>true</validator>
		<transaction>false</transaction>
		<jdbc-log>false</jdbc-log>
		<recordset id='query-smn_pedido_detalle.sql' source='sql' scope='transaction'/>
		<recordset id='query-obtener-cabecera.sql' source='sql' scope='transaction'/>
	</transaction>

	<output>
		<classname>dinamica.GenericOutput</classname>
		<template>template.htm</template>
		<set-http-headers>true</set-http-headers>
		<content-type>text/html</content-type>
		<print mode='table' recordset='query-smn_pedido_detalle.sql' tag='smn_pedido_detalle_rows'/>
		<print mode='form' recordset='query-smn_pedido_detalle.sql'/>
		<print mode='form' recordset='query-obtener-cabecera.sql'/>
		<print mode="form" recordset="_request" /> 
	</output>

</config>
