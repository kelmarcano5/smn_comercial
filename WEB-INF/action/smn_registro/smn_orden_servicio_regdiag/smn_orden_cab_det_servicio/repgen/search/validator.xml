<?xml version='1.0' encoding='ISO-8859-1'?>
<validator id='repgen.filter' onerror='/action/error/validation/ajax'>

	<parameter id='fdesde' type='date' required='false' label='Fecha desde'/>
	<parameter id='fhasta' type='date' required='false' label='Fecha hasta'/>
	
	<parameter id='smn_orden_servicio_id_name' type='varchar' required='false' label='${lbl:b_service_order}'/>
	<parameter id='smn_orden_servicio_id' type='integer' required='false' label='${lbl:b_service_order}' maxlen='10'/>
	<parameter id='ocd_estatus' type='varchar' required='false' label='${lbl:b_estatus}' maxlen='2'/>
	<parameter id='ocd_observacion' type='varchar' required='false' label='${lbl:b_observations}' maxlen='200'/>

	<custom-validator
		classname='dinamica.validators.SQLPatternTransformer'
		parameter='smn_orden_servicio_id_name'
		rule='contains' />

	<custom-validator
		classname='dinamica.validators.SQLPatternTransformer'
		parameter='ocd_estatus'
		rule='contains' />

	<custom-validator
		classname='dinamica.validators.SQLPatternTransformer'
		parameter='ocd_observacion'
		rule='contains' />



	<custom-validator
			classname='dinamica.validators.ArrayNotEmptyValidator'
			on-error-label='Seleccione al menos un campo para la generación del reporte.'
			parameter-name='field_id' 
			id='field_id' />

	<custom-validator 
			classname='dinamica.validators.ArrayToRecordset'
			paramName='field_id' 
			recordsetId='fields' 
			colName='field_id' 
			colType='integer' />
				
</validator>
