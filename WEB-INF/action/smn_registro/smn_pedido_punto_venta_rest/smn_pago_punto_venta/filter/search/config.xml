<?xml version='1.0' encoding='ISO-8859-1'?>
<config>

	<summary>
		Ejecutar consulta y enrutar dependiendo de que un recordset
		tenga o no registros
	</summary>

	<log>false</log>

	<!--configura el control de paginacion-->
	<set-request-attribute id="paging.recordset" value="query-smnpagopuntoventa.sql" />
	<set-request-attribute id="paging.pagesize" value="10" />

	<!--soporte de auditoria-->
	<audit>
		<!--de donde saca los datos, por defecto es "_request"-->
		<recordset></recordset>
		<!--que campos extrae para el registro descriptivo-->
		<cols>
			<colname>smn_pedido_cabecera_id</colname>
			<colname>smn_mov_caja_cabecera_id</colname>
			<colname>smn_forma_pago_rf</colname>
			<colname>ppv_numero_documento_forma_pago</colname>
			<colname>ppv_numero_autorizacion</colname>
			<colname>ppv_documento_identidad_pagador</colname>
		
		</cols>
		<table>smn_comercial.smn_pago_punto_venta</table>
		<oper>CONSULTA</oper>
		<area>Consulta</area>
		<!-- 
 			para auditoria de consulta permite obtener la cantidad de registro obtenidos
 			de la busqueda (opcional)
 		-->
		<recordCount recordset="query-smnpagopuntoventa.sql"/>
	</audit>

	<transaction>
		<classname>dinamica.audit.AuditableSearch</classname>
		<validator>true</validator>
		<transaction>false</transaction>
		<jdbc-log>false</jdbc-log>
	</transaction>
	
	<searchCols>smn_pedido_cabecera_id;smn_mov_caja_cabecera_id;smn_forma_pago_rf;ppv_numero_documento_forma_pago;ppv_numero_autorizacion;ppv_documento_identidad_pagador;</searchCols>

	<on-exit return-code="0" forward-to="/action/initview" />
	<on-exit return-code="1" forward-to="${def:actionroot}/notfound" />

</config>
