<?xml version='1.0' encoding='ISO-8859-1'?>
<config nodb="true">

	<summary>
		Exportar documento excel directo al browser
	</summary>

	<log>false</log>

	<transaction>
		<classname>dinamica.GenericTransaction</classname>
		<validator>false</validator>
		<transaction>false</transaction>
		<jdbc-log>false</jdbc-log>
		<recordset id="query-smnpedidocabecera.sql" source="session" scope="transaction" />
	</transaction>

	<output>
		<classname>domain.ExcelReportOutput</classname>
	</output>
	
	<excel-logo scale="60" url="/images/logo-simone-pdf.png"/>
	<title cellPosY="1" cellPosX="4" cellStep="0" name="${lbl:b_header_order}"/>
	
	<excel 
		recordset='query-smnpedidocabecera.sql' 
		sheetname='${lbl:b_header_order}' 
		filename='${lbl:b_header_order}.xls' 
		date-format='dd-MM-yyyy'
		header-background='true'>
		<col id='documento' label='${lbl:b_document}' />
		<col id='numeropedido' label='${lbl:b_order_number}' />
		<col id='comprador' label='Comprador' />
		<col id='cliente' label='${lbl:b_customer}' />
		<col id='hora_inicio' label='Hora Inicio' />
		<col id='cantidad' label='${lbl:b_quantity}' />
		<col id='monto_pedido' label='${lbl:${lbl:b_amount}}' />
		<col id='pca_estatus' label='${lbl:b_status}' />
		<col id='pca_estatus_pago' label='Estatus Pagado' />
		<col id='pca_fecha_requerida' label='${lbl:b_required_date}' />

	</excel>

</config>
