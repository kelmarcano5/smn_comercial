<?xml version='1.0' encoding='ISO-8859-1'?>
<config nodb="true">

	<summary>
		Generar reporte generico PDF
	</summary>

	<log>false</log>

	<transaction>
		<classname>dinamica.GenericTransaction</classname>
		<validator>false</validator>
		<transaction>false</transaction>
		<jdbc-log>false</jdbc-log>
		<recordset id="query-smncliente.sql" source="session" scope="transaction" />
		<recordset id="filter.params" source="session" scope="transaction" />
	</transaction>

	<output>
		<classname>dinamica.PDFGenericReport</classname>
	</output>
	
	<pdf-title>${lbl:b_customer}</pdf-title>
	<pdf-logo url='/images/logo-simone-pdf.png' scale='100' align="left" />
	<pdf-file-name>${lbl:b_customer}.pdf</pdf-file-name>

	<pdf-report pageSize="letter" rotate="false" footer="true" header="true">
		<record recordset='filter.params' title='${lbl:b_filter_find}' noFilterMsg='-- ${lbl:b_all_message} --' width='55' spacingBefore='15'>
			<col name='smn_clasificacion_cliente_id_name' title='${lbl:b_clasificacion_cliente}'  align='left' />
			<col name='smn_clase_auxiliar_rf' title='${lbl:b_auxiliary_classes}'  format='######' align='left' />
			<col name='cli_fecha_registro_ini' title='${lbl:b_store_date_greather_than}'  format='dd-MM-yyyy' align='left' />
			<col name='cli_fecha_registro_fin' title='${lbl:b_store_date_less_than}'  format='dd-MM-yyyy' align='left' />

		</record>
		<record recordset='query-smncliente.sql' width='100' spacingBefore='10'>
			<col name='smn_clasificacion_cliente_id_combo' title='${lbl:b_clasificacion_cliente}' width='7' align='left' format='######' />
			<col name='smn_clase_auxiliar_rf_combo' title='${lbl:b_auxiliary_classes}' width='7' align='left' format='######' />
			<col name='smn_auxiliar_rf_combo' title='${lbl:b_auxiliary}' width='7' align='left' format='######' />
			<col name='smn_clasificacion_abc_rf_combo' title='${lbl:b_abc_clasification}' width='7' align='left' format='######' />
			<col name='smn_sector_economico_rf_combo' title='${lbl:b_economic_sectors}' width='7' align='left' format='######' />
			<col name='cli_nacional_ext_combo' title='${lbl:b_cliente_nacional_extranjero}' width='7' align='left' />
			<col name='cli_vigencia' title='${lbl:b_validation_date}' width='7' align='left' format='dd-MM-yyyy' />
			<col name='cli_estatus_combo' title='${lbl:b_status}' width='7' align='left' />
			<col name='cli_idioma' title='${lbl:s_profile_lang}' width='7' align='left' />
			<col name='cli_usuario' title='${lbl:b_users}' width='7' align='left' />
			<col name='cli_fecha_registro' title='${lbl:b_store_date}' width='7' align='left' format='dd-MM-yyyy' />
			<col name='cli_hora' title='${lbl:s_loginhist_col2}' width='7' align='left' />

		</record>

	</pdf-report>
</config>
