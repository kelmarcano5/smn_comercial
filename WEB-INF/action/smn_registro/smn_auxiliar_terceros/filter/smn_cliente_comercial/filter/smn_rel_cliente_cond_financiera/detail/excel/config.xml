<?xml version='1.0' encoding='ISO-8859-1'?>
<config nodb="true">

	<summary>
		Exportar documento excel directo al browser
	</summary>

	<log>false</log>

	<transaction>
		<classname>dinamica.GenericTransaction</classname>
		<validator>false</validator>
		<transaction>false</transaction>
		<jdbc-log>false</jdbc-log>
		<recordset id="query.sql" source="session" scope="transaction" />
	</transaction>

	<output>
		<classname>domain.ExcelReportOutput</classname>
	</output>
	
	<excel-logo scale="60" url="/images/logo-simone-pdf.png"/>
	<title cellPosY="1" cellPosX="2" cellStep="0" name="${lbl:b_rel_client_condition_financiery}"/>
	
	<excel 
		recordset='query.sql' 
		sheetname='${lbl:b_rel_client_condition_financiery}' 
		filename='${lbl:b_rel_client_condition_financiery}.xls' 
		date-format='dd-MM-yyyy'
		header-background='true'>
		<col id='smn_cliente_id' label='${lbl:b_customer}' />
		<col id='smn_condicion_financiera_rf' label='${lbl:b_condition_financiery}' />
		<col id='rcc_estatus' label='${lbl:b_status}' />
		<col id='rcc_vigencia' label='${lbl:b_vigency}' />
		<col id='rcc_fecha_registro' label='${lbl:b_store_date}' />

	</excel>

</config>
