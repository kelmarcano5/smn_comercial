<?xml version='1.0' encoding='ISO-8859-1'?>
<config nodb="true">

	<summary>
		Generar reporte generico PDF
	</summary>

	<log>false</log>

	<transaction>
		<classname>dinamica.GenericTransaction</classname>
		<validator>false</validator>
		<transaction>false</transaction>
		<jdbc-log>false</jdbc-log>
		<recordset id="query-smnrol.sql" source="session" scope="transaction" />
		<recordset id="filter.params" source="session" scope="transaction" />
	</transaction>

	<output>
		<classname>dinamica.PDFGenericReport</classname>
	</output>
	
	<pdf-title>${lbl:b_rol}</pdf-title>
	<pdf-logo url='/images/logo-simone-pdf.png' scale='100' align="left" />
	<pdf-file-name>${lbl:b_rol}.pdf</pdf-file-name>

	<pdf-report pageSize="letter" rotate="false" footer="true" header="true">
		<record recordset='filter.params' title='${lbl:b_filter_find}' noFilterMsg='-- ${lbl:b_all_message} --' width='55' spacingBefore='15'>
			<col name='smn_usuario_rf' title='${lbl:b_user}'  format='######' align='left' />
			<col name='smn_clase_auxiliar_rf' title='${lbl:b_auxiliary_class}'  format='######' align='left' />
			<col name='smn_auxiliar_rf' title='${lbl:b_auxiliary}'  format='######' align='left' />
			<col name='rol_tipo' title='${lbl:b_type_rol}'  align='left' />
			<col name='rol_fecha_registro_ini' title='${lbl:b_store_date}'  format='dd-MM-yyyy' align='left' />
			<col name='rol_fecha_registro_fin' title='${lbl:b_store_date}'  format='dd-MM-yyyy' align='left' />

		</record>
		<record recordset='query-smnrol.sql' width='100' spacingBefore='10'>
			<col name='smn_usuario_rf' title='${lbl:b_user}' width='9' align='left' format='######' />
			<col name='smn_clase_auxiliar_rf' title='${lbl:b_auxiliary_class}' width='9' align='left' format='######' />
			<col name='smn_auxiliar_rf' title='${lbl:b_auxiliary}' width='9' align='left' format='######' />
			<col name='rol_tipo' title='${lbl:b_type_rol}' width='9' align='left' />
			<col name='smn_corporacion_rf' title='${lbl:b_corporation}' width='9' align='left' format='######' />
			<col name='smn_entidad_rf' title='${lbl:b_entity}' width='9' align='left' format='######' />
			<col name='smn_sucursal_rf' title='${lbl:b_subsidiary}' width='9' align='left' format='######' />
			<col name='smn_posicion_estructura_rf' title='${lbl:b_structure_configuration}' width='9' align='left' format='######' />
			<col name='rol_estatus' title='${lbl:b_status}' width='9' align='left' />
			<col name='rol_vigencia' title='${lbl:b_vigency}' width='9' align='left' format='dd-MM-yyyy' />
			<col name='rol_fecha_registro' title='${lbl:b_store_date}' width='9' align='left' format='dd-MM-yyyy' />

		</record>

	</pdf-report>
</config>
