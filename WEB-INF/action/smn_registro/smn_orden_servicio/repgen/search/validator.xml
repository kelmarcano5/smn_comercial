<?xml version='1.0' encoding='ISO-8859-1'?>
<validator id='repgen.filter' onerror='/action/error/validation/ajax'>

	<parameter id='fdesde' type='date' required='false' label='Fecha desde'/>
	<parameter id='fhasta' type='date' required='false' label='Fecha hasta'/>
	
	<parameter id='smn_documento_id' type='integer' required='false' label='${lbl:b_document}' maxlen='10'/>
	<parameter id='ors_numero' type='integer' required='false' label='${lbl:b_number}' maxlen='10'/>
	<parameter id='smn_cliente_id' type='integer' required='false' label='${lbl:b_customer}' maxlen='10'/>
	<parameter id='ors_descripcion' type='varchar' required='false' label='${lbl:b_description}' maxlen='100'/>
	<parameter id='ors_fecha_inicial' type='date' required='false' label='${lbl:b_date_init}' maxlen='10'/>
	<parameter id='ors_fecha_final' type='date' required='false' label='${lbl:b_date_end}' maxlen='10'/>
	<parameter id='ors_hora_inicial' type='varchar' required='false' label='${lbl:b_hour_init}' maxlen='8'/>
	<parameter id='ors_hora_final' type='varchar' required='false' label='${lbl:b_hour_end}' maxlen='8'/>
	<parameter id='smn_prestador_servicio_rf' type='integer' required='false' label='${fld:b_service_provider}' maxlen='10'/>
	<parameter id='ors_observacion' type='varchar' required='false' label='${lbl:b_observation}' maxlen='200'/>
	<parameter id='ors_estatus' type='varchar' required='false' label='${lbl:b_estatus}' maxlen='2'/>
	<parameter id='smn_servicios_rf' type='integer' required='false' label='${lbl:b_services}' maxlen='10'/>

	<custom-validator
		classname='dinamica.validators.SQLPatternTransformer'
parameter='ors_descripcion'
		rule='contains' />

	<custom-validator
		classname='dinamica.validators.SQLPatternTransformer'
		parameter='ors_hora_inicial'
		rule='contains' />

	<custom-validator
		classname='dinamica.validators.SQLPatternTransformer'
		parameter='ors_hora_final'
		rule='contains' />

	<custom-validator
		classname='dinamica.validators.SQLPatternTransformer'
		parameter='ors_observacion'
		rule='contains' />

	<custom-validator
		classname='dinamica.validators.SQLPatternTransformer'
		parameter='ors_estatus'
		rule='contains' />


	<custom-validator
		classname='dinamica.validators.DuplicatedKeyValidator'
			on-error-label='${lbl:b_record_not_duplicated}.'
			sql='buscarDescripcion.sql'
			id='ors_descripcion'/>


	<custom-validator
			classname='dinamica.validators.ArrayNotEmptyValidator'
			on-error-label='Seleccione al menos un campo para la generaciï¿½n del reporte.'
			parameter-name='field_id' 
			id='field_id' />

	<custom-validator 
			classname='dinamica.validators.ArrayToRecordset'
			paramName='field_id' 
			recordsetId='fields' 
			colName='field_id' 
			colType='integer' />
				
</validator>
