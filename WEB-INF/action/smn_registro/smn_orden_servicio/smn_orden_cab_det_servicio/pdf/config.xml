<?xml version='1.0' encoding='ISO-8859-1'?>
<config nodb="true">

	<summary>
		Generar reporte generico PDF
	</summary>

	<log>false</log>

	<transaction>
		<classname>dinamica.GenericTransaction</classname>
		<validator>false</validator>
		<transaction>false</transaction>
		<jdbc-log>false</jdbc-log>
		<recordset id="query-smnordencabdetservicio.sql" source="session" scope="transaction" />
	</transaction>

	<output>
		<classname>dinamica.PDFGenericReport</classname>
	</output>
	
	<pdf-title>${lbl:b_header_detail_order_service}</pdf-title>
	<pdf-logo url='/images/logo-simone-pdf.png' scale='100' />
	<pdf-file-name>${lbl:b_header_detail_order_service}.pdf</pdf-file-name>

	<pdf-report 
		pageSize="letter" 
		rotate="false"
		footer="false" 
		header="true">
		<record recordset='query-smnordencabdetservicio.sql' width='100' spacingBefore='40'>
			<col name='ors_descripcion_pl0' title='${lbl:b_service_order}' width='25' align='left' />
			<col name='ocd_observacion' title='${lbl:b_observations}' width='25' align='left' />
			<col name='ocd_fecha_registro' title='${lbl:b_store_date}' width='25' align='left' format='dd-MM-yyyy' />
			<col name='ocd_estatus' title='${lbl:b_estatus}' width='25' align='left' />

		</record>

	</pdf-report>
</config>
