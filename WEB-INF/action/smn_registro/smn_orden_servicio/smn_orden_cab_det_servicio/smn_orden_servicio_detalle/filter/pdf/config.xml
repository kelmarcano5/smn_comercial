<?xml version='1.0' encoding='ISO-8859-1'?>
<config nodb="true">

	<summary>
		Generar reporte generico PDF
	</summary>

	<log>false</log>

	<transaction>
		<classname>dinamica.GenericTransaction</classname>
		<validator>false</validator>
		<transaction>false</transaction>
		<jdbc-log>false</jdbc-log>
		<recordset id="query-smnordenserviciodetalle.sql" source="session" scope="transaction" />
		<recordset id="filter.params" source="session" scope="transaction" />
	</transaction>

	<output>
		<classname>dinamica.PDFGenericReport</classname>
	</output>
	
	<pdf-title>${lbl:b_service_order_det}</pdf-title>
	<pdf-logo url='/images/logo-simone-pdf.png' scale='100' align="left" />
	<pdf-file-name>${lbl:b_service_order_det}.pdf</pdf-file-name>

	<pdf-report pageSize="letter" rotate="false" footer="true" header="true">
		<record recordset='filter.params' title='${lbl:b_filter_find}' noFilterMsg='-- ${lbl:b_all_message} --' width='55' spacingBefore='15'>
			<col name='smn_orden_cab_det_servicio_id' title='${lbl:b_service_order}'  format='######' align='left' />
			<col name='smn_servicios_rf' title='${lbl:b_services}'  format='######' align='left' />
			<col name='smn_item_rf' title='${lbl:b_item}'  format='######' align='left' />
			<col name='smn_componentes_rf' title='${lbl:b_component}'  format='######' align='left' />
			<col name='smn_prestador_servicio_rf' title='${fld:b_service_provider}'  format='######' align='left' />
			<col name='smn_nivel_estructura_rf' title='${lbl:b_structure_level}'  format='######' align='left' />
			<col name='osd_fecha_registro_ini' title='${lbl:b_store_date}'  format='dd-MM-yyyy' align='left' />
			<col name='osd_fecha_registro_fin' title='${lbl:b_store_date}'  format='dd-MM-yyyy' align='left' />

		</record>
		<record recordset='query-smnordenserviciodetalle.sql' width='100' spacingBefore='10'>
			<col name='smn_orden_cab_det_servicio_id' title='${lbl:b_service_order}' width='9' align='left' format='######' />
			<col name='smn_servicios_rf' title='${lbl:b_services}' width='9' align='left' format='######' />
			<col name='smn_item_rf' title='${lbl:b_item}' width='9' align='left' format='######' />
			<col name='smn_componentes_rf' title='${lbl:b_component}' width='9' align='left' format='######' />
			<col name='osd_cantidad' title='${lbl:b_quantity}' width='9' align='left' format='#,###,##0.00' />
			<col name='smn_tipo_componente' title='${lbl:b_component_type}' width='9' align='left' />
			<col name='smn_grupo_prestador_rf' title='${lbl:b_group_of_provider}' width='9' align='left' format='######' />
			<col name='smn_prestador_servicio_rf' title='${fld:b_service_provider}' width='9' align='left' format='######' />
			<col name='smn_nivel_estructura_rf' title='${lbl:b_structure_level}' width='9' align='left' format='######' />
			<col name='osd_estatus' title='${lbl:b_estatus}' width='9' align='left' />
			<col name='osd_fecha_registro' title='${lbl:b_store_date}' width='9' align='left' format='dd-MM-yyyy' />

		</record>

	</pdf-report>
</config>
