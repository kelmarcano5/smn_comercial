<?xml version='1.0' encoding='ISO-8859-1'?>
<config nodb="true">

	<summary>
		Generar reporte generico PDF
	</summary>

	<log>false</log>

	<transaction>
		<classname>dinamica.GenericTransaction</classname>
		<validator>false</validator>
		<transaction>false</transaction>
		<jdbc-log>false</jdbc-log>
		<recordset id="query.sql" source="session" scope="transaction" />

	</transaction>

	<output>
		<classname>dinamica.PDFGenericReport</classname>
	</output>
	
	<pdf-title>${lbl:b_service_order_det}</pdf-title>
	<pdf-logo url='/images/logo-simone-pdf.png' scale='100' />
	<pdf-file-name>${lbl:b_service_order_det}.pdf</pdf-file-name>

	<pdf-report pageSize="letter" rotate="false" footer="true" header="true">
		<record recordset='query.sql' title='${lbl:b_service_order_det}' width='60' spacingBefore='40'>
			<col name='smn_orden_servicio_id' title='${lbl:b_service_order}' align='left' format='######' />
			<col name='smn_servicios_rf' title='${lbl:b_services}' align='left' format='######' />
			<col name='smn_item_rf' title='${lbl:b_item}' align='left' format='######' />
			<col name='smn_componentes_rf' title='${lbl:b_component}' align='left' format='######' />
			<col name='osd_cantidad' title='${lbl:b_quantity}' align='left' format='#,###,##0.00' />
			<col name='smn_tipo_componente' title='${lbl:b_component_type}' align='left' />
			<col name='smn_grupo_prestador_rf' title='${lbl:b_group_of_provider}' align='left' format='######' />
			<col name='smn_prestador_servicio_rf' title='${lbl:b_service_provider}' align='left' format='######' />
			<col name='smn_nivel_estructura_rf' title='${lbl:b_structure_level}' align='left' format='######' />
			<col name='osd_estatus' title='${lbl:b_estatus}' align='left' />
			<col name='osd_fecha_registro' title='${lbl:b_store_date}' align='left' format='dd-MM-yyyy' />
		</record>


	</pdf-report>
</config>
