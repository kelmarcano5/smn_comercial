<?xml version='1.0' encoding='ISO-8859-1'?>
<config nodb="true">

	<summary>
		Exportar documento excel directo al browser
	</summary>

	<log>false</log>

	<transaction>
		<classname>dinamica.GenericTransaction</classname>
		<validator>false</validator>
		<transaction>false</transaction>
		<jdbc-log>false</jdbc-log>
		<recordset id="query-smnfacturakits.sql" source="session" scope="transaction" />
	</transaction>

	<output>
		<classname>domain.ExcelReportOutput</classname>
	</output>
	
	<excel-logo scale="60" url="/images/logo-simone-pdf.png"/>
	<title cellPosY="1" cellPosX="4" cellStep="0" name="${lbl:b_kits_bill}"/>
	
	<excel 
		recordset='query-smnfacturakits.sql' 
		sheetname='${lbl:b_kits_bill}' 
		filename='${lbl:b_kits_bill}.xls' 
		date-format='dd-MM-yyyy'
		header-background='true'>
		<col id='fde_naturaleza_pl0' label='${lbl:b_detail_bill}' />
		<col id='smn_item_origen_rf' label='${lbl:b_item_origin}' />
		<col id='smn_item_destino_rf' label='${lbl:b_item_destiny}' />
		<col id='fki_cantidad' label='${lbl:b_quantity}' />
		<col id='fki_monto_ml' label='${lbl:b_amount}' />
		<col id='fki_monto_ma_rf' label='${lbl:b_amount_ma}' />
		<col id='fki_estatus' label='${lbl:b_status}' />
		<col id='fki_fecha_registro' label='${lbl:b_store_date}' />

	</excel>

</config>
