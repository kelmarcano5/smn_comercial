<?xml version='1.0' encoding='ISO-8859-1'?>
<config nodb="true">

	<summary>
		Generar reporte generico PDF
	</summary>

	<log>false</log>

	<transaction>
		<classname>dinamica.GenericTransaction</classname>
		<validator>false</validator>
		<transaction>false</transaction>
		<jdbc-log>false</jdbc-log>
		<recordset id="query.sql" source="session" scope="transaction" />

	</transaction>

	<output>
		<classname>dinamica.PDFGenericReport</classname>
	</output>
	
	<pdf-title>${lbl:b_service_order}</pdf-title>
	<pdf-logo url='/images/logo-simone-pdf.png' scale='100' />
	<pdf-file-name>${lbl:b_service_order}.pdf</pdf-file-name>

	<pdf-report pageSize="letter" rotate="false" footer="true" header="true">
		<record recordset='query.sql' title='${lbl:b_service_order}' width='60' spacingBefore='40'>
			<col name='smn_documento_id' title='${lbl:b_document}' align='left' format='######' />
			<col name='ors_numero' title='${lbl:b_number}' align='left' format='######' />
			<col name='smn_cliente_id' title='${lbl:b_customer}' align='left' format='######' />
			<col name='ors_descripcion' title='${lbl:b_description}' align='left' />
			<col name='ors_fecha_inicial' title='${lbl:b_date_init}' align='left' format='dd-MM-yyyy' />
			<col name='ors_fecha_final' title='${lbl:b_date_end}' align='left' format='dd-MM-yyyy' />
			<col name='ors_hora_inicial' title='${lbl:b_hour_init}' align='left' />
			<col name='ors_hora_final' title='${lbl:b_hour_end}' align='left' />
			<col name='smn_prestador_servicio_rf' title='${lbl:b_service_provider}' align='left' format='######' />
			<col name='ors_observacion' title='${lbl:b_observation}' align='left' />
			<col name='ors_estatus' title='${lbl:b_estatus}' align='left' />
			<col name='ors_fecha_registro' title='${lbl:b_store_date}' align='left' format='dd-MM-yyyy' />
		</record>


	</pdf-report>
</config>
