<?xml version='1.0' encoding='ISO-8859-1'?>
<config>

	<summary>
		Insertar registro 
	</summary>

	<log>false</log>

	<!--soporte de auditoria-->
	<audit>
		<!--de donde saca los datos, por defecto es "_request"-->
		<recordset></recordset>
		<!--que campos extrae para el registro descriptivo-->
		<cols>
			<colname>smn_documento_id</colname>
			<colname>fca_numero_documento_id</colname>
			<colname>smn_entidad_rf</colname>
			<colname>smn_sucursal_rf</colname>
			<colname>smn_control_serie_fiscal_id</colname>
			<colname>fca_numero_control_fiscal</colname>
			<colname>fca_rif</colname>
			<colname>fca_direccion_fiscal</colname>
			<colname>fca_monto_factura_ml</colname>
			<colname>fca_monto_impuesto_ml</colname>
			<colname>fca_monto_descuento_ml</colname>
			<colname>fca_monto_bonificacion_ml</colname>
			<colname>fca_monto_neto_ml</colname>
			<colname>smn_moneda_rf</colname>
			<colname>smn_tasa_rf</colname>
			<colname>fca_monto_factura_ma</colname>
			<colname>fca_monto_impuesto_ma</colname>
			<colname>fca_monto_descuento_ma</colname>
			<colname>fca_monto_bonificacion_ma</colname>
			<colname>fca_monto_neto_ma</colname>
			<colname>fca_estatus_financiero</colname>
			<colname>fca_estatus_proceso</colname>
		
		</cols>
		<table>smn_comercial.smn_factura_cabecera</table>
		<oper>AÑADIR</oper>
		<area>Carga de datos</area>
		<!--
			query para obtener el ID generado o nombre de 
			la columna que contiene el pkey, si es query, 
			el alias del campo debe ser "id"
		-->
		<pkey>select ${seq:currval@smn_comercial.seq_smn_factura_cabecera} as id</pkey>
	</audit>

	<transaction>
		<classname>dinamica.audit.AuditableTransaction</classname>
		<validator>true</validator>
		<transaction>true</transaction>
		<jdbc-log>false</jdbc-log>
		<recordset id="nextval.sql" source="sql" scope="transaction" />
	</transaction>

	<query>insert.sql</query>

	<output>
		<classname>dinamica.GenericOutput</classname>
		<template>script.js</template>
		<set-http-headers>true</set-http-headers>
		<content-type>text/javascript</content-type>
		<expiration>0</expiration>
		<print mode="form" recordset="_request" />
		<print mode="form" recordset="nextval.sql" />
	</output>
	
	<!-- Envio de email declarativo -->
	<mail enabled="false">
		<subject>Subject</subject>
		<mail-to>martin.cordova@gmail.com</mail-to>
		<body>body.txt</body>
	</mail>

</config>
