<?xml version='1.0' encoding='ISO-8859-1'?>
<config nodb="true">

	<summary>
		Generar reporte generico PDF
	</summary>

	<log>false</log>

	<transaction>
		<classname>dinamica.GenericTransaction</classname>
		<validator>false</validator>
		<transaction>false</transaction>
		<jdbc-log>false</jdbc-log>
		<recordset id="query-smnfacturadetalle.sql" source="session" scope="transaction" />
	</transaction>

	<output>
		<classname>dinamica.PDFGenericReport</classname>
	</output>
	
	<pdf-title>${lbl:b_detail_bill}</pdf-title>
	<pdf-logo url='/images/logo-simone-pdf.png' scale='100' />
	<pdf-file-name>${lbl:b_detail_bill}.pdf</pdf-file-name>

	<pdf-report 
		pageSize="letter" 
		rotate="false"
		footer="false" 
		header="true">
		<record recordset='query-smnfacturadetalle.sql' width='100' spacingBefore='40'>
			<col name='smn_factura_cabecera_id' title='${lbl:b_header_bill}' width='16' align='left' format='######' />
			<col name='fde_naturaleza' title='${lbl:b_nature}' width='16' align='left' format='######' />
			<col name='fde_cantidad' title='${lbl:b_quantity}' width='16' align='left' format='######' />
			<col name='fde_precio_ml' title='${lbl:b_price}' width='16' align='left' format='######' />
			<col name='fde_monto_ml' title='${lbl:b_amount}' width='16' align='left' format='######' />
			<col name='fde_fecha_registro' title='${lbl:b_store_date}' width='16' align='left' format='dd-MM-yyyy' />

		</record>

	</pdf-report>
</config>
