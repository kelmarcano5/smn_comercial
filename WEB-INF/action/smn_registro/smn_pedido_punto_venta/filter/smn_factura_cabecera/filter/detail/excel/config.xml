<?xml version='1.0' encoding='ISO-8859-1'?>
<config nodb="true">

	<summary>
		Exportar documento excel directo al browser
	</summary>

	<log>false</log>

	<transaction>
		<classname>dinamica.GenericTransaction</classname>
		<validator>false</validator>
		<transaction>false</transaction>
		<jdbc-log>false</jdbc-log>
		<recordset id="query.sql" source="session" scope="transaction" />
	</transaction>

	<output>
		<classname>domain.ExcelReportOutput</classname>
	</output>
	
	<excel-logo scale="60" url="/images/logo-simone-pdf.png"/>
	<title cellPosY="1" cellPosX="4" cellStep="0" name="${lbl:b_header_bill}"/>
	
	<excel 
		recordset='query.sql' 
		sheetname='${lbl:b_header_bill}' 
		filename='${lbl:b_header_bill}.xls' 
		date-format='dd-MM-yyyy'
		header-background='true'>
		<col id='smn_documento_id' label='${lbl:b_document}' />
		<col id='fca_numero_documento_id' label='${lbl:b_document_number}' />
		<col id='smn_pedido_cabecera_id' label='${lbl:b_header_order}' />
		<col id='smn_oferta_id' label='${lbl:b_offer}' />
		<col id='smn_cliente_id' label='${lbl:b_customer}' />
		<col id='fca_rif' label='${lbl:b_rif}' />
		<col id='fca_estatus_financiero' label='${lbl:b_financial_status}' />
		<col id='fca_estatus_proceso' label='${lbl:b_process_status}' />
		<col id='fca_fecha_registro' label='${lbl:b_store_date}' />

	</excel>

</config>
