<?xml version='1.0' encoding='ISO-8859-1'?>
<config>

	<summary>
		Ejecutar consulta y enrutar dependiendo de que un recordset
		tenga o no registros
	</summary>

	<log>false</log>

	<!--configura el control de paginacion-->
<!-- 	<set-request-attribute id="paging.recordset" value="query-calcular.sql" />
	<set-request-attribute id="paging.pagesize" value="6" /> -->

	<transaction>
		<classname>dinamica.GenericTransaction</classname>
		<validator>true</validator>
		<transaction>false</transaction>
		<jdbc-log>false</jdbc-log>
		<recordset id="query-calcular.sql" source="sql" scope="transaction" on-empty-return="1" />
		<!-- <recordset id="total" source="session" scope="transaction" /> -->
	</transaction>

	<query>query-calcular.sql</query>

	<output>
		<classname>dinamica.GenericOutput</classname>
		<template>script.js</template>
		<set-http-headers>true</set-http-headers>
		<content-type>text/javascript; charset=iso-8859-1</content-type>
		<expiration>0</expiration>
		<print mode="form" recordset="query-calcular.sql"/>
		<!-- <print mode="form" recordset="total"/> -->
	</output>

	<!-- <on-exit return-code="0" forward-to="/action/initview" /> -->
	<!-- <on-exit return-code="1" forward-to="${def:actionroot}/notfound" /> -->

</config>
