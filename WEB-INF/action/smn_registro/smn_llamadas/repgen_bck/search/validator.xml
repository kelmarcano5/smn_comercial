<?xml version='1.0' encoding='ISO-8859-1'?>
<validator id='repgen.filter' onerror='/action/error/validation/ajax'>

	<parameter id='fdesde' type='date' required='false' label='Fecha desde'/>
	<parameter id='fhasta' type='date' required='false' label='Fecha hasta'/>
	
	<parameter id='smn_cliente_id' type='integer' required='false' label='${lbl:b_customer}' maxlen='10'/>
	<parameter id='smn_prospecto_id' type='integer' required='false' label='${lbl:b_leaflet}' maxlen='10'/>
	<parameter id='smn_solicitud_afiliacion_id' type='integer' required='false' label='${lbl:b_affiliation_request}' maxlen='10'/>
	<parameter id='smn_tipo_documento_id' type='integer' required='false' label='${lbl:b_tipo_documento_factura}' maxlen='10'/>
	<parameter id='smn_documento_id' type='integer' required='false' label='${lbl:b_document}' maxlen='10'/>
	<parameter id='lla_descripcion' type='varchar' required='false' label='${lbl:b_description}' maxlen='200'/>
	<parameter id='smn_cita_id' type='integer' required='false' label='${lbl:b_appointment}' maxlen='10'/>
	<parameter id='smn_orden_pedido_id' type='integer' required='false' label='${lbl:b_order_order}' maxlen='10'/>
	<parameter id='smn_oferta_id' type='integer' required='false' label='${lbl:b_offer}' maxlen='10'/>
	<parameter id='smn_solicitud_servicio_entrega_rf' type='integer' required='false' label='${lbl:b_delivery_services_request}' maxlen='10'/>
	<parameter id='smn_gestion_id' type='integer' required='false' label='${lbl:b_management}' maxlen='10'/>
	<parameter id='lla_observacion' type='varchar' required='false' label='${lbl:b_observation}' maxlen='200'/>
	<parameter id='lla_estatus' type='varchar' required='false' label='${lbl:b_status}' maxlen='2'/>

	<custom-validator
		classname='dinamica.validators.SQLPatternTransformer'
parameter='lla_descripcion'
		rule='contains' />

	<custom-validator
		classname='dinamica.validators.SQLPatternTransformer'
		parameter='lla_observacion'
		rule='contains' />

	<custom-validator
		classname='dinamica.validators.SQLPatternTransformer'
		parameter='lla_estatus'
		rule='contains' />


	<custom-validator
		classname='dinamica.validators.DuplicatedKeyValidator'
			on-error-label='${lbl:b_record_not_duplicated}.'
			sql='buscarDescripcion.sql'
			id='lla_descripcion'/>


	<custom-validator
			classname='dinamica.validators.ArrayNotEmptyValidator'
			on-error-label='Seleccione al menos un campo para la generación del reporte.'
			parameter-name='field_id' 
			id='field_id' />

	<custom-validator 
			classname='dinamica.validators.ArrayToRecordset'
			paramName='field_id' 
			recordsetId='fields' 
			colName='field_id' 
			colType='integer' />
				
</validator>
