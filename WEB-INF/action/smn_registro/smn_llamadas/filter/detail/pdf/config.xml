<?xml version='1.0' encoding='ISO-8859-1'?>
<config nodb="true">

	<summary>
		Generar reporte generico PDF
	</summary>

	<log>false</log>

	<transaction>
		<classname>dinamica.GenericTransaction</classname>
		<validator>false</validator>
		<transaction>false</transaction>
		<jdbc-log>false</jdbc-log>
		<recordset id="query.sql" source="session" scope="transaction" />

	</transaction>

	<output>
		<classname>dinamica.PDFGenericReport</classname>
	</output>
	
	<pdf-title>${lbl:b_calls}</pdf-title>
	<pdf-logo url='/images/logo-simone-pdf.png' scale='100' />
	<pdf-file-name>${lbl:b_calls}.pdf</pdf-file-name>

	<pdf-report pageSize="letter" rotate="false" footer="true" header="true">
		<record recordset='query.sql' title='${lbl:b_calls}' width='60' spacingBefore='40'>
			<col name='smn_cliente_id_combo' title='${lbl:b_customer}' align='left' format='######' />
			<col name='smn_prospecto_id_combo' title='${lbl:b_leaflet}' align='left' format='######' />
			<col name='smn_solicitud_afiliacion_id' title='${lbl:b_affiliation_request}' align='left' format='######' />
			<col name='smn_tipo_documento_id_combo' title='${lbl:b_tipo_documento_factura}' align='left' format='######' />
			<col name='smn_documento_id_combo' title='${lbl:b_document}' align='left' format='######' />
			<col name='lla_descripcion' title='${lbl:b_description}' align='left' />
			<col name='smn_cita_id' title='${lbl:b_appointment}' align='left' format='######' />
			<col name='smn_orden_pedido_id' title='${lbl:b_order_order}' align='left' format='######' />
			<col name='smn_oferta_id_combo' title='${lbl:b_offer}' align='left' format='######' />
			<col name='smn_solicitud_servicio_entrega_rf' title='${lbl:b_delivery_services_request}' align='left' format='######' />
			<col name='smn_gestion_id_combo' title='${lbl:b_management}' align='left' format='######' />
			<col name='lla_observacion' title='${lbl:b_observation}' align='left' />
			<col name='lla_estatus_combo' title='${lbl:b_status}' align='left' />
			<col name='lla_fecha_registro' title='${lbl:b_store_date}' align='left' format='dd-MM-yyyy' />
		</record>


	</pdf-report>
</config>
