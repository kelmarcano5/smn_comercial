<?xml version='1.0' encoding='ISO-8859-1'?>
<config>

	<summary>
		Ejecutar consulta y enrutar dependiendo de que un recordset
		tenga o no registros
	</summary>

	<log>false</log>

	<!--configura el control de paginacion-->
	<set-request-attribute id="paging.recordset" value="query-smnpagoservicio.sql" />
	<set-request-attribute id="paging.pagesize" value="10" />

	<!--soporte de auditoria-->
	<audit>
		<!--de donde saca los datos, por defecto es "_request"-->
		<recordset></recordset>
		<!--que campos extrae para el registro descriptivo-->
		<cols>
			<colname>smn_solicitud_servicio_entregas_cabecera_id</colname>
			<colname>smn_forma_pago_rf</colname>
			<colname>smn_franquicia_rf</colname>
			<colname>pas_numero_tarjeta</colname>
			<colname>pas_documento_identidad</colname>
			<colname>pas_nombre_pagador</colname>
			<colname>pas_fecha_registro_ini</colname>
			<colname>pas_fecha_registro_fin</colname>
		
		</cols>
		<table>smn_comercial.smn_pago_servicio</table>
		<oper>CONSULTA</oper>
		<area>Consulta</area>
		<!-- 
 			para auditoria de consulta permite obtener la cantidad de registro obtenidos
 			de la busqueda (opcional)
 		-->
		<recordCount recordset="query-smnpagoservicio.sql"/>
	</audit>

	<transaction>
		<classname>dinamica.audit.AuditableSearch</classname>
		<validator>true</validator>
		<transaction>false</transaction>
		<jdbc-log>false</jdbc-log>
	</transaction>
	
	<searchCols>smn_solicitud_servicio_entregas_cabecera_id;smn_forma_pago_rf;smn_franquicia_rf;pas_numero_tarjeta;pas_documento_identidad;pas_nombre_pagador;pas_fecha_registro_ini;pas_fecha_registro_fin;</searchCols>

	<on-exit return-code="0" forward-to="/action/initview" />
	<on-exit return-code="1" forward-to="${def:actionroot}/notfound" />

</config>
