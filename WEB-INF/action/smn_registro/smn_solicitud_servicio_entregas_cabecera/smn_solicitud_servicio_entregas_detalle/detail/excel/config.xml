<?xml version='1.0' encoding='ISO-8859-1'?>
<config nodb="true">

	<summary>
		Exportar documento excel directo al browser
	</summary>

	<log>false</log>

	<transaction>
		<classname>dinamica.GenericTransaction</classname>
		<validator>false</validator>
		<transaction>false</transaction>
		<jdbc-log>false</jdbc-log>
		<recordset id="query.sql" source="session" scope="transaction" />
	</transaction>

	<output>
		<classname>domain.ExcelReportOutput</classname>
	</output>
	
	<excel-logo scale="60" url="/images/logo-simone-pdf.png"/>
	<title cellPosY="1" cellPosX="3" cellStep="0" name="${lbl:b_detail_services_delivery_request}"/>
	
	<excel 
		recordset='query.sql' 
		sheetname='${lbl:b_detail_services_delivery_request}' 
		filename='${lbl:b_detail_services_delivery_request}.xls' 
		date-format='dd-MM-yyyy'
		header-background='true'>
		<col id='sec_origen_pl0' label='${lbl:b_header_services_delivery_request}' />
		<col id='smn_catalogo_item_comercio_id' label='${lbl:b_catalog_item_commerce}' />
		<col name='smn_descripcion_ingrediente' title='${lbl:b_description}' align='left' />
		<col id='smn_unidad_medida_rf' label='${lbl:b_measurement_unit}' />
		<col id='sed_cantidad' label='${lbl:b_quantity}' />
		<col id='sed_requirimientos' label='${lbl:b_requeriment}' />
		<col id='sed_precio_ml' label='${lbl:b_price_ml}' />
		<col id='sed_fecha_registro' label='${lbl:b_store_date}' />

	</excel>

</config>
