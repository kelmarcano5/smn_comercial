<?xml version='1.0' encoding='ISO-8859-1'?>
<config nodb="true">

	<summary>
		Generar reporte generico PDF
	</summary>

	<log>false</log>

	<transaction>
		<classname>dinamica.GenericTransaction</classname>
		<validator>false</validator>
		<transaction>false</transaction>
		<jdbc-log>false</jdbc-log>
		<recordset id="query-smnreldetalleingrediente.sql" source="session" scope="transaction" />
		<recordset id="filter.params" source="session" scope="transaction" />
	</transaction>

	<output>
		<classname>dinamica.PDFGenericReport</classname>
	</output>
	
	<pdf-title>${lbl:b_relationship_ingredients_detail}</pdf-title>
	<pdf-logo url='/images/logo-simone-pdf.png' scale='100' align="left" />
	<pdf-file-name>${lbl:b_relationship_ingredients_detail}.pdf</pdf-file-name>

	<pdf-report pageSize="letter" rotate="false" footer="true" header="true">
		<record recordset='filter.params' title='${lbl:b_filter_find}' noFilterMsg='-- ${lbl:b_all_message} --' width='55' spacingBefore='15'>
			<col name='smn_solicitud_servicio_entregas_detalle_id_name' title='${lbl:b_detail_services_delivery_request}'  align='left' />
			<col name='smn_ingredientes_id_name' title='${lbl:b_ingredients}'  align='left' />

		</record>
		<record recordset='query-smnreldetalleingrediente.sql' width='100' spacingBefore='10'>
			<col name='smn_solicitud_servicio_entregas_detalle_id' title='${lbl:b_detail_services_delivery_request}' width='50' align='left' format='######' />
			<col name='smn_ingredientes_id' title='${lbl:b_ingredients}' width='50' align='left' format='######' />

		</record>

	</pdf-report>
</config>
