<?xml version='1.0' encoding='ISO-8859-1'?>
<config nodb="true">

	<summary>
		Generar reporte generico PDF
	</summary>

	<log>false</log>

	<transaction>
		<classname>dinamica.GenericTransaction</classname>
		<validator>false</validator>
		<transaction>false</transaction>
		<jdbc-log>false</jdbc-log>
		<recordset id="query.sql" source="session" scope="transaction" />

	</transaction>

	<output>
		<classname>dinamica.PDFGenericReport</classname>
	</output>
	
	<pdf-title>${lbl:b_detail_services_delivery_request}</pdf-title>
	<pdf-logo url='/images/logo-simone-pdf.png' scale='100' />
	<pdf-file-name>${lbl:b_detail_services_delivery_request}.pdf</pdf-file-name>

	<pdf-report pageSize="letter" rotate="false" footer="true" header="true">
		<record recordset='query.sql' title='${lbl:b_detail_services_delivery_request}' width='60' spacingBefore='40'>
			<col name='smn_solicitud_servicio_entregas_cabecera_id' title='${lbl:b_header_services_delivery_request}' align='left' />
			<col name='smn_catalogo_item_comercio_id' title='${lbl:b_catalog_item_commerce}' align='left' format='######' />
			<col name='smn_unidad_medida_rf' title='${lbl:b_measurement_unit}' align='left' format='######' />
			<col name='sed_tiempo_sug_preparacion' title='${lbl:b_time_sug_prepared}' align='right' />
			<col name='sed_cantidad' title='${lbl:b_quantity}' align='left' format='######' />
			<col name='sed_requirimientos' title='${lbl:b_requeriment}' align='left' />
			<col name='sed_precio_ml' title='${lbl:b_price_ml}' align='left' format='#,###,##0.00' />
			<col name='smn_moneda_rf' title='${lbl:b_coins}' align='left' format='######' />
			<col name='sed_precio_ma' title='${lbl:b_price_ma}' align='left' format='#,###,##0.00' />
			<col name='sed_monto_moneda_local' title='${lbl:b_amount_ml}' align='left' format='#,###,##0.00' />
			<col name='sed_monto_moneda_alterna' title='${lbl:b_amount_ma}' align='left' format='#,###,##0.00' />
			<col name='sed_fecha_registro' title='${lbl:b_store_date}' align='left' format='######' />
		</record>


	</pdf-report>
</config>
