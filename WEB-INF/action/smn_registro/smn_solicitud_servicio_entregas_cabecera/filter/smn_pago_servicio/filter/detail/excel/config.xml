<?xml version='1.0' encoding='ISO-8859-1'?>
<config nodb="true">

	<summary>
		Exportar documento excel directo al browser
	</summary>

	<log>false</log>

	<transaction>
		<classname>dinamica.GenericTransaction</classname>
		<validator>false</validator>
		<transaction>false</transaction>
		<jdbc-log>false</jdbc-log>
		<recordset id="query.sql" source="session" scope="transaction" />
	</transaction>

	<output>
		<classname>domain.ExcelReportOutput</classname>
	</output>
	
	<excel-logo scale="60" url="/images/logo-simone-pdf.png"/>
	<title cellPosY="1" cellPosX="4" cellStep="0" name="${lbl:b_service_payment}"/>
	
	<excel 
		recordset='query.sql' 
		sheetname='${lbl:b_service_payment}' 
		filename='${lbl:b_service_payment}.xls' 
		date-format='dd-MM-yyyy'
		header-background='true'>
		<col id='smn_solicitud_servicio_entregas_cabecera_id_combo' label='${lbl:b_header_services_delivery_request}' />
		<col id='smn_forma_pago_rf_combo' label='${lbl:b_way_to_pay}' />
		<col id='smn_franquicia_rf_combo' label='${lbl:b_franchises}' />
		<col id='pas_numero_tarjeta' label='${lbl:b_card_number}' />
		<col id='pas_codigo_seguridad' label='${lbl:b_security_code}' />
		<col id='pas_documento_identidad' label='${lbl:b_identity_document}' />
		<col id='pas_nombre_pagador' label='${lbl:b_payer_name}' />
		<col id='pas_numero_autorizacion' label='${lbl:b_authorization_number}' />
		<col id='pas_fecha_registro' label='${lbl:b_store_date}' />

	</excel>

</config>
