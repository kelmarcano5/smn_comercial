<?xml version='1.0' encoding='ISO-8859-1'?>
<config nodb="true">

	<summary>
		Exportar documento excel directo al browser
	</summary>

	<log>false</log>

	<transaction>
		<classname>dinamica.GenericTransaction</classname>
		<validator>false</validator>
		<transaction>false</transaction>
		<jdbc-log>false</jdbc-log>
		<recordset id="query-smnpedidocomponentes.sql" source="session" scope="transaction" />
	</transaction>

	<output>
		<classname>domain.ExcelReportOutput</classname>
	</output>
	
	<excel-logo scale="60" url="/images/logo-simone-pdf.png"/>
	<title cellPosY="1" cellPosX="4" cellStep="0" name="${lbl:b_components_order}"/>
	
	<excel 
		recordset='query-smnpedidocomponentes.sql' 
		sheetname='${lbl:b_components_order}' 
		filename='${lbl:b_components_order}.xls' 
		date-format='dd-MM-yyyy'
		header-background='true'>
		<col id='pde_naturaleza_pl0' label='${lbl:b_detail_bill}' />
		<col id='smn_mov_caja_detalle_id' label='${lbl:b_movement_caj}' />
		<col id='smn_ingresos_rf' label='${lbl:b_income}' />
		<col id='smn_grupo_componente_rf' label='${lbl:b_component_group}' />
		<col id='pco_cantidad' label='${lbl:b_quantity}' />
		<col id='smn_precio_ml_rf' label='${lbl:b_price}' />
		<col id='pco_monto_ml' label='${lbl:b_amount}' />
		<col id='pco_estatus' label='${lbl:b_status}' />
		<col id='pco_fecha_registro' label='${lbl:b_store_date}' />

	</excel>

</config>
