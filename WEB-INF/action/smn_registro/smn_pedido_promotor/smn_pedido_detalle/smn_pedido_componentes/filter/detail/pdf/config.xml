<?xml version='1.0' encoding='ISO-8859-1'?>
<config nodb="true">

	<summary>
		Generar reporte generico PDF
	</summary>

	<log>false</log>

	<transaction>
		<classname>dinamica.GenericTransaction</classname>
		<validator>false</validator>
		<transaction>false</transaction>
		<jdbc-log>false</jdbc-log>
		<recordset id="query.sql" source="session" scope="transaction" />

	</transaction>

	<output>
		<classname>dinamica.PDFGenericReport</classname>
	</output>
	
	<pdf-title>${lbl:b_components_order}</pdf-title>
	<pdf-logo url='/images/logo-simone-pdf.png' scale='100' />
	<pdf-file-name>${lbl:b_components_order}.pdf</pdf-file-name>

	<pdf-report pageSize="letter" rotate="false" footer="true" header="true">
		<record recordset='query.sql' title='${lbl:b_components_order}' width='60' spacingBefore='40'>
			<col name='pde_naturaleza_pl0' title='${lbl:b_detail_bill}' align='left' />
			<col name='smn_mov_caja_detalle_id' title='${lbl:b_movement_caj}' align='left' format='######' />
			<col name='smn_ingresos_rf' title='${lbl:b_income}' align='left' format='######' />
			<col name='smn_grupo_componente_rf' title='${lbl:b_component_group}' align='left' format='######' />
			<col name='pco_tipo_componente' title='${lbl:b_components_types}' align='left' />
			<col name='smn_componente_rf' title='${lbl:b_component}' align='left' format='######' />
			<col name='pco_es_prestador_servicio' title='${lbl:b_is_services_prestator}' align='left' />
			<col name='smn_clase_auxiliar_rf' title='${lbl:b_class_auxiliary}' align='left' format='######' />
			<col name='smn_auxiliar_rf' title='${lbl:b_auxiliar}' align='left' format='######' />
			<col name='pco_naturaleza' title='${lbl:b_nature}' align='left' />
			<col name='smn_item_rf' title='${lbl:b_item}' align='left' format='######' />
			<col name='smn_servicio_rf' title='${lbl:b_services}' align='left' format='######' />
			<col name='pco_cantidad' title='${lbl:b_quantity}' align='left' format='######' />
			<col name='smn_precio_ml_rf' title='${lbl:b_price}' align='left' format='#,###,##0.00' />
			<col name='pco_monto_ml' title='${lbl:b_amount}' align='left' format='#,###,##0.00' />
			<col name='smn_moneda_rf' title='${lbl:b_coins}' align='left' format='######' />
			<col name='smn_tasa_rf' title='${lbl:b_exchange_rate}' align='left' format='######' />
			<col name='smn_precio_ma' title='${lbl:b_price_ma}' align='left' format='#,###,##0.00' />
			<col name='smn_monto_ma' title='${lbl:b_amount_ma}' align='left' format='#,###,##0.00' />
			<col name='pco_imprime' title='${lbl:b_print}' align='left' />
			<col name='smn_grupo_titulo_impresion_rf' title='${lbl:b_group_title_print}' align='left' format='######' />
			<col name='smn_tipo_gasto_rf' title='${lbl:b_type}' align='left' format='######' />
			<col name='smn_sub_tipo_gasto_rf' title='${lbl:b_sub_type}' align='left' format='######' />
			<col name='pco_estatus' title='${lbl:b_status}' align='left' />
			<col name='pco_fecha_registro' title='${lbl:b_store_date}' align='left' format='dd-MM-yyyy' />
		</record>


	</pdf-report>
</config>
