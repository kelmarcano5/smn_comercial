<?xml version='1.0' encoding='ISO-8859-1'?>
<config nodb="true">

	<summary>
		Exportar documento excel directo al browser
	</summary>

	<log>false</log>

	<transaction>
		<classname>dinamica.GenericTransaction</classname>
		<validator>false</validator>
		<transaction>false</transaction>
		<jdbc-log>false</jdbc-log>
		<recordset id="query.sql" source="session" scope="transaction" />
	</transaction>

	<output>
		<classname>domain.ExcelReportOutput</classname>
	</output>
	
	<excel-logo scale="60" url="/images/logo-simone-pdf.png"/>
	<title cellPosY="1" cellPosX="4" cellStep="0" name="${lbl:b_tax_bill}"/>
	
	<excel 
		recordset='query.sql' 
		sheetname='${lbl:b_tax_bill}' 
		filename='${lbl:b_tax_bill}.xls' 
		date-format='dd-MM-yyyy'
		header-background='true'>
		<col id='smn_factura_detalle_id' label='${lbl:b_detail_bill}' />
		<col id='smn_codigos_impuestos_rf_combo' label='${lbl:b_code_tax}' />
		<col id='fai_monto_base_ml' label='${lbl:b_amount_base_ml}' />
		<col id='fai_porcentaje_impuesto' label='${lbl:b_percentaje_tax}' />
		<col id='fai_monto_impuesto_ml' label='${lbl:b_amount_tax}' />
		<col id='smn_moneda_rf_combo' label='${lbl:b_coins}' />
		<col id='smn_tasa_rf_combo' label='${lbl:b_exchange_rate}' />
		<col id='fai_monto_impuesto_ma' label='${lbl:b_amount_discount_ma}' />
		<col id='fai_fecha_registro' label='${lbl:b_store_date}' />

	</excel>

</config>
