<?xml version='1.0' encoding='ISO-8859-1'?>
<config nodb="true">

	<summary>
		Generar reporte generico PDF
	</summary>

	<log>false</log>

	<transaction>
		<classname>dinamica.GenericTransaction</classname>
		<validator>false</validator>
		<transaction>false</transaction>
		<jdbc-log>false</jdbc-log>
		<recordset id="query.sql" source="session" scope="transaction" />

	</transaction>

	<output>
		<classname>dinamica.PDFGenericReport</classname>
	</output>
	
	<pdf-title>${lbl:b_detail_bill}</pdf-title>
	<pdf-logo url='/images/logo-simone-pdf.png' scale='100' />
	<pdf-file-name>${lbl:b_detail_bill}.pdf</pdf-file-name>

	<pdf-report pageSize="letter" rotate="false" footer="true" header="true">
		<record recordset='query.sql' title='${lbl:b_detail_bill}' width='60' spacingBefore='40'>
			<col name='smn_factura_cabecera_id' title='${lbl:b_header_bill}' align='left' format='######' />
			<col name='fde_naturaleza' title='${lbl:b_nature}' align='left' format='######' />
			<col name='smn_servicios_rf' title='${lbl:b_services}' align='left' format='######' />
			<col name='smn_item_rf' title='${lbl:b_item}' align='left' format='######' />
			<col name='smn_activo_fijo_rf' title='${lbl:b_actfijo}' align='left' format='######' />
			<col name='fde_cantidad' title='${lbl:b_quantity}' align='left' format='######' />
			<col name='fde_precio_ml' title='${lbl:b_price}' align='left' format='######' />
			<col name='fde_monto_ml' title='${lbl:b_amount}' align='left' format='######' />
			<col name='smn_moneda_rf' title='${lbl:b_coins}' align='left' format='######' />
			<col name='smn_tasa_rf' title='${lbl:b_exchange_rate}' align='left' format='######' />
			<col name='fde_precio_ma' title='${lbl:b_price_coins_alter}' align='left' format='#,###,##0.00' />
			<col name='fde_monto_ma' title='${lbl:b_amount_coins_alter}' align='left' format='#,###,##0.00' />
			<col name='fde_fecha_registro' title='${lbl:b_store_date}' align='left' format='dd-MM-yyyy' />
		</record>


	</pdf-report>
</config>
