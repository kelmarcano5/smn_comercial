<?xml version='1.0' encoding='ISO-8859-1'?>
<config nodb="true">

	<summary>
		Generar reporte generico PDF
	</summary>

	<log>false</log>

	<transaction>
		<classname>dinamica.GenericTransaction</classname>
		<validator>false</validator>
		<transaction>false</transaction>
		<jdbc-log>false</jdbc-log>
		<recordset id="query.sql" source="session" scope="transaction" />

	</transaction>

	<output>
		<classname>dinamica.PDFGenericReport</classname>
	</output>
	
	<pdf-title>${lbl:b_delivery_date_order}</pdf-title>
	<pdf-logo url='/images/logo-simone-pdf.png' scale='100' />
	<pdf-file-name>${lbl:b_delivery_date_order}.pdf</pdf-file-name>

	<pdf-report pageSize="letter" rotate="false" footer="true" header="true">
		<record recordset='query.sql' title='${lbl:b_delivery_date_order}' width='60' spacingBefore='40'>
			<col name='smn_pedido_detalle_id' title='${lbl:b_header_order_detail}' align='left' format='######' />
			<col name='smn_rel_auxiliar_direccion' title='${lbl:b_delivery_address}' align='left' format='######' />
			<col name='pfe_fecha_entrega' title='${lbl:b_delivery_date}' align='left' format='dd-MM-yyyy' />
			<col name='pfe_cantidad' title='${lbl:b_quantity}' align='left' format='######' />
			<col name='pfe_fecha_registro' title='${lbl:b_store_date}' align='left' format='dd-MM-yyyy' />
		</record>


	</pdf-report>
</config>
