<?xml version='1.0' encoding='ISO-8859-1'?>
<config nodb="true">

	<summary>
		Generar reporte generico PDF
	</summary>

	<log>false</log>

	<transaction>
		<classname>dinamica.GenericTransaction</classname>
		<validator>false</validator>
		<transaction>false</transaction>
		<jdbc-log>false</jdbc-log>
		<recordset id="query.sql" source="session" scope="transaction" />

	</transaction>

	<output>
		<classname>dinamica.PDFGenericReport</classname>
	</output>
	
	<pdf-title>${lbl:b_goals}</pdf-title>
	<pdf-logo url='/images/logo-simone-pdf.png' scale='100' />
	<pdf-file-name>${lbl:b_goals}.pdf</pdf-file-name>

	<pdf-report pageSize="letter" rotate="false" footer="true" header="true">
		<record recordset='query.sql' title='${lbl:b_goals}' width='60' spacingBefore='40'>
			<col name='smn_tipo_documento_id_combo' title='${lbl:b_tipo_documento_factura}' align='left' format='######' />
			<col name='smn_documento_id_combo' title='${lbl:b_document}' align='left' format='######' />
			<col name='smn_clase_auxiliar_rf_combo' title='${lbl:b_class_auxiliary}' align='left' format='######' />
			<col name='smn_auxiliar_rf_combo' title='${lbl:b_auxiliar}' align='left' format='######' />
			<col name='smn_rol_id_combo' title='${lbl:b_rol}' align='left' format='######' />
			<col name='smn_usuario_rf_combo' title='${lbl:b_user}' align='left' format='######' />
			<col name='met_fecha_desde' title='${lbl:b_from_date}' align='left' format='dd-MM-yyyy' />
			<col name='met_fecha_hasta' title='${lbl:b_to_date}' align='left' format='dd-MM-yyyy' />
			<col name='met_dias_habiles' title='${lbl:b_free_day}' align='left' format='######' />
			<col name='met_fecha_estadistica' title='${lbl:b_estadistic_date}' align='left' format='dd-MM-yyyy' />
			<col name='met_cantidad_diaria' title='${lbl:b_diary_quantity}' align='left' format='######' />
			<col name='met_cantidad_usuario' title='${lbl:b_user_quantity}' align='left' format='######' />
			<col name='met_estatus_combo' title='${lbl:b_status}' align='left' />
			<col name='met_fecha_registro' title='${lbl:b_store_date}' align='left' format='dd-MM-yyyy' />
		</record>


	</pdf-report>
</config>
