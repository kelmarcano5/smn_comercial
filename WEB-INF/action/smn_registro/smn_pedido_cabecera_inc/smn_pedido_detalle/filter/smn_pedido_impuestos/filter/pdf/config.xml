<?xml version='1.0' encoding='ISO-8859-1'?>
<config nodb="true">

	<summary>
		Generar reporte generico PDF
	</summary>

	<log>false</log>

	<transaction>
		<classname>dinamica.GenericTransaction</classname>
		<validator>false</validator>
		<transaction>false</transaction>
		<jdbc-log>false</jdbc-log>
		<recordset id="query-smnpedidoimpuestos.sql" source="session" scope="transaction" />
		<recordset id="filter.params" source="session" scope="transaction" />
	</transaction>

	<output>
		<classname>dinamica.PDFGenericReport</classname>
	</output>
	
	<pdf-title>${lbl:b_tax_order}</pdf-title>
	<pdf-logo url='/images/logo-simone-pdf.png' scale='100' align="left" />
	<pdf-file-name>${lbl:b_tax_order}.pdf</pdf-file-name>

	<pdf-report pageSize="letter" rotate="false" footer="true" header="true">
		<record recordset='filter.params' title='${lbl:b_filter_find}' noFilterMsg='-- ${lbl:b_all_message} --' width='55' spacingBefore='15'>
			<col name='smn_pedido_detalle_id' title='${lbl:b_header_order_detail}'  format='######' align='left' />
			<col name='smn_codigos_impuestos_rf' title='${lbl:b_code_tax}'  format='######' align='left' />
			<col name='pim_fecha_registro_ini' title='${lbl:b_store_date}'  format='dd-MM-yyyy' align='left' />
			<col name='pim_fecha_registro_fin' title='${lbl:b_store_date}'  format='dd-MM-yyyy' align='left' />

		</record>
		<record recordset='query-smnpedidoimpuestos.sql' width='100' spacingBefore='10'>
			<col name='smn_pedido_detalle_id' title='${lbl:b_header_order_detail}' width='10' align='left' format='######' />
			<col name='smn_codigos_impuestos_rf_combo' title='${lbl:b_code_tax}' width='10' align='left' format='######' />
			<col name='pim_monto_base_ml' title='${lbl:b_amount_base}' width='10' align='left' format='######' />
			<col name='pim_porcentaje_impuesto' title='${lbl:b_percentaje_tax}' width='10' align='left' format='######' />
			<col name='pim_monto_sustraendo' title='${lbl:b_amount_sustrain}' width='10' align='left' format='######' />
			<col name='pim_monto_impuesto' title='${lbl:b_amount_tax}' width='10' align='left' format='######' />
			<col name='smn_moneda_rf_combo' title='${lbl:b_coins}' width='10' align='left' format='######' />
			<col name='smn_tasa_rf_combo' title='${lbl:b_exchange_rate}' width='10' align='left' format='######' />
			<col name='pim_monto_impuesto_ma' title='${lbl:b_amount_tax_ma}' width='10' align='left' format='######' />
			<col name='pim_fecha_registro' title='${lbl:b_store_date}' width='10' align='left' format='dd-MM-yyyy' />

		</record>

	</pdf-report>
</config>
