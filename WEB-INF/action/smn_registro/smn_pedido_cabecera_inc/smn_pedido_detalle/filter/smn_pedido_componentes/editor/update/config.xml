<?xml version='1.0' encoding='ISO-8859-1'?>
<config>

	<summary>
		Actualiza valores de un formulario en una tabla
	</summary>

	<log>false</log>

	<!--soporte de auditoria-->
	<audit>
		<!--de donde saca los datos, por defecto es "_request"-->
		<recordset></recordset>
		<!--que campos extrae para el registro descriptivo-->
		<cols>
			<colname>smn_pedido_detalle_id</colname>
			<colname>smn_mov_caja_detalle_id</colname>
			<colname>smn_pedido_cabecera_id</colname>
			<colname>smn_grupo_componente_rf</colname>
			<colname>pco_tipo_componente</colname>
			<colname>smn_componente_rf</colname>
			<colname>pco_es_prestador_servicio</colname>
			<colname>smn_clase_auxiliar_rf</colname>
			<colname>smn_auxiliar_rf</colname>
			<colname>pco_naturaleza</colname>
			<colname>smn_item_rf</colname>
			<colname>smn_servicio_rf</colname>
			<colname>pco_cantidad</colname>
			<colname>smn_precio_ml_rf</colname>
			<colname>pco_monto_ml</colname>
			<colname>smn_moneda_rf</colname>
			<colname>smn_tasa_rf</colname>
			<colname>smn_precio_ma</colname>
			<colname>smn_monto_ma</colname>
			<colname>pco_imprime</colname>
			<colname>smn_grupo_titulo_impresion_rf</colname>
			<colname>smn_tipo_gasto_rf</colname>
			<colname>smn_sub_tipo_gasto_rf</colname>
			<colname>pco_estatus</colname>
		
		</cols>
		<table>smn_comercial.smn_pedido_componentes</table>
		<oper>ACTUALIZAR</oper>
		<area>Carga de datos</area>
		<!--
			query para obtener el ID generado o nombre de 
			la columna que contiene el pkey, si es query, 
			el alias del campo debe ser "id"
		-->
		<pkey>id</pkey>
	</audit>

	<transaction>
		<classname>dinamica.audit.AuditableTransaction</classname>
		<validator>true</validator>
		<transaction>true</transaction>
		<jdbc-log>false</jdbc-log>
	</transaction>

	<query>update.sql</query>

	<output>
		<classname>dinamica.GenericOutput</classname>
		<template>script.js</template>
		<set-http-headers>true</set-http-headers>
		<content-type>text/javascript; charset=iso-8859-1</content-type>
		<expiration>0</expiration>
	</output>

</config>
