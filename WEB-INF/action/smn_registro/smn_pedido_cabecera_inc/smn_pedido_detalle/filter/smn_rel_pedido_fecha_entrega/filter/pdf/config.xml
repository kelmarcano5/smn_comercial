<?xml version='1.0' encoding='ISO-8859-1'?>
<config nodb="true">

	<summary>
		Generar reporte generico PDF
	</summary>

	<log>false</log>

	<transaction>
		<classname>dinamica.GenericTransaction</classname>
		<validator>false</validator>
		<transaction>false</transaction>
		<jdbc-log>false</jdbc-log>
		<recordset id="query-smnrelpedidofechaentrega.sql" source="session" scope="transaction" />
		<recordset id="filter.params" source="session" scope="transaction" />
	</transaction>

	<output>
		<classname>dinamica.PDFGenericReport</classname>
	</output>
	
	<pdf-title>${lbl:b_delivery_date_order}</pdf-title>
	<pdf-logo url='/images/logo-simone-pdf.png' scale='100' align="left" />
	<pdf-file-name>${lbl:b_delivery_date_order}.pdf</pdf-file-name>

	<pdf-report pageSize="letter" rotate="false" footer="true" header="true">
		<record recordset='filter.params' title='${lbl:b_filter_find}' noFilterMsg='-- ${lbl:b_all_message} --' width='55' spacingBefore='15'>
			<col name='smn_pedido_detalle_id' title='${lbl:b_header_order_detail}'  format='######' align='left' />
			<col name='smn_rel_auxiliar_direccion' title='${lbl:b_delivery_address}'  format='######' align='left' />
			<col name='pfe_fecha_entrega' title='${lbl:b_delivery_date}'  format='dd-MM-yyyy' align='left' />

		</record>
		<record recordset='query-smnrelpedidofechaentrega.sql' width='100' spacingBefore='10'>
			<col name='smn_pedido_detalle_id' title='${lbl:b_header_order_detail}' width='20' align='left' format='######' />
			<col name='smn_rel_auxiliar_direccion' title='${lbl:b_delivery_address}' width='20' align='left' format='######' />
			<col name='pfe_fecha_entrega' title='${lbl:b_delivery_date}' width='20' align='left' format='dd-MM-yyyy' />
			<col name='pfe_cantidad' title='${lbl:b_quantity}' width='20' align='left' format='######' />
			<col name='pfe_fecha_registro' title='${lbl:b_store_date}' width='20' align='left' format='dd-MM-yyyy' />

		</record>

	</pdf-report>
</config>
