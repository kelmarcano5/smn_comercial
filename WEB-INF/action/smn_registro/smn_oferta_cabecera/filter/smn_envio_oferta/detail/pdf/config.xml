<?xml version='1.0' encoding='ISO-8859-1'?>
<config nodb="true">

	<summary>
		Generar reporte generico PDF
	</summary>

	<log>false</log>

	<transaction>
		<classname>dinamica.GenericTransaction</classname>
		<validator>false</validator>
		<transaction>false</transaction>
		<jdbc-log>false</jdbc-log>
		<recordset id="query.sql" source="session" scope="transaction" />

	</transaction>

	<output>
		<classname>dinamica.PDFGenericReport</classname>
	</output>
	
	<pdf-title>${lbl:b_offer_delivery}</pdf-title>
	<pdf-logo url='/images/logo-simone-pdf.png' scale='100' />
	<pdf-file-name>${lbl:b_offer_delivery}.pdf</pdf-file-name>

	<pdf-report pageSize="letter" rotate="false" footer="true" header="true">
		<record recordset='query.sql' title='${lbl:b_offer_delivery}' width='60' spacingBefore='40'>
			<col name='smn_oferta_id' title='${lbl:b_offer}' align='left' format='######' />
			<col name='eof_fecha_envio' title='${lbl:b_delivery_date}' align='left' format='dd-MM-yyyy' />
			<col name='eof_fecha_cierre' title='${lbl:b_close_date}' align='left' format='dd-MM-yyyy' />
			<col name='smn_clasificacion_cliente_id' title='${lbl:b_customer_clasification}' align='left' format='######' />
			<col name='smn_clientes_area_interes_id' title='${lbl:b_customer_interesting_area}' align='left' format='######' />
			<col name='smn_tipo_contactos_rf' title='${lbl:b_type_contacts}' align='left' format='######' />
			<col name='eof_descripcion' title='${lbl:b_description}' align='left' />
			<col name='eof_fecha_registro' title='${lbl:b_store_date}' align='left' format='dd-MM-yyyy' />
		</record>


	</pdf-report>
</config>
