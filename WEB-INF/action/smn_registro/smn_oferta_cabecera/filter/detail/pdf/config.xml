<?xml version='1.0' encoding='ISO-8859-1'?>
<config nodb="true">

	<summary>
		Generar reporte generico PDF
	</summary>

	<log>false</log>

	<transaction>
		<classname>dinamica.GenericTransaction</classname>
		<validator>false</validator>
		<transaction>false</transaction>
		<jdbc-log>false</jdbc-log>
		<recordset id="query.sql" source="session" scope="transaction" />

	</transaction>

	<output>
		<classname>dinamica.PDFGenericReport</classname>
	</output>
	
	<pdf-title>${lbl:b_offer}</pdf-title>
	<pdf-logo url='/images/logo-simone-pdf.png' scale='100' />
	<pdf-file-name>${lbl:b_offer}.pdf</pdf-file-name>

	<pdf-report pageSize="letter" rotate="false" footer="true" header="true">
		<record recordset='query.sql' title='${lbl:b_offer}' width='60' spacingBefore='40'>
			<col name='smn_documento_id' title='${lbl:b_document}' align='left' format='######' />
			<col name='ofe_numero_documento' title='${lbl:b_document_number}' align='left' format='######' />
			<col name='smn_entidad_rf' title='${lbl:b_entities}' align='left' format='######' />
			<col name='smn_sucursal_rf' title='${lbl:b_subsidiaries}' align='left' format='######' />
			<col name='ofe_fecha_desde' title='${lbl:b_init_date}' align='left' format='dd-MM-yyyy' />
			<col name='ofe_fecha_hasta' title='${lbl:b_end_date}' align='left' format='dd-MM-yyyy' />
			<col name='ofe_observaciones' title='${lbl:b_observations}' align='left' />
			<col name='ofe_estatus' title='${lbl:b_status}' align='left' />
			<col name='ofe_fecha_registro' title='${lbl:b_store_date}' align='left' format='dd-MM-yyyy' />
		</record>


	</pdf-report>
</config>
