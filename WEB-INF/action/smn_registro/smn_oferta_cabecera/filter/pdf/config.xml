<?xml version='1.0' encoding='ISO-8859-1'?>
<config nodb="true">

	<summary>
		Generar reporte generico PDF
	</summary>

	<log>false</log>

	<transaction>
		<classname>dinamica.GenericTransaction</classname>
		<validator>false</validator>
		<transaction>false</transaction>
		<jdbc-log>false</jdbc-log>
		<recordset id="query-smnofertacabecera.sql" source="session" scope="transaction" />
		<recordset id="filter.params" source="session" scope="transaction" />
	</transaction>

	<output>
		<classname>dinamica.PDFGenericReport</classname>
	</output>
	
	<pdf-title>${lbl:b_offer}</pdf-title>
	<pdf-logo url='/images/logo-simone-pdf.png' scale='100' align="left" />
	<pdf-file-name>${lbl:b_offer}.pdf</pdf-file-name>

	<pdf-report pageSize="letter" rotate="false" footer="true" header="true">
		<record recordset='filter.params' title='${lbl:b_filter_find}' noFilterMsg='-- ${lbl:b_all_message} --' width='55' spacingBefore='15'>
			<col name='smn_documento_id' title='${lbl:b_document}'  format='######' align='left' />
			<col name='ofe_numero_documento' title='${lbl:b_document_number}'  format='######' align='left' />
			<col name='ofe_fecha_registro_ini' title='${lbl:b_store_date}'  format='dd-MM-yyyy' align='left' />
			<col name='ofe_fecha_registro_fin' title='${lbl:b_store_date}'  format='dd-MM-yyyy' align='left' />

		</record>
		<record recordset='query-smnofertacabecera.sql' width='100' spacingBefore='10'>
			<col name='smn_documento_id' title='${lbl:b_document}' width='11' align='left' format='######' />
			<col name='ofe_numero_documento' title='${lbl:b_document_number}' width='11' align='left' format='######' />
			<col name='smn_entidad_rf' title='${lbl:b_entities}' width='11' align='left' format='######' />
			<col name='smn_sucursal_rf' title='${lbl:b_subsidiaries}' width='11' align='left' format='######' />
			<col name='ofe_fecha_desde' title='${lbl:b_init_date}' width='11' align='left' format='dd-MM-yyyy' />
			<col name='ofe_fecha_hasta' title='${lbl:b_end_date}' width='11' align='left' format='dd-MM-yyyy' />
			<col name='ofe_observaciones' title='${lbl:b_observations}' width='11' align='left' />
			<col name='ofe_estatus' title='${lbl:b_status}' width='11' align='left' />
			<col name='ofe_fecha_registro' title='${lbl:b_store_date}' width='11' align='left' format='dd-MM-yyyy' />

		</record>

	</pdf-report>
</config>
