<?xml version='1.0' encoding='ISO-8859-1'?>
<config nodb="true">

	<summary>
		Generar reporte generico PDF
	</summary>

	<log>false</log>

	<transaction>
		<classname>dinamica.GenericTransaction</classname>
		<validator>false</validator>
		<transaction>false</transaction>
		<jdbc-log>false</jdbc-log>
		<recordset id="query-smnofertadetalle.sql" source="session" scope="transaction" />
	</transaction>

	<output>
		<classname>dinamica.PDFGenericReport</classname>
	</output>
	
	<pdf-title>${lbl:b_offer_detail}</pdf-title>
	<pdf-logo url='/images/logo-simone-pdf.png' scale='100' />
	<pdf-file-name>${lbl:b_offer_detail}.pdf</pdf-file-name>

	<pdf-report 
		pageSize="letter" 
		rotate="false"
		footer="false" 
		header="true">
		<record recordset='query-smnofertadetalle.sql' width='100' spacingBefore='40'>
			<col name='smn_oferta_id' title='${lbl:b_offer}' width='12' align='left'  />
			<col name='ofd_naturaleza' title='${lbl:b_nature}' width='12' align='left' />
			<col name='ofd_cantidad' title='${lbl:b_quantity}' width='12' align='left'  />
			<col name='ofd_precio' title='${lbl:b_price}' width='12' align='left' format='#,###,##0.00' />
			<col name='ofd_monto_ml' title='${lbl:b_amount}' width='12' align='left' format='#,###,##0.00' />
			<col name='ofd_precio_moneda_alterna' title='${lbl:b_price_coins_alter}' width='12' align='left' format='#,###,##0.00' />
			<col name='ofd_monto_moneda_alterna' title='${lbl:b_amount_coins_alter}' width='12' align='left' format='#,###,##0.00' />
			<col name='ofd_fecha_registro' title='${lbl:b_store_date}' width='12' align='left' format='dd-MM-yyyy' />

		</record>

	</pdf-report>
</config>
