<?xml version='1.0' encoding='ISO-8859-1'?>
<config nodb="true">

	<summary>
		Exportar documento excel directo al browser
	</summary>

	<log>false</log>

	<transaction>
		<classname>dinamica.GenericTransaction</classname>
		<validator>false</validator>
		<transaction>false</transaction>
		<jdbc-log>false</jdbc-log>
		<recordset id="query.sql" source="session" scope="transaction" />
	</transaction>

	<output>
		<classname>domain.ExcelReportOutput</classname>
	</output>
	
	<excel-logo scale="60" url="/images/logo-simone-pdf.png"/>
	<title cellPosY="1" cellPosX="4" cellStep="0" name="${lbl:b_offer_detail}"/>
	
	<excel 
		recordset='query.sql' 
		sheetname='${lbl:b_offer_detail}' 
		filename='${lbl:b_offer_detail}.xls' 
		date-format='dd-MM-yyyy'
		header-background='true'>
		<col id='smn_oferta_id' label='${lbl:b_offer}' />
		<col id='ofd_naturaleza' label='${lbl:b_nature}' />
		<col id='ofd_cantidad' label='${lbl:b_quantity}' />
		<col id='ofd_precio' label='${lbl:b_price}' />
		<col id='ofd_monto_ml' label='${lbl:b_amount}' />
		<col id='ofd_precio_moneda_alterna' label='${lbl:b_price_coins_alter}' />
		<col id='ofd_monto_moneda_alterna' label='${lbl:b_amount_coins_alter}' />
		<col id='ofd_fecha_registro' label='${lbl:b_store_date}' />

	</excel>

</config>
