<?xml version='1.0' encoding='ISO-8859-1'?>
<config nodb="true">

	<summary>
		Generar reporte generico PDF
	</summary>

	<log>false</log>

	<transaction>
		<classname>dinamica.GenericTransaction</classname>
		<validator>false</validator>
		<transaction>false</transaction>
		<jdbc-log>false</jdbc-log>
		<recordset id="query.sql" source="session" scope="transaction" />

	</transaction>

	<output>
		<classname>dinamica.PDFGenericReport</classname>
	</output>
	
	<pdf-title>${lbl:b_rel_customer_offer}</pdf-title>
	<pdf-logo url='/images/logo-simone-pdf.png' scale='100' />
	<pdf-file-name>${lbl:b_rel_customer_offer}.pdf</pdf-file-name>

	<pdf-report pageSize="letter" rotate="false" footer="true" header="true">
		<record recordset='query.sql' title='${lbl:b_rel_customer_offer}' width='60' spacingBefore='40'>
			<col name='smn_oferta_id' title='${lbl:b_offer}' align='left' format='######' />
			<col name='smn_cliente_id' title='${lbl:b_customer}' align='left' format='######' />
			<col name='roc_estatus_proceso' title='${lbl:b_process_status}' align='left' />
			<col name='roc_fecha_aprobacion' title='${lbl:b_aprobation_date}' align='left' format='dd-MM-yyyy' />
			<col name='roc_fecha_vigencia_desde' title='${lbl:b_from_vigency_date}' align='left' format='dd-MM-yyyy' />
			<col name='roc_fecha_vigencia_hasta' title='${lbl:b_to_vigency_date}' align='left' format='dd-MM-yyyy' />
			<col name='roc_fecha_cierre' title='${lbl:b_close_date}' align='left' format='dd-MM-yyyy' />
			<col name='roc_fecha_registro' title='${lbl:b_store_date}' align='left' format='dd-MM-yyyy' />
		</record>


	</pdf-report>
</config>
