<?xml version='1.0' encoding='ISO-8859-1'?>
<config nodb="true">

	<summary>
		Generar reporte generico PDF
	</summary>

	<log>false</log>

	<transaction>
		<classname>dinamica.GenericTransaction</classname>
		<validator>false</validator>
		<transaction>false</transaction>
		<jdbc-log>false</jdbc-log>
		<recordset id="query-smnenviooferta.sql" source="session" scope="transaction" />
	</transaction>

	<output>
		<classname>dinamica.PDFGenericReport</classname>
	</output>
	
	<pdf-title>${lbl:b_offer_delivery}</pdf-title>
	<pdf-logo url='/images/logo-simone-pdf.png' scale='100' />
	<pdf-file-name>${lbl:b_offer_delivery}.pdf</pdf-file-name>

	<pdf-report 
		pageSize="letter" 
		rotate="false"
		footer="false" 
		header="true">
		<record recordset='query-smnenviooferta.sql' width='100' spacingBefore='40'>
			<col name='smn_oferta_id' title='${lbl:b_offer}' width='12' align='left' format='######' />
			<col name='eof_fecha_envio' title='${lbl:b_delivery_date}' width='12' align='left' format='dd-MM-yyyy' />
			<col name='eof_fecha_cierre' title='${lbl:b_close_date}' width='12' align='left' format='dd-MM-yyyy' />
			<col name='smn_clasificacion_cliente_id' title='${lbl:b_customer_clasification}' width='12' align='left' format='######' />
			<col name='smn_clientes_area_interes_id' title='${lbl:b_customer_interesting_area}' width='12' align='left' format='######' />
			<col name='smn_tipo_contactos_rf' title='${lbl:b_type_contacts}' width='12' align='left' format='######' />
			<col name='eof_descripcion' title='${lbl:b_description}' width='12' align='left' />
			<col name='eof_fecha_registro' title='${lbl:b_store_date}' width='12' align='left' format='dd-MM-yyyy' />

		</record>

	</pdf-report>
</config>
