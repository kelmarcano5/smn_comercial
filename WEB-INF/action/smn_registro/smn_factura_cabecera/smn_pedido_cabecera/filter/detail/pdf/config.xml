<?xml version='1.0' encoding='ISO-8859-1'?>
<config nodb="true">

	<summary>
		Generar reporte generico PDF
	</summary>

	<log>false</log>

	<transaction>
		<classname>dinamica.GenericTransaction</classname>
		<validator>false</validator>
		<transaction>false</transaction>
		<jdbc-log>false</jdbc-log>
		<recordset id="query.sql" source="session" scope="transaction" />

	</transaction>

	<output>
		<classname>dinamica.PDFGenericReport</classname>
	</output>
	
	<pdf-title>${lbl:b_control_header_order}</pdf-title>
	<pdf-logo url='/images/logo-simone-pdf.png' scale='100' />
	<pdf-file-name>${lbl:b_control_header_order}.pdf</pdf-file-name>

	<pdf-report pageSize="letter" rotate="false" footer="true" header="true">
		<record recordset='query.sql' title='${lbl:b_control_header_order}' width='60' spacingBefore='40'>
			<col name='smn_documento_id' title='${lbl:b_document}' align='left' format='######' />
			<col name='pca_numero_pedido' title='${lbl:b_order_number}' align='left' format='######' />
			<col name='smn_mov_caja_cabecera_id' title='${lbl:b_movement_caj}' align='left' format='######' />
			<col name='smn_oferta_id' title='${lbl:b_offer}' align='left' format='######' />
			<col name='smn_cliente_id' title='${lbl:b_customer}' align='left' format='######' />
			<col name='smn_usuario_rf' title='${lbl:b_user}' align='left' format='######' />
			<col name='pca_descripcion' title='${lbl:b_description}' align='left' />
			<col name='pca_fecha_requerida' title='${lbl:b_required_date}' align='left' format='dd-MM-yyyy' />
			<col name='smn_entidad_rf' title='${lbl:b_entities}' align='left' format='######' />
			<col name='smn_sucursal_rf' title='${lbl:b_subsidiaries}' align='left' format='######' />
			<col name='smn_area_servicio_rf' title='${lbl:b_area_service}' align='left' format='######' />
			<col name='smn_unidad_servicio_rf' title='${lbl:b_units_service}' align='left' format='######' />
			<col name='smn_almacen_rf' title='${lbl:b_store_code}' align='left' format='######' />
			<col name='smn_centro_costo_rf' title='${lbl:b_cost_lefts}' align='left' format='######' />
			<col name='pca_estatus' title='${lbl:b_status}' align='left' />
			<col name='pca_fecha_registro' title='${lbl:b_store_date}' align='left' format='dd-MM-yyyy' />
		</record>


	</pdf-report>
</config>
