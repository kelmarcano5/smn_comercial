<?xml version='1.0' encoding='ISO-8859-1'?>
<config nodb="true">

	<summary>
		Exportar documento excel directo al browser
	</summary>

	<log>false</log>

	<transaction>
		<classname>dinamica.GenericTransaction</classname>
		<validator>false</validator>
		<transaction>false</transaction>
		<jdbc-log>false</jdbc-log>
		<recordset id="query.sql" source="session" scope="transaction" />
	</transaction>

	<output>
		<classname>domain.ExcelReportOutput</classname>
	</output>
	
	<excel-logo scale="60" url="/images/logo-simone-pdf.png"/>
	<title cellPosY="1" cellPosX="5" cellStep="0" name="${lbl:b_plan_venta}"/>
	
	<excel 
		recordset='query.sql' 
		sheetname='${lbl:b_plan_venta}' 
		filename='${lbl:b_plan_venta}.xls' 
		date-format='dd-MM-yyyy'
		header-background='true'>
		<col id='smn_entidades_rf' label='${lbl:b_item}' />
		<col id='smn_almacen_rf' label='${lbl:b_store_code}' />
		<col id='smn_documento_id' label='${lbl:b_document}' />
		<col id='plv_fecha' label='${lbl:b_fecha}' />
		<col id='plv_cantidad_rf' label='${lbl:b_quantity}' />
		<col id='plv_precio_rf' label='${lbl:b_price}' />
		<col id='plv_monto_rf' label='${lbl:b_amount}' />
		<col id='mon_nombre' label='${lbl:b_coins}' />
		<col id='plv_monto_ma_rf' label='${lbl:b_amount_ma}' />
		<col id='plv_fecha_registro' label='${lbl:b_store_date}' />

	</excel>

</config>
