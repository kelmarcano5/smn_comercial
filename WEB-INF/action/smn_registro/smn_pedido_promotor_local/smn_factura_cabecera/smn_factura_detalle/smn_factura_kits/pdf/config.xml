<?xml version='1.0' encoding='ISO-8859-1'?>
<config nodb="true">

	<summary>
		Generar reporte generico PDF
	</summary>

	<log>false</log>

	<transaction>
		<classname>dinamica.GenericTransaction</classname>
		<validator>false</validator>
		<transaction>false</transaction>
		<jdbc-log>false</jdbc-log>
		<recordset id="query-smnfacturakits.sql" source="session" scope="transaction" />
	</transaction>

	<output>
		<classname>dinamica.PDFGenericReport</classname>
	</output>
	
	<pdf-title>${lbl:b_kits_bill}</pdf-title>
	<pdf-logo url='/images/logo-simone-pdf.png' scale='100' />
	<pdf-file-name>${lbl:b_kits_bill}.pdf</pdf-file-name>

	<pdf-report 
		pageSize="letter" 
		rotate="false"
		footer="false" 
		header="true">
		<record recordset='query-smnfacturakits.sql' width='100' spacingBefore='40'>
			<col name='fde_naturaleza_pl0' title='${lbl:b_detail_bill}' width='6' align='left' />
			<col name='smn_item_origen_rf' title='${lbl:b_item_origin}' width='6' align='left' format='######' />
			<col name='smn_item_destino_rf' title='${lbl:b_item_destiny}' width='6' align='left' format='######' />
			<col name='fki_cantidad' title='${lbl:b_quantity}' width='6' align='left' format='######' />
			<col name='fki_precio_ml' title='${lbl:b_price}' width='6' align='left' format='#,###,##0.00' />
			<col name='fki_monto_ml' title='${lbl:b_amount}' width='6' align='left' format='#,###,##0.00' />
			<col name='smn_moneda_rf' title='${lbl:b_coins}' width='6' align='left' format='######' />
			<col name='smn_tasa_rf' title='${lbl:b_exchange_rate}' width='6' align='left' format='######' />
			<col name='smn_precio_ma_rf' title='${lbl:b_price_ma}' width='6' align='left' format='#,###,##0.00' />
			<col name='fki_monto_ma_rf' title='${lbl:b_amount_ma}' width='6' align='left' format='#,###,##0.00' />
			<col name='fki_estatus' title='${lbl:b_status}' width='6' align='left' />
			<col name='fki_idioma' title='${lbl:s_profile_lang}' width='6' align='left' />
			<col name='fki_usuario' title='${lbl:b_users}' width='6' align='left' />
			<col name='fki_fecha_registro' title='${lbl:b_store_date}' width='6' align='left' format='dd-MM-yyyy' />
			<col name='fki_hora' title='${lbl:s_loginhist_col2}' width='6' align='left' />

		</record>

	</pdf-report>
</config>
