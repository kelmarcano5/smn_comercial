<?xml version='1.0' encoding='ISO-8859-1'?>
<config nodb="true">

	<summary>
		Generar reporte generico PDF
	</summary>

	<log>false</log>

	<transaction>
		<classname>dinamica.GenericTransaction</classname>
		<validator>false</validator>
		<transaction>false</transaction>
		<jdbc-log>false</jdbc-log>
		<recordset id="query-smnfacturacomponentes.sql" source="session" scope="transaction" />
	</transaction>

	<output>
		<classname>dinamica.PDFGenericReport</classname>
	</output>
	
	<pdf-title>${lbl:b_components_bill}</pdf-title>
	<pdf-logo url='/images/logo-simone-pdf.png' scale='100' />
	<pdf-file-name>${lbl:b_components_bill}.pdf</pdf-file-name>

	<pdf-report 
		pageSize="letter" 
		rotate="false"
		footer="false" 
		header="true">
		<record recordset='query-smnfacturacomponentes.sql' width='100' spacingBefore='40'>
			<col name='fde_naturaleza_pl0' title='${lbl:b_detail_bill}' width='7' align='left' />
			<col name='smn_grupo_componente_rf' title='${lbl:b_component_group}' width='7' align='left' format='######' />
			<col name='smn_componente_rf' title='${lbl:b_component}' width='7' align='left' format='######' />
			<col name='fco_es_prestador_servicio' title='${lbl:b_is_services_prestator}' width='7' align='left' />
			<col name='smn_clase_auxiliar_rf' title='${lbl:b_class_auxiliary}' width='7' align='left' format='######' />
			<col name='smn_auxiliar_rf' title='${lbl:b_auxiliar}' width='7' align='left' format='######' />
			<col name='smn_item_rf' title='${lbl:b_item}' width='7' align='left' format='######' />
			<col name='smn_servicio_rf' title='${lbl:b_services}' width='7' align='left' format='######' />
			<col name='fco_forma_calculo' title='${lbl:b_calculus}' width='7' align='left' format='######' />
			<col name='fco_cantidad' title='${lbl:b_quantity}' width='7' align='left' format='######' />
			<col name='smn_precio_ml_rf' title='${lbl:b_price}' width='7' align='left' format='#,###,##0.00' />
			<col name='fco_monto_ml' title='${lbl:b_amount}' width='7' align='left' format='#,###,##0.00' />
			<col name='fco_estatus' title='${lbl:b_status}' width='7' align='left' />
			<col name='fco_fecha_registro' title='${lbl:b_store_date}' width='7' align='left' format='dd-MM-yyyy' />

		</record>

	</pdf-report>
</config>
