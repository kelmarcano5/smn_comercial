<?xml version='1.0' encoding='ISO-8859-1'?>
<config nodb="true">

	<summary>
		Generar reporte generico PDF
	</summary>

	<log>false</log>

	<transaction>
		<classname>dinamica.GenericTransaction</classname>
		<validator>false</validator>
		<transaction>false</transaction>
		<jdbc-log>false</jdbc-log>
		<recordset id="query.sql" source="session" scope="transaction" />

	</transaction>

	<output>
		<classname>dinamica.PDFGenericReport</classname>
	</output>
	
	<pdf-title>${lbl:b_order_health}</pdf-title>
	<pdf-logo url='/images/logo-simone-pdf.png' scale='100' />
	<pdf-file-name>${lbl:b_order_health}.pdf</pdf-file-name>

	<pdf-report pageSize="letter" rotate="false" footer="true" header="true">
		<record recordset='query.sql' title='${lbl:b_order_health}' width='60' spacingBefore='40'>
			<col name='smn_pedido_cabecera_id' title='${lbl:b_header_order}' align='left' format='######' />
			<col name='smn_mov_caja_cabecera_id' title='${lbl:b_movement_caj}' align='left' format='######' />
			<col name='smn_pagador_clase_rf' title='${lbl:b_class_auxiliary}' align='left' format='######' />
			<col name='smn_rel_punto_venta_pago_rf' title='${lbl:b_rel_point_of_sale_order}' align='left' format='######' />
			<col name='smn_forma_pago_rf' title='${lbl:b_way_to_pay}' align='left' format='######' />
			<col name='ppv_numero_documento_forma_pago' title='${lbl:b_number_doc_form_pay}' align='left' format='######' />
			<col name='ppv_numero_autorizacion' title='${lbl:b_number_autorization}' align='left' format='######' />
			<col name='ppv_documento_identidad_pagador' title='${lbl:b_document_identity}' align='left' />
			<col name='ppv_nombre_pagador' title='${lbl:b_paying_name}' align='left' />
			<col name='ppv_monto_pagar_ml' title='${lbl:b_amount_payment_ml}' align='left' format='#,###,##0.00' />
			<col name='ppv_monto_pago_ml' title='${lbl:b_amount_pay_ml}' align='left' format='#,###,##0.00' />
			<col name='ppv_monto_devuelto_ml' title='${lbl:b_amount_revers_ml}' align='left' format='#,###,##0.00' />
			<col name='ppv_monto_pagar_ma' title='${lbl:b_amount_payment_ma}' align='left' format='#,###,##0.00' />
			<col name='ppv_monto_pago_ma' title='${lbl:b_amount_payment_ma}' align='left' format='#,###,##0.00' />
			<col name='ppv_monto_devuelto_ma' title='${lbl:b_amount_revers_ma}' align='left' format='#,###,##0.00' />
			<col name='smn_moneda_rf' title='${lbl:b_coins}' align='left' format='######' />
			<col name='smn_tasa_rf' title='${lbl:b_exchange_rate}' align='left' format='######' />
			<col name='ppv_observacion' title='${lbl:b_observation}' align='left' />
			<col name='ppv_estatus' title='${lbl:b_status}' align='left' />
			<col name='ppv_fecha_registro' title='${lbl:b_store_date}' align='left' format='dd-MM-yyyy' />
		</record>


	</pdf-report>
</config>
