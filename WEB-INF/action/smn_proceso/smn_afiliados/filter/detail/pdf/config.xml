<?xml version='1.0' encoding='ISO-8859-1'?>
<config nodb="true">

	<summary>
		Generar reporte generico PDF
	</summary>

	<log>false</log>

	<transaction>
		<classname>dinamica.GenericTransaction</classname>
		<validator>false</validator>
		<transaction>false</transaction>
		<jdbc-log>false</jdbc-log>
		<recordset id="query.sql" source="session" scope="transaction" />

	</transaction>

	<output>
		<classname>dinamica.PDFGenericReport</classname>
	</output>
	
	<pdf-title>${lbl:b_afiliate}</pdf-title>
	<pdf-logo url='/images/logo-simone-pdf.png' scale='100' />
	<pdf-file-name>${lbl:b_afiliate}.pdf</pdf-file-name>

	<pdf-report pageSize="letter" rotate="false" footer="true" header="true">
		<record recordset='query.sql' title='${lbl:b_afiliate}' width='60' spacingBefore='40'>
			<col name='aux_descripcion' title='${lbl:b_auxiliary}' align='left'  />
			<col name='afi_fecha_inicio' title='${lbl:b_date_init}' align='left' format='dd-MM-yyyy' />
			<col name='afi_fecha_final' title='${lbl:b_date_end}' align='left' format='dd-MM-yyyy' />
			<col name='afi_fecha_desafiliacion' title='${lbl:b_date_desafiliate}' align='left' format='dd-MM-yyyy' />
			<col name='smn_rol_id' title='${lbl:b_rol}' align='left'  />
			<col name='smn_servicio_id' title='${lbl:b_services}' align='left'  />
			<col name='afi_estatus' title='${lbl:b_status}' align='left' />
			<col name='afi_fecha_registro' title='${lbl:b_store_date}' align='left' format='dd-MM-yyyy' />
		</record>


	</pdf-report>
</config>
