<?xml version='1.0' encoding='ISO-8859-1'?>
<config nodb="true">

	<summary>
		Generar reporte generico PDF
	</summary>

	<log>false</log>

	<transaction>
		<classname>dinamica.GenericTransaction</classname>
		<validator>false</validator>
		<transaction>false</transaction>
		<jdbc-log>false</jdbc-log>
		<recordset id="query-smnpedidoimpdeduccdetalle.sql" source="session" scope="transaction" />
		<recordset id="filter.params" source="session" scope="transaction" />
	</transaction>

	<output>
		<classname>dinamica.PDFGenericReport</classname>
	</output>
	
	<pdf-title>${lbl:b_detail_order_deduction_tax}</pdf-title>
	<pdf-logo url='/images/logo-simone-pdf.png' scale='100' align="left" />
	<pdf-file-name>${lbl:b_detail_order_deduction_tax}.pdf</pdf-file-name>

	<pdf-report pageSize="letter" rotate="false" footer="true" header="true">
		<record recordset='filter.params' title='${lbl:b_filter_find}' noFilterMsg='-- ${lbl:b_all_message} --' width='55' spacingBefore='15'>
			<col name='smn_pedido_detalle_id_name' title='${lbl:b_control_header_order_detail}'  align='left' />
			<col name='pid_fecha_registro_ini' title='${lbl:b_store_date}'  format='dd-MM-yyyy' align='left' />
			<col name='pid_fecha_registro_fin' title='${lbl:b_store_date}'  format='dd-MM-yyyy' align='left' />

		</record>
		<record recordset='query-smnpedidoimpdeduccdetalle.sql' width='100' spacingBefore='10'>
			<col name='smn_pedido_detalle_id' title='${lbl:b_control_header_order_detail}' width='14' align='left' format='######' />
			<col name='smn_codigos_impuestos_rf' title='${lbl:b_tax}' width='14' align='left' format='######' />
			<col name='pid_porcentaje_impuesto' title='${lbl:b_tax_porcentaje}' width='14' align='left' format='#,###,##0.00' />
			<col name='pid_monto_sustraendo' title='${lbl:b_amount_less}' width='14' align='left' format='#,###,##0.00' />
			<col name='pid_monto_impuesto' title='${lbl:b_amount_tax}' width='14' align='left' format='#,###,##0.00' />
			<col name='smn_descuentos_retenciones_rf' title='${lbl:b_retencion_discount}' width='14' align='left' format='######' />
			<col name='pid_fecha_registro' title='${lbl:b_store_date}' width='14' align='left' format='dd-MM-yyyy' />

		</record>

	</pdf-report>
</config>
