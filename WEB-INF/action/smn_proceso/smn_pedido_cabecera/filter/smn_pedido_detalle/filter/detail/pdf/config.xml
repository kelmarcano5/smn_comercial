<?xml version='1.0' encoding='ISO-8859-1'?>
<config nodb="true">

	<summary>
		Generar reporte generico PDF
	</summary>

	<log>false</log>

	<transaction>
		<classname>dinamica.GenericTransaction</classname>
		<validator>false</validator>
		<transaction>false</transaction>
		<jdbc-log>false</jdbc-log>
		<recordset id="query.sql" source="session" scope="transaction" />

	</transaction>

	<output>
		<classname>dinamica.PDFGenericReport</classname>
	</output>
	
	<pdf-title>${lbl:b_control_header_order_detail}</pdf-title>
	<pdf-logo url='/images/logo-simone-pdf.png' scale='100' />
	<pdf-file-name>${lbl:b_control_header_order_detail}.pdf</pdf-file-name>

	<pdf-report pageSize="letter" rotate="false" footer="true" header="true">
		<record recordset='query.sql' title='${lbl:b_control_header_order_detail}' width='60' spacingBefore='40'>
			<col name='smn_pedido_cabecera_id' title='${lbl:b_control_header_order}' align='left' format='######' />
			<col name='pde_naturaleza' title='${lbl:b_nature}' align='left' />
			<col name='pde_cantidad_oferta' title='${lbl:b_quantity_offer}' align='left' format='######' />
			<col name='pde_cantidad_pedido' title='${lbl:b_quantity_order}' align='left' format='######' />
			<col name='pde_cantidad_aprobada' title='${lbl:b_quantity_aprob}' align='left' format='######' />
			<col name='pde_precio' title='${lbl:b_price}' align='left' format='#,###,##0.00' />
			<col name='pde_monto' title='${lbl:b_amount}' align='left' format='#,###,##0.00' />
			<col name='pde_fecha_registro' title='${lbl:b_store_date}' align='left' format='dd-MM-yyyy' />
		</record>


	</pdf-report>
</config>
