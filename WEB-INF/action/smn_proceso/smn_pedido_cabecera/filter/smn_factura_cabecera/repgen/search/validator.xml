<?xml version='1.0' encoding='ISO-8859-1'?>
<validator id='repgen.filter' onerror='/action/error/validation/ajax'>

	<parameter id='fdesde' type='date' required='false' label='Fecha desde'/>
	<parameter id='fhasta' type='date' required='false' label='Fecha hasta'/>
	
	<parameter id='smn_documento_id' type='integer' required='false' label='${lbl:b_document}' maxlen='10'/>
	<parameter id='fca_numero_documento_id' type='integer' required='false' label='${lbl:b_document_number}' maxlen='10'/>
	<parameter id='smn_entidad_rf' type='integer' required='false' label='${lbl:b_entities}' maxlen='10'/>
	<parameter id='smn_sucursal_rf' type='integer' required='false' label='${lbl:b_subsidiaries}' maxlen='10'/>
	<parameter id='smn_pedido_cabecera_id' type='integer' required='false' label='${lbl:b_control_header_order}' maxlen='10'/>
	<parameter id='smn_oferta_id' type='integer' required='false' label='${lbl:b_offer}' maxlen='10'/>
	<parameter id='smn_caja_rf' type='integer' required='false' label='${lbl:b_box}' maxlen='10'/>
	<parameter id='smn_cliente_id' type='integer' required='false' label='${lbl:b_customer}' maxlen='10'/>
	<parameter id='smn_control_serie_fiscal_id' type='integer' required='false' label='${lbl:b_control_serie_fiscal}' maxlen='10'/>
	<parameter id='fca_numero_control_fiscal' type='integer' required='false' label='${lbl:b_document_number}' maxlen='10'/>
	<parameter id='fca_rif' type='varchar' required='false' label='${lbl:b_rif}' maxlen='50'/>
	<parameter id='fca_direccion_fiscal' type='varchar' required='false' label='${lbl:b_adress_fiscal}' maxlen='200'/>
	<parameter id='fca_monto_factura_ml' type='double' required='false' label='${lbl:b_amount_bill_ml}' maxlen='10'/>
	<parameter id='fca_monto_impuesto_ml' type='double' required='false' label='${lbl:b_amount_tax}' maxlen='10'/>
	<parameter id='fca_monto_descuento_ml' type='double' required='false' label='${lbl:b_amount_discount}' maxlen='10'/>
	<parameter id='fca_monto_bonificacion_ml' type='double' required='false' label='${lbl:b_amount_bonification}' maxlen='10'/>
	<parameter id='fca_monto_neto_ml' type='double' required='false' label='${lbl:b_amount_net}' maxlen='10'/>
	<parameter id='smn_moneda_rf' type='integer' required='false' label='${lbl:b_coins}' maxlen='10'/>
	<parameter id='smn_tasa_rf' type='integer' required='false' label='${lbl:b_exchange_rate}' maxlen='10'/>
	<parameter id='fca_monto_factura_ma' type='double' required='false' label='${lbl:b_amount_bill_ma}' maxlen='10'/>
	<parameter id='fca_monto_impuesto_ma' type='double' required='false' label='${lbl:b_amount_tax_ma}' maxlen='10'/>
	<parameter id='fca_monto_descuento_ma' type='double' required='false' label='${lbl:b_amount_discount_ma}' maxlen='10'/>
	<parameter id='fca_monto_bonificacion_ma' type='double' required='false' label='${lbl:b_amount_bonification_ma}' maxlen='10'/>
	<parameter id='fca_monto_neto_ma' type='double' required='false' label='${lbl:b_amount_net_ma}' maxlen='10'/>
	<parameter id='fca_estatus_financiero' type='varchar' required='false' label='${lbl:b_financial_status}' maxlen='2'/>
	<parameter id='fca_estatus_proceso' type='varchar' required='false' label='${lbl:b_process_status}' maxlen='2'/>

	<custom-validator
		classname='dinamica.validators.SQLPatternTransformer'
		parameter='fca_rif'
		rule='contains' />

	<custom-validator
		classname='dinamica.validators.SQLPatternTransformer'
		parameter='fca_direccion_fiscal'
		rule='contains' />

	<custom-validator
		classname='dinamica.validators.SQLPatternTransformer'
		parameter='fca_estatus_financiero'
		rule='contains' />

	<custom-validator
		classname='dinamica.validators.SQLPatternTransformer'
		parameter='fca_estatus_proceso'
		rule='contains' />



	<custom-validator
			classname='dinamica.validators.ArrayNotEmptyValidator'
			on-error-label='Seleccione al menos un campo para la generación del reporte.'
			parameter-name='field_id' 
			id='field_id' />

	<custom-validator 
			classname='dinamica.validators.ArrayToRecordset'
			paramName='field_id' 
			recordsetId='fields' 
			colName='field_id' 
			colType='integer' />
				
</validator>
