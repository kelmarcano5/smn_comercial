<?xml version='1.0' encoding='ISO-8859-1'?>
<config nodb="true">

	<summary>
		Generar reporte generico PDF
	</summary>

	<log>false</log>

	<transaction>
		<classname>dinamica.GenericTransaction</classname>
		<validator>false</validator>
		<transaction>false</transaction>
		<jdbc-log>false</jdbc-log>
		<recordset id="query-smnpedidodetalle.sql" source="session" scope="transaction" />
		<recordset id="filter.params" source="session" scope="transaction" />
	</transaction>

	<output>
		<classname>dinamica.PDFGenericReport</classname>
	</output>
	
	<pdf-title>${lbl:b_control_header_order_detail}</pdf-title>
	<pdf-logo url='/images/logo-simone-pdf.png' scale='100' align="left" />
	<pdf-file-name>${lbl:b_control_header_order_detail}.pdf</pdf-file-name>

	<pdf-report pageSize="letter" rotate="false" footer="true" header="true">
		<record recordset='filter.params' title='${lbl:b_filter_find}' noFilterMsg='-- ${lbl:b_all_message} --' width='55' spacingBefore='15'>
			<col name='smn_pedido_cabecera_id' title='${lbl:b_control_header_order}'  format='######' align='left' />
			<col name='pde_naturaleza' title='${lbl:b_nature}'  align='left' />
			<col name='smn_servicios_rf' title='${lbl:b_services}'  format='######' align='left' />
			<col name='smn_item_rf' title='${lbl:b_item}'  format='######' align='left' />
			<col name='smn_activo_fijo_rf' title='${lbl:b_actfijo}'  format='######' align='left' />
			<col name='pde_fecha_registro_ini' title='${lbl:b_store_date}'  format='dd-MM-yyyy' align='left' />
			<col name='pde_fecha_registro_fin' title='${lbl:b_store_date}'  format='dd-MM-yyyy' align='left' />

		</record>
		<record recordset='query-smnpedidodetalle.sql' width='100' spacingBefore='10'>
			<col name='smn_pedido_cabecera_id' title='${lbl:b_control_header_order}' width='12' align='left' format='######' />
			<col name='pde_naturaleza' title='${lbl:b_nature}' width='12' align='left' />
			<col name='pde_cantidad_oferta' title='${lbl:b_quantity_offer}' width='12' align='left' format='######' />
			<col name='pde_cantidad_pedido' title='${lbl:b_quantity_order}' width='12' align='left' format='######' />
			<col name='pde_cantidad_aprobada' title='${lbl:b_quantity_aprob}' width='12' align='left' format='######' />
			<col name='pde_precio' title='${lbl:b_price}' width='12' align='left' format='#,###,##0.00' />
			<col name='pde_monto' title='${lbl:b_amount}' width='12' align='left' format='#,###,##0.00' />
			<col name='pde_fecha_registro' title='${lbl:b_store_date}' width='12' align='left' format='dd-MM-yyyy' />

		</record>

	</pdf-report>
</config>
