<?xml version='1.0' encoding='ISO-8859-1'?>
<config nodb="true">

	<summary>
		Generar reporte generico PDF
	</summary>

	<log>false</log>

	<transaction>
		<classname>dinamica.GenericTransaction</classname>
		<validator>false</validator>
		<transaction>false</transaction>
		<jdbc-log>false</jdbc-log>
		<recordset id="query-smncontrolcupo.sql" source="session" scope="transaction" />
	</transaction>

	<output>
		<classname>dinamica.PDFGenericReport</classname>
	</output>
	
	<pdf-title>${lbl:b_quota_control}</pdf-title>
	<pdf-logo url='/images/logo-simone-pdf.png' scale='100' />
	<pdf-file-name>${lbl:b_quota_control}.pdf</pdf-file-name>

	<pdf-report 
		pageSize="letter" 
		rotate="false"
		footer="false" 
		header="true">
		<record recordset='query-smncontrolcupo.sql' width='100' spacingBefore='40'>
			<col name='smn_evento_id' title='${lbl:b_event}' width='16' align='left' format='######' />
			<col name='ccu_cupo' title='${lbl:b_quota}' width='16' align='left' format='######' />
			<col name='ccu_reservas' title='${lbl:b_booking}' width='16' align='left' format='######' />
			<col name='ccu_saldo' title='${lbl:b_balance}' width='16' align='left' format='######' />
			<col name='ccu_estatus_combo' title='${lbl:b_estatus}' width='16' align='left' />
			<col name='ccu_fecha_registro' title='${lbl:b_store_date}' width='16' align='left' format='dd-MM-yyyy' />

		</record>

	</pdf-report>
</config>
