<?xml version='1.0' encoding='ISO-8859-1'?>
<validator id='repgen.filter' onerror='/action/error/validation/ajax'>

	<parameter id='fdesde' type='date' required='false' label='Fecha desde'/>
	<parameter id='fhasta' type='date' required='false' label='Fecha hasta'/>
	
	<parameter id='smn_evento_id' type='integer' required='false' label='${lbl:b_event}' maxlen='10'/>
	<parameter id='ccu_cupo' type='integer' required='false' label='${lbl:b_quota}' maxlen='10'/>
	<parameter id='ccu_reservas' type='integer' required='false' label='${fld:b_booking}' maxlen='10'/>
	<parameter id='ccu_saldo' type='integer' required='false' label='${fld:b_balance}' maxlen='10'/>
	<parameter id='ccu_estatus' type='varchar' required='false' label='${lbl:b_estatus}' maxlen='2'/>

	<custom-validator
		classname='dinamica.validators.SQLPatternTransformer'
		parameter='ccu_estatus'
		rule='contains' />



	<custom-validator
			classname='dinamica.validators.ArrayNotEmptyValidator'
			on-error-label='Seleccione al menos un campo para la generación del reporte.'
			parameter-name='field_id' 
			id='field_id' />

	<custom-validator 
			classname='dinamica.validators.ArrayToRecordset'
			paramName='field_id' 
			recordsetId='fields' 
			colName='field_id' 
			colType='integer' />
				
</validator>
