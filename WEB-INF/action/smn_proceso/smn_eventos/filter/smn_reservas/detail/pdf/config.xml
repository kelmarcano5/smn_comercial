<?xml version='1.0' encoding='ISO-8859-1'?>
<config nodb="true">

	<summary>
		Generar reporte generico PDF
	</summary>

	<log>false</log>

	<transaction>
		<classname>dinamica.GenericTransaction</classname>
		<validator>false</validator>
		<transaction>false</transaction>
		<jdbc-log>false</jdbc-log>
		<recordset id="query.sql" source="session" scope="transaction" />

	</transaction>

	<output>
		<classname>dinamica.PDFGenericReport</classname>
	</output>
	
	<pdf-title>${lbl:b_booking}</pdf-title>
	<pdf-logo url='/images/logo-simone-pdf.png' scale='100' />
	<pdf-file-name>${lbl:b_booking}.pdf</pdf-file-name>

	<pdf-report pageSize="letter" rotate="false" footer="true" header="true">
		<record recordset='query.sql' title='${lbl:b_booking}' width='60' spacingBefore='40'>
			<col name='smn_evento_id' title='${fld:b_event}' align='left' format='######' />
			<col name='smn_afiliado_id' title='${lbl:b_afiliate}' align='left' format='######' />
			<col name='smn_relacionado_id' title='${lbl:b_related}' align='left' format='######' />
			<col name='res_cantidad' title='${lbl:b_quantity}' align='left' format='######' />
			<col name='res_estatus' title='${lbl:b_estatus}' align='left' />
			<col name='res_fecha_registro' title='${lbl:b_store_date}' align='left' format='dd-MM-yyyy' />
		</record>


	</pdf-report>
</config>
