<?xml version='1.0' encoding='ISO-8859-1'?>
<config nodb="true">

	<summary>
		Generar reporte generico PDF
	</summary>

	<log>false</log>

	<transaction>
		<classname>dinamica.GenericTransaction</classname>
		<validator>false</validator>
		<transaction>false</transaction>
		<jdbc-log>false</jdbc-log>
		<recordset id="query.sql" source="session" scope="transaction" />

	</transaction>

	<output>
		<classname>dinamica.PDFGenericReport</classname>
	</output>
	
	<pdf-title>${lbl:b_event}</pdf-title>
	<pdf-logo url='/images/logo-simone-pdf.png' scale='100' />
	<pdf-file-name>${lbl:b_event}.pdf</pdf-file-name>

	<pdf-report pageSize="letter" rotate="false" footer="true" header="true">
		<record recordset='query.sql' title='${fld:b_event}' width='60' spacingBefore='40'>
			<col name='eve_codigo' title='${lbl:b_code}' align='left' />
			<col name='eve_descripcion_corta' title='${lbl:b_description_short}' align='left' />
			<col name='eve_descripcion_larga' title='${lbl:b_description_large}' align='left' />
			<col name='smn_servicios_rf' title='${lbl:b_services}' align='left' format='######' />
			<col name='eve_fecha_inicial' title='${lbl:b_date_init}' align='left' format='dd-MM-yyyy' />
			<col name='eve_fecha_final' title='${lbl:b_date_end}' align='left' format='dd-MM-yyyy' />
			<col name='eve_hora_inicial' title='${lbl:b_hour_init}' align='left' />
			<col name='eve_hora_final' title='${lbl:b_hour_end}' align='left' />
			<col name='smn_prestador_servicio_rf' title='${fld:b_service_provider}' align='left' format='######' />
			<col name='smn_clasificacion_abc_rf' title='${lbl:b_abc_clasification}' align='left' format='######' />
			<col name='eve_cupo' title='${lbl:b_quota}' align='left' format='######' />
			<col name='eve_reservas_por_afiliado' title='${lbl:b_reservation_by_affiliation}' align='left' format='######' />
			<col name='eve_estatus' title='${lbl:b_estatus}' align='left' />
			<col name='eve_fecha_registro' title='${lbl:b_store_date}' align='left' format='dd-MM-yyyy' />
		</record>


	</pdf-report>
</config>
