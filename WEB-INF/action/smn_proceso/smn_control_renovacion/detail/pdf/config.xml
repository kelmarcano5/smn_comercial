<?xml version='1.0' encoding='ISO-8859-1'?>
<config nodb="true">

	<summary>
		Generar reporte generico PDF
	</summary>

	<log>false</log>

	<transaction>
		<classname>dinamica.GenericTransaction</classname>
		<validator>false</validator>
		<transaction>false</transaction>
		<jdbc-log>false</jdbc-log>
		<recordset id="query.sql" source="session" scope="transaction" />

	</transaction>

	<output>
		<classname>dinamica.PDFGenericReport</classname>
	</output>
	
	<pdf-title>${lbl:b_control_renovation}</pdf-title>
	<pdf-logo url='/images/logo-simone-pdf.png' scale='100' />
	<pdf-file-name>${lbl:b_control_renovation}.pdf</pdf-file-name>

	<pdf-report pageSize="letter" rotate="false" footer="true" header="true">
		<record recordset='query.sql' title='${lbl:b_control_renovation}' width='60' spacingBefore='40'>
			<col name='smn_afiliado_id' title='${lbl:b_afiliation}' align='left' format='######' />
			<col name='smn_pedido_id' title='${lbl:b_order}' align='left' format='######' />
			<col name='crn_fecha_renovacion' title='${lbl:b_renovation_date}' align='left' format='dd-MM-yyyy' />
			<col name='crn_fecha_vigencia_hasta' title='${lbl:b_date_vigency_end}' align='left' format='dd-MM-yyyy' />
			<col name='crn_estatus_combo' title='${lbl:b_estatus}' align='left' />
			<col name='crn_fecha_registro' title='${lbl:b_store_date}' align='left' format='dd-MM-yyyy' />
		</record>


	</pdf-report>
</config>
