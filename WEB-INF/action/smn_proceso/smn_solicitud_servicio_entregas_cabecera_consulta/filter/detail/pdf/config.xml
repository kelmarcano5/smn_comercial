<?xml version='1.0' encoding='ISO-8859-1'?>
<config nodb="true">

	<summary>
		Generar reporte generico PDF
	</summary>

	<log>false</log>

	<transaction>
		<classname>dinamica.GenericTransaction</classname>
		<validator>false</validator>
		<transaction>false</transaction>
		<jdbc-log>false</jdbc-log>
		<recordset id="query.sql" source="session" scope="transaction" />

	</transaction>

	<output>
		<classname>dinamica.PDFGenericReport</classname>
	</output>
	
	<pdf-title>${lbl:b_header_services_delivery_request}</pdf-title>
	<pdf-logo url='/images/logo-simone-pdf.png' scale='100' />
	<pdf-file-name>${lbl:b_header_services_delivery_request}.pdf</pdf-file-name>

	<pdf-report pageSize="letter" rotate="false" footer="true" header="true">
		<record recordset='query.sql' title='${lbl:b_header_services_delivery_request}' width='60' spacingBefore='40'>
			<col name='sec_origen' title='${lbl:b_origen}' align='left' />
			<col name='smn_documento_id' title='${lbl:b_document}' align='left' format='######' />
			<col name='smn_cliente_rf' title='${lbl:b_customer}' align='left' format='######' />
			<col name='smn_tipo_servicio_rf' title='${lbl:b_type_services}' align='left' format='######' />
			<col name='sec_descripcion' title='${lbl:b_description}' align='left' />
			<col name='sec_direccion_busqueda' title='${lbl:b_address_find}' align='left' />
			<col name='sec_direccion_entrega' title='${lbl:b_address_delivery}' align='left' />
			<col name='sec_fecha_solicitud' title='${lbl:b_store_date}' align='left' format='dd-MM-yyyy' />
			<col name='sec_hora_solicitud' title='${lbl:s_loginhist_col2}' align='left' />
			<col name='sec_hora_inicio_preparacion' title='Hora Inicio Preparacion' align='left' />
			<col name='sec_hora_preparacion' title='Hora Preparacion' align='left' />
			<col name='sec_hora_despacho' title='Hora Despacho' align='left' />
			<col name='sec_tiempo_sug_preparacion' title='${lbl:b_time_sug_prepared}' align='right' />
			<col name='sec_especificacion_servicio' title='${lbl:b_especifications}' align='left' />
			<col name='sec_observacion_servicio' title='${lbl:b_observation}' align='left' />
			<col name='sec_monto_ml' title='${lbl:b_amount}' align='left' format='#,###,##0.00' />
			<col name='smn_moneda_rf' title='${lbl:b_coins}' align='left' format='######' />
			<col name='sec_monto_ma' title='${lbl:b_amount_ma}' align='left' format='#,###,##0.00' />
			<col name='smn_forma_pago_rf' title='${lbl:b_way_to_pay}' align='left' format='######' />
			<col name='sec_monto_pago_efectivo' title='${lbl:b_amount_pay_cash}' align='left' format='#,###,##0.00' />
			<col name='sec_otras_instrucciones' title='${lbl:b_others_instructions}' align='left' />
			<col name='sec_estatus_proceso' title='${lbl:b_estatus_proceso}' align='left' />
			<col name='sec_estatus_financiera' title='${lbl:b_estatus_financiero}' align='left' />
			<col name='sec_idioma' title='${lbl:s_profile_lang}' align='left' />
			<col name='sec_usuario' title='${lbl:b_users}' align='left' />
			<col name='sec_fecha_registro' title='${lbl:b_store_date}' align='left' format='dd-MM-yyyy' />
			<col name='sec_hora' title='${lbl:s_loginhist_col2}' align='left' />
		</record>


	</pdf-report>
</config>
