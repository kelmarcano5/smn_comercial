<?xml version='1.0' encoding='ISO-8859-1'?>
<config nodb="true">

	<summary>
		Generar reporte generico PDF
	</summary>

	<log>false</log>

	<transaction>
		<classname>dinamica.GenericTransaction</classname>
		<validator>false</validator>
		<transaction>false</transaction>
		<jdbc-log>false</jdbc-log>
		<recordset id="query-smnsolicitudservicioentregascabecera.sql" source="session" scope="transaction" />
		<recordset id="filter.params" source="session" scope="transaction" />
	</transaction>

	<output>
		<classname>dinamica.PDFGenericReport</classname>
	</output>
	
	<pdf-title>${lbl:b_header_services_delivery_request}</pdf-title>
	<pdf-logo url='/images/logo-simone-pdf.png' scale='100' align="left" />
	<pdf-file-name>${lbl:b_header_services_delivery_request}.pdf</pdf-file-name>

	<pdf-report pageSize="letter" rotate="false" footer="true" header="true">
		<record recordset='filter.params' title='${lbl:b_filter_find}' noFilterMsg='-- ${lbl:b_all_message} --' width='55' spacingBefore='15'>
			<col name='sec_origen' title='${lbl:b_origen}'  align='left' />
			<col name='smn_documento_id' title='${lbl:b_document}'  format='######' align='left' />
			<col name='smn_cliente_rf' title='${lbl:b_customer}'  format='######' align='left' />
			<col name='smn_tipo_servicio_rf' title='${lbl:b_type_services}'  format='######' align='left' />
			<col name='sec_fecha_registro_ini' title='${lbl:b_store_date}'  format='dd-MM-yyyy' align='left' />
			<col name='sec_fecha_registro_fin' title='${lbl:b_store_date}'  format='dd-MM-yyyy' align='left' />

		</record>
		<record recordset='query-smnsolicitudservicioentregascabecera.sql' width='100' spacingBefore='10'>
			<col name='sec_origen' title='${lbl:b_origen}' width='12' align='left' />
			<col name='smn_documento_id' title='${lbl:b_document}' width='12' align='left' format='######' />
			<col name='smn_cliente_rf' title='${lbl:b_customer}' width='12' align='left' format='######' />
			<col name='smn_tipo_servicio_rf' title='${lbl:b_type_services}' width='12' align='left' format='######' />
			<col name='sec_descripcion' title='${lbl:b_description}' width='12' align='left' />
			<col name='sec_estatus_proceso' title='${lbl:b_estatus_proceso}' width='12' align='left' />
			<col name='sec_estatus_financiera' title='${lbl:b_estatus_financiero}' width='12' align='left' />
			<col name='sec_fecha_registro' title='${lbl:b_store_date}' width='12' align='left' format='dd-MM-yyyy' />

		</record>

	</pdf-report>
</config>
