<?xml version='1.0' encoding='ISO-8859-1'?>
<config nodb="true">

	<summary>
		Generar reporte generico PDF
	</summary>

	<log>false</log>

	<transaction>
		<classname>dinamica.GenericTransaction</classname>
		<validator>false</validator>
		<transaction>false</transaction>
		<jdbc-log>false</jdbc-log>
		<recordset id="query-smnpagopuntoventa.sql" source="session" scope="transaction" />
	</transaction>

	<output>
		<classname>dinamica.PDFGenericReport</classname>
	</output>
	
	<pdf-title>${lbl:b_point_of_sale_order_rest}</pdf-title>
	<pdf-logo url='/images/logo-simone-pdf.png' scale='100' />
	<pdf-file-name>${lbl:b_point_of_sale_order_rest}.pdf</pdf-file-name>

	<pdf-report 
		pageSize="letter" 
		rotate="false"
		footer="false" 
		header="true">
		<record recordset='query-smnpagopuntoventa.sql' width='100' spacingBefore='40'>
			<col name='smn_pedido_cabecera_id' title='${lbl:b_header_order}' width='9' align='left' format='######' />
			<col name='smn_mov_caja_cabecera_id' title='${lbl:b_movement_caj}' width='9' align='left' format='######' />
			<col name='ppv_numero_documento_forma_pago' title='${lbl:b_number_doc_form_pay}' width='9' align='left' format='######' />
			<col name='ppv_numero_autorizacion' title='${lbl:b_number_autorization}' width='9' align='left' format='######' />
			<col name='ppv_documento_identidad_pagador' title='${lbl:b_document_identity}' width='9' align='left' />
			<col name='ppv_nombre_pagador' title='${lbl:b_paying_name}' width='9' align='left' />
			<col name='ppv_monto_pagar_ml' title='${lbl:b_amount_payment_ml}' width='9' align='left' format='#,###,##0.00' />
			<col name='ppv_monto_pago_ml' title='${lbl:b_amount_pay_ml}' width='9' align='left' format='#,###,##0.00' />
			<col name='ppv_monto_devuelto_ml' title='${lbl:b_amount_revers_ml}' width='9' align='left' format='#,###,##0.00' />
			<col name='ppv_estatus' title='${lbl:b_status}' width='9' align='left' />
			<col name='ppv_fecha_registro' title='${lbl:b_store_date}' width='9' align='left' format='dd-MM-yyyy' />

		</record>

	</pdf-report>
</config>
