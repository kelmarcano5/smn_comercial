<?xml version='1.0' encoding='ISO-8859-1'?>
<config>

	<summary>
		Insertar registro 
	</summary>

	<log>false</log>

	<!--soporte de auditoria-->
	<audit>
		<!--de donde saca los datos, por defecto es "_request"-->
		<recordset></recordset>
		<!--que campos extrae para el registro descriptivo-->
		<cols>
			<colname>smn_pedido_cabecera_id</colname>
			<colname>smn_mov_caja_cabecera_id</colname>
			<colname>smn_pagador_clase_rf</colname>
			<colname>smn_rel_punto_venta_pago_rf</colname>
			<colname>smn_forma_pago_rf</colname>
			<colname>ppv_numero_documento_forma_pago</colname>
			<colname>ppv_numero_autorizacion</colname>
			<colname>ppv_documento_identidad_pagador</colname>
			<colname>ppv_nombre_pagador</colname>
			<colname>ppv_monto_pagar_ml</colname>
			<colname>ppv_monto_pago_ml</colname>
			<colname>ppv_monto_devuelto_ml</colname>
			<colname>ppv_monto_pagar_ma</colname>
			<colname>ppv_monto_pago_ma</colname>
			<colname>ppv_monto_devuelto_ma</colname>
			<colname>smn_moneda_rf</colname>
			<colname>smn_tasa_rf</colname>
			<colname>ppv_observacion</colname>
			<colname>ppv_estatus</colname>
		
		</cols>
		<table>smn_comercial.smn_pago_punto_venta</table>
		<oper>AÑADIR</oper>
		<area>Carga de datos</area>
		<!--
			query para obtener el ID generado o nombre de 
			la columna que contiene el pkey, si es query, 
			el alias del campo debe ser "id"
		-->
		<pkey>select ${seq:currval@smn_comercial.seq_smn_pago_punto_venta} as id</pkey>
	</audit>

	<transaction>
		<classname>dinamica.audit.AuditableTransaction</classname>
		<validator>true</validator>
		<transaction>true</transaction>
		<jdbc-log>false</jdbc-log>
		<recordset id="nextval.sql" source="sql" scope="transaction" />
	</transaction>

	<query>insert.sql</query>

	<output>
		<classname>dinamica.GenericOutput</classname>
		<template>script.js</template>
		<set-http-headers>true</set-http-headers>
		<content-type>text/javascript</content-type>
		<expiration>0</expiration>
		<print mode="form" recordset="_request" />
		<print mode="form" recordset="nextval.sql" />
	</output>
	
	<!-- Envio de email declarativo -->
	<mail enabled="false">
		<subject>Subject</subject>
		<mail-to>martin.cordova@gmail.com</mail-to>
		<body>body.txt</body>
	</mail>

</config>
