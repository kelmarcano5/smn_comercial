<?xml version='1.0' encoding='ISO-8859-1'?>
<config nodb="true">

	<summary>
		Generar reporte generico PDF
	</summary>

	<log>false</log>

	<transaction>
		<classname>dinamica.GenericTransaction</classname>
		<validator>false</validator>
		<transaction>false</transaction>
		<jdbc-log>false</jdbc-log>
		<recordset id="query-smnareainteres.sql" source="session" scope="transaction" />
	</transaction>

	<output>
		<classname>dinamica.PDFGenericReport</classname>
	</output>
	
	<pdf-title>${lbl:b_areas_interes}</pdf-title>
	<pdf-logo url='/images/logo-simone-pdf.png' scale='100' />
	<pdf-file-name>${lbl:b_areas_interes}.pdf</pdf-file-name>

	<pdf-report 
		pageSize="letter" 
		rotate="false"
		footer="false" 
		header="true">
		<record recordset='query-smnareainteres.sql' width='100' spacingBefore='40'>
			<col name='ari_codigo' title='${lbl:b_code}' width='20' align='left' />
			<col name='ari_descripcion' title='${lbl:b_description}' width='20' align='left' />
			<col name='ari_vigencia' title='${lbl:b_validation_date}' width='20' align='left' format='dd-MM-yyyy' />
			<col name='ari_estatus_combo' title='${lbl:b_status}' width='20' align='left' />
			<col name='ari_fecha_registro' title='${lbl:b_store_date}' width='20' align='left' format='dd-MM-yyyy' />

		</record>

	</pdf-report>
</config>
