<?xml version='1.0' encoding='ISO-8859-1'?>
<config nodb="true">

	<summary>
		Exportar documento excel directo al browser
	</summary>

	<log>false</log>

	<transaction>
		<classname>dinamica.GenericTransaction</classname>
		<validator>false</validator>
		<transaction>false</transaction>
		<jdbc-log>false</jdbc-log>
		<recordset id="query.sql" source="session" scope="transaction" />
	</transaction>

	<output>
		<classname>domain.ExcelReportOutput</classname>
	</output>
	
	<excel-logo scale="60" url="/images/logo-simone-pdf.png"/>
	<title cellPosY="1" cellPosX="4" cellStep="0" name="${lbl:b_areas_interes}"/>
	
	<excel 
		recordset='query.sql' 
		sheetname='${lbl:b_areas_interes}' 
		filename='${lbl:b_areas_interes}.xls' 
		date-format='dd-MM-yyyy'
		header-background='true'>
		<col id='ari_codigo' label='${lbl:b_code}' />
		<col id='ari_descripcion' label='${lbl:b_description}' />
		<col id='ari_vigencia' label='${lbl:b_validation_date}' />
		<col id='ari_estatus_combo' label='${lbl:b_status}' />
		<col id='ari_idioma' label='${lbl:s_profile_lang}' />
		<col id='ari_usuario' label='${lbl:b_users}' />
		<col id='ari_fecha_registro' label='${lbl:b_store_date}' />
		<col id='ari_hora' label='${lbl:s_loginhist_col2}' />

	</excel>

</config>
