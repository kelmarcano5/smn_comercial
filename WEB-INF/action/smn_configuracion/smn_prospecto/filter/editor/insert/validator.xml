<?xml version='1.0' encoding='ISO-8859-1'?>
<validator onerror='/action/error/validation/ajax'>
	<parameter id='pro_codigo' type='varchar' required='true' label='${lbl:b_code}' maxlen='18'/>
	<parameter id='pro_descripcion' type='varchar' required='true' label='${lbl:b_description}' maxlen='100'/>
	<parameter id='pro_email' type='varchar' required='true' label='${lbl:b_email}' maxlen='100' regexp="^[_a-z0-9-]+(\.[_a-z0-9-]+)*@[a-z0-9-]+(\.[a-z0-9-]+)*(\.[a-z]{2,3})$" regexp-error-label="${lbl:b_email_format}."/>
	<parameter id='pro_movil' type='varchar' required='true' label='${lbl:b_mobile}' maxlen='24' regexp="00 \+\d{1,3} \(\d{1,4}\)\ \d{6,8}$" regexp-error-label="${lbl:b_error_incorrect_format_phone}."/>
	<parameter id='pro_fijo' type='varchar' required='true' label='${lbl:b_fije}' maxlen='24' regexp="00 \+\d{1,3} \(\d{1,4}\)\ \d{6,8}$" regexp-error-label="${lbl:b_error_incorrect_format_phone}."/>
	<parameter id='pro_referido' type='varchar' required='true' label='${lbl:b_referid}' maxlen='100'/>
	<parameter id='pro_estatus' type='varchar' required='false' label='${lbl:b_status}' maxlen='2'/>
	<parameter id='pro_vigencia' type='date' required='false' label='${lbl:b_vigency}' maxlen='10'/>
	<parameter id='smn_direccion_rf' type='integer' required='false' label='${lbl:b_address}' maxlen='10'/>
	<parameter id='smn_tipo_contactos_rf' type='integer' required='false' label='${lbl:b_contact_type}' maxlen='10'/>
	<parameter id='pro_descripcion_contacto' type='varchar' required='false' label='${lbl:b_description_contact}' maxlen='100'/>
	<parameter id='reference' type='varchar' required='false' label='Reference' maxlen='5' />

	<custom-validator
		classname='dinamica.validators.DuplicatedKeyValidator'
			on-error-label='${lbl:b_record_not_duplicated}.'
			sql='buscarCodigo.sql'
			id='pro_codigo'/>

	<custom-validator
		classname='dinamica.validators.DuplicatedKeyValidator'
			on-error-label='${lbl:b_record_not_duplicated}.'
			sql='buscarDescripcion.sql'
			id='pro_descripcion'/>


</validator>
