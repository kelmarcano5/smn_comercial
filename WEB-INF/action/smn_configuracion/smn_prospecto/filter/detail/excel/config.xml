<?xml version='1.0' encoding='ISO-8859-1'?>
<config nodb="true">

	<summary>
		Exportar documento excel directo al browser
	</summary>

	<log>false</log>

	<transaction>
		<classname>dinamica.GenericTransaction</classname>
		<validator>false</validator>
		<transaction>false</transaction>
		<jdbc-log>false</jdbc-log>
		<recordset id="query.sql" source="session" scope="transaction" />
	</transaction>

	<output>
		<classname>domain.ExcelReportOutput</classname>
	</output>
	
	<excel-logo scale="60" url="/images/logo-simone-pdf.png"/>
	<title cellPosY="1" cellPosX="3" cellStep="0" name="${lbl:b_leaflet}"/>
	
	<excel 
		recordset='query.sql' 
		sheetname='${lbl:b_leaflet}' 
		filename='${lbl:b_leaflet}.xls' 
		date-format='dd-MM-yyyy'
		header-background='true'>
		<col id='pro_codigo' label='${lbl:b_code}' />
		<col id='pro_descripcion' label='${lbl:b_description}' />
		<col id='pro_email' label='${lbl:b_email}' />
		<col id='pro_movil' label='${lbl:b_mobile}' />
		<col id='pro_estatus_combo' label='${lbl:b_status}' />
		<col id='pro_vigencia' label='${lbl:b_vigency}' />
		<col id='pro_fecha_registro' label='${lbl:b_store_date}' />

	</excel>

</config>
