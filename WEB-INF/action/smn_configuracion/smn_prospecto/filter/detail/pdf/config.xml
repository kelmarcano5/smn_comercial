<?xml version='1.0' encoding='ISO-8859-1'?>
<config nodb="true">

	<summary>
		Generar reporte generico PDF
	</summary>

	<log>false</log>

	<transaction>
		<classname>dinamica.GenericTransaction</classname>
		<validator>false</validator>
		<transaction>false</transaction>
		<jdbc-log>false</jdbc-log>
		<recordset id="query.sql" source="session" scope="transaction" />

	</transaction>

	<output>
		<classname>dinamica.PDFGenericReport</classname>
	</output>
	
	<pdf-title>${lbl:b_leaflet}</pdf-title>
	<pdf-logo url='/images/logo-simone-pdf.png' scale='100' />
	<pdf-file-name>${lbl:b_leaflet}.pdf</pdf-file-name>

	<pdf-report pageSize="letter" rotate="false" footer="true" header="true">
		<record recordset='query.sql' title='${lbl:b_leaflet}' width='60' spacingBefore='40'>
			<col name='pro_codigo' title='${lbl:b_code}' align='left' />
			<col name='pro_descripcion' title='${lbl:b_description}' align='left' />
			<col name='pro_email' title='${lbl:b_email}' align='left' />
			<col name='pro_movil' title='${lbl:b_mobile}' align='left' />
			<col name='pro_fijo' title='${lbl:b_fije}' align='left' />
			<col name='pro_referido' title='${lbl:b_referid}' align='left' />
			<col name='pro_estatus_combo' title='${lbl:b_status}' align='left' />
			<col name='pro_vigencia' title='${lbl:b_vigency}' align='left' format='dd-MM-yyyy' />
			<col name='pro_fecha_registro' title='${lbl:b_store_date}' align='left' format='dd-MM-yyyy' />
				<col name='pro_descripcion' title='${lbl:b_description}' align='left' />
			<col name='smn_tipo_contactos_rf' title='${lbl:b_contact_type}' align='left' />
		</record>


	</pdf-report>
</config>
