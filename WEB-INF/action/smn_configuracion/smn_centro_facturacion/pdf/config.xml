<?xml version='1.0' encoding='ISO-8859-1'?>
<config nodb="true">

	<summary>
		Generar reporte generico PDF
	</summary>

	<log>false</log>

	<transaction>
		<classname>dinamica.GenericTransaction</classname>
		<validator>false</validator>
		<transaction>false</transaction>
		<jdbc-log>false</jdbc-log>
		<recordset id="query-smncentrofacturacion.sql" source="session" scope="transaction" />
	</transaction>

	<output>
		<classname>dinamica.PDFGenericReport</classname>
	</output>
	
	<pdf-title>${lbl:b_centro_facturacion}</pdf-title>
	<pdf-logo url='/images/logo-simone-pdf.png' scale='100' />
	<pdf-file-name>${lbl:b_centro_facturacion}.pdf</pdf-file-name>

	<pdf-report 
		pageSize="letter" 
		rotate="false"
		footer="false" 
		header="true">
		<record recordset='query-smncentrofacturacion.sql' width='100' spacingBefore='40'>
			<col name='cfc_codigo' title='${lbl:b_code}' width='14' align='left' />
			<col name='cfc_nombre' title='${lbl:b_name}' width='14' align='left' />
			<col name='smn_entidades_rf' title='${lbl:b_entities}' width='14' align='left' format='######' />
			<col name='smn_sucursales_rf' title='${lbl:b_subsidiary}' width='14' align='left' format='######' />
			<col name='smn_areas_servicios_rf' title='${lbl:b_service_areas}' width='14' align='left' format='######' />
			<col name='smn_unidades_servicios_rf' title='${lbl:b_service_units}' width='14' align='left' format='######' />
			<col name='cfc_fecha_registro' title='${lbl:b_store_date}' width='14' align='left' format='dd-MM-yyyy' />

		</record>

	</pdf-report>
</config>
