<?xml version='1.0' encoding='ISO-8859-1'?>
<config nodb="true">

	<summary>
		Generar reporte generico PDF
	</summary>

	<log>false</log>

	<transaction>
		<classname>dinamica.GenericTransaction</classname>
		<validator>false</validator>
		<transaction>false</transaction>
		<jdbc-log>false</jdbc-log>
		<recordset id="query-smncentrofacturacion.sql" source="session" scope="transaction" />
		<recordset id="filter.params" source="session" scope="transaction" />
	</transaction>

	<output>
		<classname>dinamica.PDFGenericReport</classname>
	</output>
	
	<pdf-title>${lbl:b_centro_facturacion}</pdf-title>
	<pdf-logo url='/images/logo-simone-pdf.png' scale='100' align="left" />
	<pdf-file-name>${lbl:b_centro_facturacion}.pdf</pdf-file-name>

	<pdf-report pageSize="letter" rotate="false" footer="true" header="true">
		<record recordset='filter.params' title='${lbl:b_filter_find}' noFilterMsg='-- ${lbl:b_all_message} --' width='55' spacingBefore='15'>
			<col name='cfc_codigo' title='${lbl:b_code}'  align='left' />
			<col name='cfc_nombre' title='${lbl:b_name}'  align='left' />
			<col name='cfc_fecha_registro_ini' title='${lbl:b_store_date_greather_than}'  format='dd-MM-yyyy' align='left' />
			<col name='cfc_fecha_registro_fin' title='${lbl:b_store_date_less_than}'  format='dd-MM-yyyy' align='left' />

		</record>
		<record recordset='query-smncentrofacturacion.sql' width='100' spacingBefore='10'>
			<col name='cfc_codigo' title='${lbl:b_code}' width='6' align='left' />
			<col name='cfc_nombre' title='${lbl:b_name}' width='6' align='left' />
			<col name='smn_entidades_rf' title='${lbl:b_entities}' width='6' align='left' format='######' />
			<col name='smn_sucursales_rf' title='${lbl:b_subsidiary}' width='6' align='left' format='######' />
			<col name='smn_areas_servicios_rf' title='${lbl:b_service_areas}' width='6' align='left' format='######' />
			<col name='smn_unidades_servicios_rf' title='${lbl:b_service_units}' width='6' align='left' format='######' />
			<col name='cfc_numero_identificacion' title='${lbl:b_codigo_identificacion}' width='6' align='left' />
			<col name='cfc_control_fiscal_1' title='${lbl:b_control_fiscal_1}' width='6' align='left' format='######' />
			<col name='cfc_control_fiscal_2' title='${lbl:b_control_fiscal_2}' width='6' align='left' format='######' />
			<col name='cfc_vigencia' title='${lbl:b_validation_date}' width='6' align='left' format='dd-MM-yyyy' />
			<col name='cfc_estatus' title='${lbl:b_status}' width='6' align='left' />
			<col name='cfc_idioma' title='${lbl:s_profile_lang}' width='6' align='left' />
			<col name='cfc_usuario' title='${lbl:b_users}' width='6' align='left' />
			<col name='cfc_fecha_registro' title='${lbl:b_store_date}' width='6' align='left' format='dd-MM-yyyy' />
			<col name='cfc_hora' title='${lbl:s_loginhist_col2}' width='6' align='left' />

		</record>

	</pdf-report>
</config>
