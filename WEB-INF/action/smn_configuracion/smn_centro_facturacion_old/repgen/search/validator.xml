<?xml version='1.0' encoding='ISO-8859-1'?>
<validator id='repgen.filter' onerror='/action/error/validation/ajax'>

	<parameter id='fdesde' type='date' required='false' label='Fecha desde'/>
	<parameter id='fhasta' type='date' required='false' label='Fecha hasta'/>
	
	<parameter id='cfc_codigo' type='varchar' required='false' label='${lbl:b_code}' maxlen='16'/>
	<parameter id='cfc_nombre' type='varchar' required='false' label='${lbl:b_name}' maxlen='48'/>
	<parameter id='smn_entidades_rf' type='integer' required='false' label='${lbl:b_entities}' maxlen='2'/>
	<parameter id='smn_sucursales_rf' type='integer' required='false' label='${lbl:b_subsidiary}' maxlen='10'/>
	<parameter id='smn_areas_servicios_rf' type='integer' required='false' label='${lbl:b_service_areas}' maxlen='10'/>
	<parameter id='smn_unidades_servicios_rf' type='integer' required='false' label='${lbl:b_service_units}' maxlen='10'/>
	<parameter id='cfc_numero_identificacion' type='varchar' required='false' label='${lbl:b_codigo_identificacion}' maxlen='16'/>
	<parameter id='cfc_control_fiscal_1' type='integer' required='false' label='${lbl:b_control_fiscal_1}' maxlen='10'/>
	<parameter id='cfc_control_fiscal_2' type='integer' required='false' label='${lbl:b_control_fiscal_2}' maxlen='10'/>
	<parameter id='cfc_vigencia' type='date' required='false' label='${lbl:b_validation_date}' maxlen='10'/>
	<parameter id='cfc_estatus' type='varchar' required='false' label='${lbl:b_status}' maxlen='2'/>

	<custom-validator
		classname='dinamica.validators.SQLPatternTransformer'
		parameter='cfc_codigo'
		rule='contains' />

	<custom-validator
		classname='dinamica.validators.SQLPatternTransformer'
		parameter='cfc_nombre'
		rule='contains' />

	<custom-validator
		classname='dinamica.validators.SQLPatternTransformer'
		parameter='cfc_numero_identificacion'
		rule='contains' />

	<custom-validator
		classname='dinamica.validators.SQLPatternTransformer'
		parameter='cfc_estatus'
		rule='contains' />


	<custom-validator
		classname='dinamica.validators.DuplicatedKeyValidator'
			on-error-label='${lbl:b_record_not_duplicated}.'
			sql='buscarCodigo.sql'
			id='cfc_codigo'/>

	<custom-validator
		classname='dinamica.validators.DuplicatedKeyValidator'
			on-error-label='${lbl:b_record_not_duplicated}.'
			sql='buscarNombre.sql'
			id='cfc_nombre'/>


	<custom-validator
			classname='dinamica.validators.ArrayNotEmptyValidator'
			on-error-label='Seleccione al menos un campo para la generación del reporte.'
			parameter-name='field_id' 
			id='field_id' />

	<custom-validator 
			classname='dinamica.validators.ArrayToRecordset'
			paramName='field_id' 
			recordsetId='fields' 
			colName='field_id' 
			colType='integer' />
				
</validator>
