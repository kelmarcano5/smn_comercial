<?xml version='1.0' encoding='ISO-8859-1'?>
<config nodb="true">

	<summary>
		Generar reporte generico PDF
	</summary>

	<log>false</log>

	<transaction>
		<classname>dinamica.GenericTransaction</classname>
		<validator>false</validator>
		<transaction>false</transaction>
		<jdbc-log>false</jdbc-log>
		<recordset id="query.sql" source="session" scope="transaction" />

	</transaction>

	<output>
		<classname>dinamica.PDFGenericReport</classname>
	</output>
	
	<pdf-title>${lbl:b_centro_facturacion}</pdf-title>
	<pdf-logo url='/images/logo-simone-pdf.png' scale='100' />
	<pdf-file-name>${lbl:b_centro_facturacion}.pdf</pdf-file-name>

	<pdf-report pageSize="letter" rotate="false" footer="true" header="true">
		<record recordset='query.sql' title='${lbl:b_centro_facturacion}' width='60' spacingBefore='40'>
			<col name='cfc_codigo' title='${lbl:b_code}' align='left' />
			<col name='cfc_nombre' title='${lbl:b_name}' align='left' />
			<col name='smn_entidades_rf' title='${lbl:b_entities}' align='left' format='######' />
			<col name='smn_sucursales_rf' title='${lbl:b_subsidiary}' align='left' format='######' />
			<col name='smn_areas_servicios_rf' title='${lbl:b_service_areas}' align='left' format='######' />
			<col name='smn_unidades_servicios_rf' title='${lbl:b_service_units}' align='left' format='######' />
			<col name='cfc_numero_identificacion' title='${lbl:b_codigo_identificacion}' align='left' />
			<col name='smn_almacen_rf' title='${lbl:b_store_code}' align='left' format='######' />
			<col name='smn_centro_costo_rf' title='${lbl:b_center_costs}' align='left' format='######' />
			<col name='smn_caja_rf' title='${lbl:b_box}' align='left' format='######' />
			<col name='cfc_control_fiscal_1' title='${lbl:b_control_fiscal_1}' align='left' format='######' />
			<col name='cfc_control_fiscal_2' title='${lbl:b_control_fiscal_2}' align='left' format='######' />
			<col name='cfc_vigencia' title='${lbl:b_validation_date}' align='left' format='dd-MM-yyyy' />
			<col name='cfc_estatus' title='${lbl:b_status}' align='left' />
			<col name='cfc_fecha_registro' title='${lbl:b_store_date}' align='left' format='dd-MM-yyyy' />
		</record>
	</pdf-report>
</config>
