<?xml version='1.0' encoding='ISO-8859-1'?>
<config nodb="true">

	<summary>
		Exportar documento excel directo al browser
	</summary>

	<log>false</log>

	<transaction>
		<classname>dinamica.GenericTransaction</classname>
		<validator>false</validator>
		<transaction>false</transaction>
		<jdbc-log>false</jdbc-log>
		<recordset id="query-smncentrofacturacion.sql" source="session" scope="transaction" />
	</transaction>

	<output>
		<classname>domain.ExcelReportOutput</classname>
	</output>
	
	<excel-logo scale="60" url="/images/logo-simone-pdf.png"/>
	<title cellPosY="1" cellPosX="7" cellStep="0" name="${lbl:b_centro_facturacion}"/>
	
	<excel 
		recordset='query-smncentrofacturacion.sql' 
		sheetname='${lbl:b_centro_facturacion}' 
		filename='${lbl:b_centro_facturacion}.xls' 
		date-format='dd-MM-yyyy'
		header-background='true'>
		<col id='cfc_codigo' label='${lbl:b_code}' />
		<col id='cfc_nombre' label='${lbl:b_name}' />
		<col id='smn_entidades_rf' label='${lbl:b_entities}' />
		<col id='smn_sucursales_rf' label='${lbl:b_subsidiary}' />
		<col id='smn_areas_servicios_rf' label='${lbl:b_service_areas}' />
		<col id='smn_unidades_servicios_rf' label='${lbl:b_service_units}' />
		<col id='cfc_numero_identificacion' label='${lbl:b_codigo_identificacion}' />
		<col id='cfc_control_fiscal_1' label='${lbl:b_control_fiscal_1}' />
		<col id='cfc_control_fiscal_2' label='${lbl:b_control_fiscal_2}' />
		<col id='cfc_vigencia' label='${lbl:b_validation_date}' />
		<col id='cfc_estatus' label='${lbl:b_status}' />
		<col id='cfc_idioma' label='${lbl:s_profile_lang}' />
		<col id='cfc_usuario' label='${lbl:b_users}' />
		<col id='cfc_fecha_registro' label='${lbl:b_store_date}' />
		<col id='cfc_hora' label='${lbl:s_loginhist_col2}' />

	</excel>

</config>
