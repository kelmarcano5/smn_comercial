<?xml version='1.0' encoding='ISO-8859-1'?>
<config nodb="true">

	<summary>
		Generar reporte generico PDF
	</summary>

	<log>false</log>

	<transaction>
		<classname>dinamica.GenericTransaction</classname>
		<validator>false</validator>
		<transaction>false</transaction>
		<jdbc-log>false</jdbc-log>
		<recordset id="query-smntipodocumentosfact.sql" source="session" scope="transaction" />
	</transaction>

	<output>
		<classname>dinamica.PDFGenericReport</classname>
	</output>
	
	<pdf-title>${lbl:b_tipo_documento_factura}</pdf-title>
	<pdf-logo url='/images/logo-simone-pdf.png' scale='100' />
	<pdf-file-name>${lbl:b_tipo_documento_factura}.pdf</pdf-file-name>

	<pdf-report 
		pageSize="letter" 
		rotate="false"
		footer="false" 
		header="true">
		<record recordset='query-smntipodocumentosfact.sql' width='100' spacingBefore='40'>
			<col name='tdf_codigo' title='${lbl:b_code}' width='16' align='left' />
			<col name='tdf_nombre' title='${lbl:b_name}' width='16' align='left' />
			<col name='tdf_naturaleza_combo' title='${lbl:b_naturaleza}' width='16' align='left' />
			<col name='tdf_vigencia' title='${lbl:b_validation_date}' width='16' align='left' format='dd-MM-yyyy' />
			<col name='tdf_estatus_combo' title='${lbl:b_status}' width='16' align='left' />
			<col name='tdf_fecha_registro' title='${lbl:b_store_date}' width='16' align='left' format='dd-MM-yyyy' />

		</record>

	</pdf-report>
</config>
