<?xml version='1.0' encoding='ISO-8859-1'?>
<config nodb="true">

	<summary>
		Generar reporte generico PDF
	</summary>

	<log>false</log>

	<transaction>
		<classname>dinamica.GenericTransaction</classname>
		<validator>false</validator>
		<transaction>false</transaction>
		<jdbc-log>false</jdbc-log>
		<recordset id="query-smnrelclienteformapago.sql" source="session" scope="transaction" />
	</transaction>

	<output>
		<classname>dinamica.PDFGenericReport</classname>
	</output>
	
	<pdf-title>${lbl:b_relacion_cliente_forma_pago}</pdf-title>
	<pdf-logo url='/images/logo-simone-pdf.png' scale='100' />
	<pdf-file-name>${lbl:b_relacion_cliente_forma_pago}.pdf</pdf-file-name>

	<pdf-report 
		pageSize="letter" 
		rotate="false"
		footer="false" 
		header="true">
		<record recordset='query-smnrelclienteformapago.sql' width='100' spacingBefore='40'>
			<col name='smn_cliente_id' title='${lbl:b_customer}' width='20' align='left' format='######' />
			<col name='smn_forma_pago_rf' title='${lbl:b_way_to_pay}' width='20' align='left' format='######' />
			<col name='rcf_estatus' title='${lbl:b_status}' width='20' align='left' />
			<col name='rcf_vigencia' title='${lbl:b_validation_date}' width='20' align='left' format='dd-MM-yyyy' />
			<col name='rcf_fecha_registro' title='${lbl:b_store_date}' width='20' align='left' format='dd-MM-yyyy' />

		</record>

	</pdf-report>
</config>
