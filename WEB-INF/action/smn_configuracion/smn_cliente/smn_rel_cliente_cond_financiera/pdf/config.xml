<?xml version='1.0' encoding='ISO-8859-1'?>
<config nodb="true">

	<summary>
		Generar reporte generico PDF
	</summary>

	<log>false</log>

	<transaction>
		<classname>dinamica.GenericTransaction</classname>
		<validator>false</validator>
		<transaction>false</transaction>
		<jdbc-log>false</jdbc-log>
		<recordset id="query-smnrelclientecondfinanciera.sql" source="session" scope="transaction" />
	</transaction>

	<output>
		<classname>dinamica.PDFGenericReport</classname>
	</output>
	
	<pdf-title>${lbl:b_rel_client_condition_financiery}</pdf-title>
	<pdf-logo url='/images/logo-simone-pdf.png' scale='100' />
	<pdf-file-name>${lbl:b_rel_client_condition_financiery}.pdf</pdf-file-name>

	<pdf-report 
		pageSize="letter" 
		rotate="false"
		footer="false" 
		header="true">
		<record recordset='query-smnrelclientecondfinanciera.sql' width='100' spacingBefore='40'>
			<col name='smn_cliente_id' title='${lbl:b_customer}' width='20' align='left' format='######' />
			<col name='smn_condicion_financiera_rf' title='${lbl:b_condition_financiery}' width='20' align='left' format='######' />
			<col name='rcc_estatus' title='${lbl:b_status}' width='20' align='left' />
			<col name='rcc_vigencia' title='${lbl:b_vigency}' width='20' align='left' format='dd-MM-yyyy' />
			<col name='rcc_fecha_registro' title='${lbl:b_store_date}' width='20' align='left' format='dd-MM-yyyy' />

		</record>

	</pdf-report>
</config>
