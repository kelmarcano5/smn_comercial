<?xml version='1.0' encoding='ISO-8859-1'?>
<validator id='repgen.filter' onerror='/action/error/validation/ajax'>

	<parameter id='fdesde' type='date' required='false' label='Fecha desde'/>
	<parameter id='fhasta' type='date' required='false' label='Fecha hasta'/>
	
	<parameter id='smn_clase_auxiliar_id' type='integer' required='false' label='${lbl:b_auxiliary_class}' maxlen='10'/>
	<parameter id='smn_auxiliar_id' type='integer' required='false' label='${lbl:b_auxiliary}' maxlen='10'/>
	<parameter id='smn_direccion_id' type='integer' required='false' label='${lbl:b_address}' maxlen='10'/>
	<parameter id='rad_tipo_direccion' type='varchar' required='false' label='${lbl:b_direction_type}' maxlen='1'/>
	<parameter id='rad_status' type='varchar' required='false' label='${lbl:b_status}' maxlen='1'/>
	<parameter id='rad_fecha_vigencia' type='date' required='false' label='${lbl:b_fecha_vigencia}' maxlen='13'/>
	<parameter id='smn_zona_rf' type='integer' required='false' label='${lbl:b_zone}' maxlen='10'/>

	<custom-validator
		classname='dinamica.validators.SQLPatternTransformer'
		parameter='rad_tipo_direccion'
		rule='contains' />

	<custom-validator
		classname='dinamica.validators.SQLPatternTransformer'
		parameter='rad_status'
		rule='contains' />



	<custom-validator
			classname='dinamica.validators.ArrayNotEmptyValidator'
			on-error-label='Seleccione al menos un campo para la generación del reporte.'
			parameter-name='field_id' 
			id='field_id' />

	<custom-validator 
			classname='dinamica.validators.ArrayToRecordset'
			paramName='field_id' 
			recordsetId='fields' 
			colName='field_id' 
			colType='integer' />
				
</validator>
