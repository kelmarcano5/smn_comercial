<?xml version='1.0' encoding='ISO-8859-1'?>
<config nodb="true">

	<summary>
		Exportar documento excel directo al browser
	</summary>

	<log>false</log>

	<transaction>
		<classname>dinamica.GenericTransaction</classname>
		<validator>false</validator>
		<transaction>false</transaction>
		<jdbc-log>false</jdbc-log>
		<recordset id="query.sql" source="session" scope="transaction" />
	</transaction>

	<output>
		<classname>domain.ExcelReportOutput</classname>
	</output>
	
	<excel-logo scale="60" url="/images/logo-simone-pdf.png"/>
	<title cellPosY="1" cellPosX="4" cellStep="0" name="${lbl:b_relacion_cliente_forma_pago}"/>
	
	<excel 
		recordset='query.sql' 
		sheetname='${lbl:b_relacion_cliente_forma_pago}' 
		filename='${lbl:b_relacion_cliente_forma_pago}.xls' 
		date-format='dd-MM-yyyy'
		header-background='true'>
		<col id='smn_cliente_id' label='${lbl:b_customer}' />
		<col id='smn_forma_pago_rf' label='${lbl:b_way_to_pay}' />
		<col id='rcf_estatus' label='${lbl:b_status}' />
		<col id='rcf_vigencia' label='${lbl:b_validation_date}' />
		<col id='rcf_idioma' label='${lbl:s_profile_lang}' />
		<col id='rcf_usuario' label='${lbl:b_users}' />
		<col id='rcf_fecha_registro' label='${lbl:b_store_date}' />
		<col id='rcf_hora' label='${lbl:s_loginhist_col2}' />

	</excel>

</config>
