<?xml version='1.0' encoding='ISO-8859-1'?>
<validator id='repgen.filter' onerror='/action/error/validation/ajax'>

	<parameter id='fdesde' type='date' required='false' label='Fecha desde'/>
	<parameter id='fhasta' type='date' required='false' label='Fecha hasta'/>
	
	<parameter id='smn_clasificacion_cliente_id_name' type='varchar' required='false' label='${lbl:b_clasificacion_cliente}'/>
	<parameter id='smn_clasificacion_cliente_id' type='integer' required='false' label='${lbl:b_clasificacion_cliente}' maxlen='10'/>
	<parameter id='smn_clase_auxiliar_rf' type='integer' required='false' label='${lbl:b_auxiliary_classes}' maxlen='10'/>
	<parameter id='smn_auxiliar_rf' type='integer' required='false' label='${lbl:b_auxiliary}' maxlen='10'/>
	<parameter id='smn_condicion_financiera_rf' type='integer' required='false' label='${lbl:b_financial_condition}' maxlen='10'/>
	<parameter id='smn_clasificacion_abc_rf' type='integer' required='false' label='${lbl:b_abc_clasification}' maxlen='10'/>
	<parameter id='smn_sector_economico_rf' type='integer' required='false' label='${lbl:b_economic_sectors}' maxlen='10'/>
	<parameter id='cli_nacional_ext' type='varchar' required='false' label='${lbl:b_cliente_nacional_extranjero}' maxlen='1'/>
	<parameter id='cli_vigencia' type='date' required='false' label='${lbl:b_validation_date}' maxlen='10'/>
	<parameter id='cli_estatus' type='varchar' required='false' label='${lbl:b_status}' maxlen='2'/>

	<custom-validator
		classname='dinamica.validators.SQLPatternTransformer'
		parameter='smn_clasificacion_cliente_id_name'
		rule='contains' />

	<custom-validator
		classname='dinamica.validators.SQLPatternTransformer'
		parameter='cli_nacional_ext'
		rule='contains' />

	<custom-validator
		classname='dinamica.validators.SQLPatternTransformer'
		parameter='cli_estatus'
		rule='contains' />



	<custom-validator
			classname='dinamica.validators.ArrayNotEmptyValidator'
			on-error-label='Seleccione al menos un campo para la generación del reporte.'
			parameter-name='field_id' 
			id='field_id' />

	<custom-validator 
			classname='dinamica.validators.ArrayToRecordset'
			paramName='field_id' 
			recordsetId='fields' 
			colName='field_id' 
			colType='integer' />
				
</validator>
