<?xml version='1.0' encoding='ISO-8859-1'?>
<config nodb="true">

	<summary>
		Generar reporte generico PDF
	</summary>

	<log>false</log>

	<transaction>
		<classname>dinamica.GenericTransaction</classname>
		<validator>false</validator>
		<transaction>false</transaction>
		<jdbc-log>false</jdbc-log>
		<recordset id="query.sql" source="session" scope="transaction" />

	</transaction>

	<output>
		<classname>dinamica.PDFGenericReport</classname>
	</output>
	
	<pdf-title>${lbl:b_customer}</pdf-title>
	<pdf-logo url='/images/logo-simone-pdf.png' scale='100' />
	<pdf-file-name>${lbl:b_customer}.pdf</pdf-file-name>

	<pdf-report pageSize="letter" rotate="false" footer="true" header="true">
		<record recordset='query.sql' title='${lbl:b_customer}' width='60' spacingBefore='40'>
			<col name='smn_clasificacion_cliente_id' title='${lbl:b_clasificacion_cliente}' align='left' format='######' />
			<col name='smn_clase_auxiliar_rf' title='${lbl:b_auxiliary_classes}' align='left' format='######' />
			<col name='smn_auxiliar_rf' title='${lbl:b_auxiliary}' align='left' format='######' />
			<col name='smn_clasificacion_abc_rf' title='${lbl:b_abc_clasification}' align='left' format='######' />
			<col name='smn_sector_economico_rf' title='${lbl:b_economic_sectors}' align='left' format='######' />
			<col name='cli_nacional_ext' title='${lbl:b_cliente_nacional_extranjero}' align='left' />
			<col name='cli_vigencia' title='${lbl:b_validation_date}' align='left' format='dd-MM-yyyy' />
			<col name='cli_estatus' title='${lbl:b_status}' align='left' />
			<col name='cli_fecha_registro' title='${lbl:b_store_date}' align='left' format='dd-MM-yyyy' />
		</record>


	</pdf-report>
</config>
