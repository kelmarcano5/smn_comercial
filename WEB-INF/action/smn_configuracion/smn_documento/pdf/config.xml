<?xml version='1.0' encoding='ISO-8859-1'?>
<config nodb="true">

	<summary>
		Generar reporte generico PDF
	</summary>

	<log>false</log>

	<transaction>
		<classname>dinamica.GenericTransaction</classname>
		<validator>false</validator>
		<transaction>false</transaction>
		<jdbc-log>false</jdbc-log>
		<recordset id="query-smndocumento.sql" source="session" scope="transaction" />
	</transaction>

	<output>
		<classname>dinamica.PDFGenericReport</classname>
	</output>
	
	<pdf-title>${lbl:b_document}</pdf-title>
	<pdf-logo url='/images/logo-simone-pdf.png' scale='100' />
	<pdf-file-name>${lbl:b_document}.pdf</pdf-file-name>

	<pdf-report 
		pageSize="letter" 
		rotate="false"
		footer="false" 
		header="true">
		<record recordset='query-smndocumento.sql' width='100' spacingBefore='40'>
			<col name='smn_tipo_documentos_fact_id' title='${lbl:b_tipo_documento_factura}' width='14' align='left' format='######' />
			<col name='smn_documentos_generales_rf' title='${lbl:b_general_documents}' width='14' align='left' format='######' />
			<col name='dcf_codigo' title='${lbl:b_code}' width='14' align='left' />
			<col name='dcf_descripcion' title='${lbl:b_description} ' width='14' align='left' />
			<col name='dcf_tipo_movimiento' title='${lbl:b_accounting_movement_type}' width='14' align='left' />
			<col name='dcf_req_vigencia' title='${lbl:b_requiere_vigencia}' width='14' align='left' />
			<col name='dcf_fecha_registro' title='${lbl:b_store_date}' width='14' align='left' format='dd-MM-yyyy' />

		</record>

	</pdf-report>
</config>
