<?xml version='1.0' encoding='ISO-8859-1'?>
<config nodb="true">

	<summary>
		Generar reporte generico PDF
	</summary>

	<log>false</log>

	<transaction>
		<classname>dinamica.GenericTransaction</classname>
		<validator>false</validator>
		<transaction>false</transaction>
		<jdbc-log>false</jdbc-log>
		<recordset id="query.sql" source="session" scope="transaction" />

	</transaction>

	<output>
		<classname>dinamica.PDFGenericReport</classname>
	</output>
	
	<pdf-title>${lbl:b_relacion_documento_titulo_impresion}</pdf-title>
	<pdf-logo url='/images/logo-simone-pdf.png' scale='100' />
	<pdf-file-name>${lbl:b_relacion_documento_titulo_impresion}.pdf</pdf-file-name>

	<pdf-report pageSize="letter" rotate="false" footer="true" header="true">
		<record recordset='query.sql' title='${lbl:b_relacion_documento_titulo_impresion}' width='60' spacingBefore='40'>
			<col name='smn_documento_id' title='${lbl:b_document}' align='left' format='######' />
			<col name='smn_grupo_titulo_impresion_rf' title='${lbl:b_group_tittle_print}' align='left' format='######' />
			<col name='rdi_secuencia_impresion' title='${lbl:b_secuencia}' align='left' format='######' />
			<col name='rdi_fecha_registro' title='${lbl:b_store_date}' align='left' format='dd-MM-yyyy' />
		</record>


	</pdf-report>
</config>
