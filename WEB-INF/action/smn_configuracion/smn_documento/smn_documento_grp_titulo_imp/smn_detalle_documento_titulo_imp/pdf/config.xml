<?xml version='1.0' encoding='ISO-8859-1'?>
<config nodb="true">

	<summary>
		Generar reporte generico PDF
	</summary>

	<log>false</log>

	<transaction>
		<classname>dinamica.GenericTransaction</classname>
		<validator>false</validator>
		<transaction>false</transaction>
		<jdbc-log>false</jdbc-log>
		<recordset id="query-smndetalledocumentotituloimp.sql" source="session" scope="transaction" />
	</transaction>

	<output>
		<classname>dinamica.PDFGenericReport</classname>
	</output>
	
	<pdf-title>${lbl:b_detalle_documento_grupo_titulo_impresion}</pdf-title>
	<pdf-logo url='/images/logo-simone-pdf.png' scale='100' />
	<pdf-file-name>${lbl:b_detalle_documento_grupo_titulo_impresion}.pdf</pdf-file-name>

	<pdf-report 
		pageSize="letter" 
		rotate="false"
		footer="false" 
		header="true">
		<record recordset='query-smndetalledocumentotituloimp.sql' width='100' spacingBefore='40'>
			<col name='smn_documento_grp_titulo_imp_id' title='${lbl:b_relacion_documento_titulo_impresion}' width='20' align='left' format='######' />
			<col name='smn_item_servicio_rf' title='${lbl:b_document}' width='20' align='left' format='######' />
			<col name='smn_id_rf' title='${lbl:b_servicio_item}' width='20' align='left' format='######' />
			<col name='smn_componentes_rf' title='${lbl:b_components}' width='20' align='left' format='######' />
			<col name='dgi_fecha_registro' title='${lbl:b_store_date}' width='20' align='left' format='dd-MM-yyyy' />

		</record>

	</pdf-report>
</config>
