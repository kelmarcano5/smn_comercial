<?xml version='1.0' encoding='ISO-8859-1'?>
<config nodb="true">

	<summary>
		Generar reporte generico PDF
	</summary>

	<log>false</log>

	<transaction>
		<classname>dinamica.GenericTransaction</classname>
		<validator>false</validator>
		<transaction>false</transaction>
		<jdbc-log>false</jdbc-log>
		<recordset id="query-smnreldocumentoentidad.sql" source="session" scope="transaction" />
		<recordset id="filter.params" source="session" scope="transaction" />
	</transaction>

	<output>
		<classname>dinamica.PDFGenericReport</classname>
	</output>
	
	<pdf-title>${lbl:b_relacion_documento_entidad}</pdf-title>
	<pdf-logo url='/images/logo-simone-pdf.png' scale='100' align="left" />
	<pdf-file-name>${lbl:b_relacion_documento_entidad}.pdf</pdf-file-name>

	<pdf-report pageSize="letter" rotate="false" footer="true" header="true">
		<record recordset='filter.params' title='${lbl:b_filter_find}' noFilterMsg='-- ${lbl:b_all_message} --' width='55' spacingBefore='15'>
			<col name='smn_documento_id_name' title='${lbl:b_document}'  align='left' />
			<col name='smn_entidades_rf' title='${lbl:b_entities}'  format='######' align='left' />

		</record>
		<record recordset='query-smnreldocumentoentidad.sql' width='100' spacingBefore='10'>
			<col name='smn_documento_id' title='${lbl:b_document}' width='50' align='left' format='######' />
			<col name='smn_entidades_rf' title='${lbl:b_entities}' width='50' align='left' format='######' />

		</record>

	</pdf-report>
</config>
