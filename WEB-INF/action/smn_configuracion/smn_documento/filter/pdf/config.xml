<?xml version='1.0' encoding='ISO-8859-1'?>
<config nodb="true">

	<summary>
		Generar reporte generico PDF
	</summary>

	<log>false</log>

	<transaction>
		<classname>dinamica.GenericTransaction</classname>
		<validator>false</validator>
		<transaction>false</transaction>
		<jdbc-log>false</jdbc-log>
		<recordset id="query-smndocumento.sql" source="session" scope="transaction" />
		<recordset id="filter.params" source="session" scope="transaction" />
	</transaction>

	<output>
		<classname>dinamica.PDFGenericReport</classname>
	</output>
	
	<pdf-title>${lbl:b_document}</pdf-title>
	<pdf-logo url='/images/logo-simone-pdf.png' scale='100' align="left" />
	<pdf-file-name>${lbl:b_document}.pdf</pdf-file-name>

	<pdf-report pageSize="letter" rotate="false" footer="true" header="true">
		<record recordset='filter.params' title='${lbl:b_filter_find}' noFilterMsg='-- ${lbl:b_all_message} --' width='55' spacingBefore='15'>
			<col name='smn_tipo_documentos_fact_id_name' title='${lbl:b_tipo_documento_factura}'  align='left' />
			<col name='smn_documentos_generales_rf' title='${lbl:b_general_documents}'  format='######' align='left' />
			<col name='dcf_codigo' title='${lbl:b_code}'  align='left' />
			<col name='dcf_descripcion' title='${lbl:b_description} '  align='left' />
			<col name='dcf_fecha_registro_ini' title='${lbl:b_store_date_greather_than}'  format='dd-MM-yyyy' align='left' />
			<col name='dcf_fecha_registro_fin' title='${lbl:b_store_date_less_than}'  format='dd-MM-yyyy' align='left' />

		</record>
		<record recordset='query-smndocumento.sql' width='100' spacingBefore='10'>
			<col name='smn_tipo_documentos_fact_id' title='${lbl:b_tipo_documento_factura}' width='4' align='left' format='######' />
			<col name='smn_documentos_generales_rf' title='${lbl:b_general_documents}' width='4' align='left' format='######' />
			<col name='dcf_codigo' title='${lbl:b_code}' width='4' align='left' />
			<col name='dcf_descripcion' title='${lbl:b_description} ' width='4' align='left' />
			<col name='dcf_tipo_movimiento' title='${lbl:b_accounting_movement_type}' width='4' align='left' />
			<col name='dcf_req_vigencia' title='${lbl:b_requiere_vigencia}' width='4' align='left' />
			<col name='dcf_req_fecha_vencimiento' title='${lbl:b_requiere_fecha_vencimiento}' width='4' align='left' />
			<col name='dcf_gen_orden_despacho' title='${lbl:b_genera_orden_despacho}' width='4' align='left' />
			<col name='smn_tipo_pedido_id' title='${lbl:b_order_type}' width='4' align='left' />
			<col name='dcf_req_vendedor' title='${lbl:b_requiere_vendedor}' width='4' align='left' />
			<col name='dcf_req_tiempo_entrega' title='${lbl:b_requiere_tiempo_entrega}' width='4' align='left' />
			<col name='dcf_usa_bonificaciones' title='${lbl:b_usa_bonificaciones}' width='4' align='left' />
			<col name='dcf_usa_descuentos' title='${lbl:b_usa_descuentos}' width='4' align='left' />
			<col name='dcf_moneda_alterna' title='${lbl:b_alternative_currency}' width='4' align='left' />
			<col name='dcf_selecciona_precio' title='${lbl:b_puede_seleccionar_precio}' width='4' align='left' />
			<col name='dcf_usa_anexo' title='${lbl:b_usa_anexo}' width='4' align='left' />
			<col name='dcf_vigencia' title='${lbl:b_validation_date}' width='4' align='left' format='dd-MM-yyyy' />
			<col name='dcf_estatus' title='${lbl:b_status}' width='4' align='left' />
			<col name='dcf_idioma' title='${lbl:s_profile_lang}' width='4' align='left' />
			<col name='dcf_usuario' title='${lbl:b_users}' width='4' align='left' />
			<col name='dcf_fecha_registro' title='${lbl:b_store_date}' width='4' align='left' format='dd-MM-yyyy' />
			<col name='dcf_hora' title='${lbl:s_loginhist_col2}' width='4' align='left' />

		</record>

	</pdf-report>
</config>
