<?xml version='1.0' encoding='ISO-8859-1'?>
<config>

	<summary>
		Actualiza valores de un formulario en una tabla
	</summary>

	<log>false</log>

	<!--soporte de auditoria-->
	<audit>
		<!--de donde saca los datos, por defecto es "_request"-->
		<recordset></recordset>
		<!--que campos extrae para el registro descriptivo-->
		<cols>
			<colname>smn_tipo_documentos_fact_id</colname>
			<colname>smn_documentos_generales_rf</colname>
			<colname>dcf_codigo</colname>
			<colname>dcf_descripcion</colname>
			<colname>dcf_tipo_movimiento</colname>
			<colname>dcf_req_vigencia</colname>
			<colname>dcf_req_fecha_vencimiento</colname>
			<colname>dcf_gen_orden_despacho</colname>
			<colname>dcf_req_servicios</colname>
			<colname>dcf_req_vendedor</colname>
			<colname>dcf_req_tiempo_entrega</colname>
			<colname>dcf_usa_bonificaciones</colname>
			<colname>dcf_usa_descuentos</colname>
			<colname>dcf_moneda_alterna</colname>
			<colname>dcf_selecciona_precio</colname>
			<colname>dcf_usa_anexo</colname>
			<colname>dcf_vigencia</colname>
			<colname>dcf_estatus</colname>
		
		</cols>
		<table>smn_comercial.smn_documento</table>
		<oper>ACTUALIZAR</oper>
		<area>Carga de datos</area>
		<!--
			query para obtener el ID generado o nombre de 
			la columna que contiene el pkey, si es query, 
			el alias del campo debe ser "id"
		-->
		<pkey>id</pkey>
	</audit>

	<transaction>
		<classname>dinamica.audit.AuditableTransaction</classname>
		<validator>true</validator>
		<transaction>true</transaction>
		<jdbc-log>false</jdbc-log>
	</transaction>

	<query>update.sql</query>

	<output>
		<classname>dinamica.GenericOutput</classname>
		<template>script.js</template>
		<set-http-headers>true</set-http-headers>
		<content-type>text/javascript; charset=iso-8859-1</content-type>
		<expiration>0</expiration>
	</output>

</config>
