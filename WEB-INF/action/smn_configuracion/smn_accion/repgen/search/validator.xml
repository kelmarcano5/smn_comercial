<?xml version='1.0' encoding='ISO-8859-1'?>
<validator id='repgen.filter' onerror='/action/error/validation/ajax'>

	<parameter id='fdesde' type='date' required='false' label='Fecha desde'/>
	<parameter id='fhasta' type='date' required='false' label='Fecha hasta'/>
	
	<parameter id='acc_codigo' type='varchar' required='false' label='${lbl:b_code}' maxlen='10'/>
	<parameter id='acc_descripcion' type='varchar' required='false' label='${lbl:b_description}' maxlen='100'/>
	<parameter id='acc_require_seguimiento' type='varchar' required='false' label='${lbl:b_required_day}' maxlen='1'/>
	<parameter id='acc_dias_seguimiento' type='integer' required='false' label='${lbl:b_followup_days}' maxlen='10'/>
	<parameter id='acc_paso_rf' type='integer' required='false' label='${lbl:b_pass}' maxlen='10'/>
	<parameter id='acc_estatus' type='varchar' required='false' label='${lbl:b_status}' maxlen='2'/>
	<parameter id='acc_vigencia' type='date' required='false' label='${lbl:b_vigency}' maxlen='10'/>

	<custom-validator
		classname='dinamica.validators.SQLPatternTransformer'
		parameter='acc_codigo'
		rule='contains' />

	<custom-validator
		classname='dinamica.validators.SQLPatternTransformer'
parameter='acc_descripcion'
		rule='contains' />

	<custom-validator
		classname='dinamica.validators.SQLPatternTransformer'
		parameter='acc_require_seguimiento'
		rule='contains' />

	<custom-validator
		classname='dinamica.validators.SQLPatternTransformer'
		parameter='acc_estatus'
		rule='contains' />


	<custom-validator
		classname='dinamica.validators.DuplicatedKeyValidator'
			on-error-label='${lbl:b_record_not_duplicated}.'
			sql='buscarCodigo.sql'
			id='acc_codigo'/>

	<custom-validator
		classname='dinamica.validators.DuplicatedKeyValidator'
			on-error-label='${lbl:b_record_not_duplicated}.'
			sql='buscarDescripcion.sql'
			id='acc_descripcion'/>



	<custom-validator
			classname='dinamica.validators.ArrayNotEmptyValidator'
			on-error-label='Seleccione al menos un campo para la generación del reporte.'
			parameter-name='field_id' 
			id='field_id' />

	<custom-validator 
			classname='dinamica.validators.ArrayToRecordset'
			paramName='field_id' 
			recordsetId='fields' 
			colName='field_id' 
			colType='integer' />
				
</validator>
