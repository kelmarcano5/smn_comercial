<?xml version='1.0' encoding='ISO-8859-1'?>
<config nodb="true">

	<summary>
		Generar reporte generico PDF
	</summary>

	<log>false</log>

	<transaction>
		<classname>dinamica.GenericTransaction</classname>
		<validator>false</validator>
		<transaction>false</transaction>
		<jdbc-log>false</jdbc-log>
		<recordset id="query-smnaccion.sql" source="session" scope="transaction" />
	</transaction>

	<output>
		<classname>dinamica.PDFGenericReport</classname>
	</output>
	
	<pdf-title>${lbl:b_action}</pdf-title>
	<pdf-logo url='/images/logo-simone-pdf.png' scale='100' />
	<pdf-file-name>${lbl:b_action}.pdf</pdf-file-name>

	<pdf-report 
		pageSize="letter" 
		rotate="false"
		footer="false" 
		header="true">
		<record recordset='query-smnaccion.sql' width='100' spacingBefore='40'>
			<col name='acc_codigo' title='${lbl:b_code}' width='12' align='left' />
			<col name='acc_descripcion' title='${lbl:b_description}' width='12' align='left' />
			<col name='acc_require_seguimiento_combo' title='${lbl:b_required_day}' width='12' align='left' />
			<col name='acc_dias_seguimiento' title='${lbl:b_followup_days}' width='12' align='left'  />
			<col name='pas_descripcion_combo' title='${lbl:b_pass}' width='12' align='left'  />
			<col name='acc_estatus_combo' title='${lbl:b_status}' width='12' align='left' />
			<col name='acc_vigencia' title='${lbl:b_vigency}' width='12' align='left' format='dd-MM-yyyy' />
			<col name='acc_fecha_registro' title='${lbl:b_store_date}' width='12' align='left' format='dd-MM-yyyy' />

		</record>

	</pdf-report>
</config>
