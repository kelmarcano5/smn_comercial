<?xml version='1.0' encoding='ISO-8859-1'?>
<config nodb="true">

	<summary>
		Generar reporte generico PDF
	</summary>

	<log>false</log>

	<transaction>
		<classname>dinamica.GenericTransaction</classname>
		<validator>false</validator>
		<transaction>false</transaction>
		<jdbc-log>false</jdbc-log>
		<recordset id="query-smnsubcentrofacturacion.sql" source="session" scope="transaction" />
		<recordset id="filter.params" source="session" scope="transaction" />
	</transaction>

	<output>
		<classname>dinamica.PDFGenericReport</classname>
	</output>
	
	<pdf-title>${lbl:b_sub_centro_facturacion}</pdf-title>
	<pdf-logo url='/images/logo-simone-pdf.png' scale='100' align="left" />
	<pdf-file-name>${lbl:b_sub_centro_facturacion}.pdf</pdf-file-name>

	<pdf-report pageSize="letter" rotate="false" footer="true" header="true">
		<record recordset='filter.params' title='${lbl:b_filter_find}' noFilterMsg='-- ${lbl:b_all_message} --' width='55' spacingBefore='15'>
			<col name='smn_rol_id' title='${lbl:b_rol}'  format='######' align='left' />
			<col name='smn_usuario_rf' title='${lbl:b_user}'  format='######' align='left' />
			<col name='smn_corporacion_rf' title='${lbl:b_corporations}'  format='######' align='left' />
			<col name='scf_fecha_registro_ini' title='${lbl:b_store_date}'  format='dd-MM-yyyy' align='left' />
			<col name='scf_fecha_registro_fin' title='${lbl:b_store_date}'  format='dd-MM-yyyy' align='left' />

		</record>
		<record recordset='query-smnsubcentrofacturacion.sql' width='100' spacingBefore='10'>
			<col name='smn_rol_id_combo' title='${lbl:b_rol}' width='16' align='left' format='######' />
			<col name='smn_usuario_rf_combo' title='${lbl:b_user}' width='16' align='left' format='######' />
			<col name='smn_corporacion_rf_combo' title='${lbl:b_corporations}' width='16' align='left' format='######' />
			<col name='scf_estatus_combo' title='${lbl:b_status}' width='16' align='left' />
			<col name='scf_vigencia' title='${lbl:b_validation_date}' width='16' align='left' format='dd-MM-yyyy' />
			<col name='scf_fecha_registro' title='${lbl:b_store_date}' width='16' align='left' format='dd-MM-yyyy' />

		</record>

	</pdf-report>
</config>
