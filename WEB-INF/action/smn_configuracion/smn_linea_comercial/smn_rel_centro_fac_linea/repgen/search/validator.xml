<?xml version='1.0' encoding='ISO-8859-1'?>
<validator id='repgen.filter' onerror='/action/error/validation/ajax'>

	<parameter id='fdesde' type='date' required='false' label='Fecha desde'/>
	<parameter id='fhasta' type='date' required='false' label='Fecha hasta'/>
	
	<parameter id='smn_centro_facturacion_id_name' type='varchar' required='false' label='${lbl:b_centro_facturacion}'/>
	<parameter id='smn_centro_facturacion_id' type='integer' required='false' label='${lbl:b_centro_facturacion}' maxlen='10'/>
	<parameter id='smn_linea_comercial_id_name' type='varchar' required='false' label='${lbl:b_linea_comercial}'/>
	<parameter id='smn_linea_comercial_id' type='integer' required='false' label='${lbl:b_linea_comercial}' maxlen='10'/>

	<custom-validator
		classname='dinamica.validators.SQLPatternTransformer'
		parameter='smn_centro_facturacion_id_name'
		rule='contains' />

	<custom-validator
		classname='dinamica.validators.SQLPatternTransformer'
		parameter='smn_linea_comercial_id_name'
		rule='contains' />



	<custom-validator
			classname='dinamica.validators.ArrayNotEmptyValidator'
			on-error-label='Seleccione al menos un campo para la generación del reporte.'
			parameter-name='field_id' 
			id='field_id' />

	<custom-validator 
			classname='dinamica.validators.ArrayToRecordset'
			paramName='field_id' 
			recordsetId='fields' 
			colName='field_id' 
			colType='integer' />
				
</validator>
