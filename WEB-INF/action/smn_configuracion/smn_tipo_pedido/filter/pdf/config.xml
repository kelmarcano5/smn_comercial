<?xml version='1.0' encoding='ISO-8859-1'?>
<config nodb="true">

	<summary>
		Generar reporte generico PDF
	</summary>

	<log>false</log>

	<transaction>
		<classname>dinamica.GenericTransaction</classname>
		<validator>false</validator>
		<transaction>false</transaction>
		<jdbc-log>false</jdbc-log>
		<recordset id="query-smntipopedido.sql" source="session" scope="transaction" />
		<recordset id="filter.params" source="session" scope="transaction" />
	</transaction>

	<output>
		<classname>dinamica.PDFGenericReport</classname>
	</output>
	
	<pdf-title>${lbl:b_order_type}</pdf-title>
	<pdf-logo url='/images/logo-simone-pdf.png' scale='100' align="left" />
	<pdf-file-name>${lbl:b_order_type}.pdf</pdf-file-name>

	<pdf-report pageSize="letter" rotate="false" footer="true" header="true">
		<record recordset='filter.params' title='${lbl:b_filter_find}' noFilterMsg='-- ${lbl:b_all_message} --' width='55' spacingBefore='15'>
			<col name='tpp_codigo' title='${lbl:b_code}'  align='left' />
			<col name='tpp_descripcion' title='${lbl:b_description}'  align='left' />
			<col name='tpp_estatus' title='${lbl:b_estatus}'  align='left' />
			<col name='tpp_fecha_registro_ini' title='${lbl:b_store_date}'  format='dd-MM-yyyy' align='left' />
			<col name='tpp_fecha_registro_fin' title='${lbl:b_store_date}'  format='dd-MM-yyyy' align='left' />

		</record>
		<record recordset='query-smntipopedido.sql' width='100' spacingBefore='10'>
			<col name='tpp_codigo' title='${lbl:b_code}' width='20' align='left' />
			<col name='tpp_descripcion' title='${lbl:b_description}' width='20' align='left' />
			<col name='tpp_estatus_combo' title='${lbl:b_estatus}' width='20' align='left' />
			<col name='tpp_fecha_vigencia' title='${lbl:b_effective_date}' width='20' align='left' format='dd-MM-yyyy' />
			<col name='tpp_fecha_registro' title='${lbl:b_store_date}' width='20' align='left' format='dd-MM-yyyy' />

		</record>

	</pdf-report>
</config>
