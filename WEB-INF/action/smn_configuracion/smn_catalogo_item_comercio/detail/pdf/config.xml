<?xml version='1.0' encoding='ISO-8859-1'?>
<config nodb="true">

	<summary>
		Generar reporte generico PDF
	</summary>

	<log>false</log>

	<transaction>
		<classname>dinamica.GenericTransaction</classname>
		<validator>false</validator>
		<transaction>false</transaction>
		<jdbc-log>false</jdbc-log>
		<recordset id="query.sql" source="session" scope="transaction" />

	</transaction>

	<output>
		<classname>dinamica.PDFGenericReport</classname>
	</output>
	
	<pdf-title>${lbl:b_catalog_item_commerce}</pdf-title>
	<pdf-logo url='/images/logo-simone-pdf.png' scale='100' />
	<pdf-file-name>${lbl:b_catalog_item_commerce}.pdf</pdf-file-name>

	<pdf-report pageSize="letter" rotate="false" footer="true" header="true">
		<record recordset='query.sql' title='${lbl:b_catalog_item_commerce}' width='60' spacingBefore='40'>
			<col name='cic_origen' title='${lbl:b_origen}' align='left' />
			<col name='smn_cliente_rf' title='${lbl:b_customer}' align='left' format='######' />
			<col name='smn_item_rf' title='${lbl:b_item}' align='left' format='######' />
			<col name='smn_unidad_medida_rf' title='${lbl:b_measurement_unit}' align='left' format='######' />
			<col name='cic_tiempo_sug_preparacion' title='${lbl:b_time_suggerest_prepared}' align='right' format='######' />
			<col name='smn_categoria_menu_id' title='${lbl:b_menu_category}' align='left' />
			<col name='smn_categoria_item_id_a' title='${lbl:b_item_category}' align='left'/>
			<col name='smn_categoria_item_id_b' title='${lbl:b_item_category}' align='left'/>
			<col name='smn_baremos_rf' title='${lbl:b_baremo}' align='left' format='######' />
			<col name='cic_fecha_registro' title='${lbl:b_store_date}' align='left' format='dd-MM-yyyy' />
		</record>


	</pdf-report>
</config>
